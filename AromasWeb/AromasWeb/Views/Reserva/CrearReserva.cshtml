@model AromasWeb.Abstracciones.ModeloUI.Reserva

@{
    ViewBag.Title = "Reservar Mesa";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-calendar-plus"></i>
                Nueva Reserva
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Reservar una
                <span class="hero-title-accent">Mesa</span>
            </h1>
            <p class="hero-subtitle">
                Complete el formulario para hacer su reserva y disfrutar de una experiencia única
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="contact-section" style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("CrearReserva", "Reserva", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="contact-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <form class="contact-form">
                    <!-- Información del Cliente -->
                    <div style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); padding: 1.5rem 2rem; border-radius: 20px; margin-bottom: 2.5rem; box-shadow: var(--shadow-md);">
                        <h5 style="color: var(--dark-teal); margin: 0; display: flex; align-items: center; gap: 0.7rem; font-size: 1.2rem;">
                            <div style="width: 40px; height: 40px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-user"></i>
                            </div>
                            Sus Datos
                        </h5>
                    </div>

                    <!-- Nombre Completo -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user"></i>
                            Nombre Completo
                        </label>
                        @Html.EditorFor(model => model.NombreCliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Juan Pérez Rodríguez", required = "required" } })
                        @Html.ValidationMessageFor(model => model.NombreCliente, "", new { @class = "text-danger" })
                    </div>

                    <!-- Teléfono -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-phone"></i>
                            Teléfono de Contacto
                        </label>
                        @Html.EditorFor(model => model.TelefonoCliente, new { htmlAttributes = new { @class = "form-control", placeholder = "+506 0000-0000", required = "required" } })
                        @Html.ValidationMessageFor(model => model.TelefonoCliente, "", new { @class = "text-danger" })
                    </div>

                    <!-- Detalles de la Reserva -->
                    <div style="background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%); padding: 1.5rem 2rem; border-radius: 20px; margin: 2.5rem 0; box-shadow: var(--shadow-md);">
                        <h5 style="color: var(--dark-teal); margin: 0; display: flex; align-items: center; gap: 0.7rem; font-size: 1.2rem;">
                            <div style="width: 40px; height: 40px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            Detalles de la Reserva
                        </h5>
                    </div>

                    <!-- Fecha y Hora -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar"></i>
                                Fecha
                            </label>
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", type = "date", min = DateTime.Now.ToString("yyyy-MM-dd"), required = "required" } })
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-clock"></i>
                                Hora
                            </label>
                            <select name="Hora" class="form-control" required>
                                <option value="">-- Selecciona una hora --</option>
                                <option value="11:00">11:00 AM</option>
                                <option value="11:30">11:30 AM</option>
                                <option value="12:00">12:00 PM</option>
                                <option value="12:30">12:30 PM</option>
                                <option value="13:00">1:00 PM</option>
                                <option value="13:30">1:30 PM</option>
                                <option value="14:00">2:00 PM</option>
                                <option value="14:30">2:30 PM</option>
                                <option value="18:00">6:00 PM</option>
                                <option value="18:30">6:30 PM</option>
                                <option value="19:00">7:00 PM</option>
                                <option value="19:30">7:30 PM</option>
                                <option value="20:00">8:00 PM</option>
                                <option value="20:30">8:30 PM</option>
                                <option value="21:00">9:00 PM</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Hora, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Cantidad de Personas -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-users"></i>
                            Número de Personas
                        </label>
                        <select name="CantidadPersonas" class="form-control" required>
                            <option value="1">1 persona</option>
                            <option value="2" selected>2 personas</option>
                            <option value="3">3 personas</option>
                            <option value="4">4 personas</option>
                            <option value="5">5 personas</option>
                            <option value="6">6 personas</option>
                            <option value="7">7 personas</option>
                            <option value="8">8 personas</option>
                            <option value="9">9 personas</option>
                            <option value="10">10 personas</option>
                            <option value="">10+ personas (contactar)</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.CantidadPersonas, "", new { @class = "text-danger" })
                    </div>

                    <!-- Observaciones -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-comment"></i>
                            Mensaje o Solicitudes Especiales
                        </label>
                        <textarea name="Observaciones" class="form-control" rows="4" placeholder="Cuéntanos más sobre tu reserva (alergias, preferencias de mesa, celebraciones especiales, etc.)" style="resize: vertical;"></textarea>
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray); font-size: 0.85rem;">
                            <i class="fas fa-info-circle" style="color: var(--teal);"></i>
                            Opcional - Máximo 500 caracteres
                        </small>
                    </div>

                    <!-- Información Importante -->
                    <div class="feature-card" style="margin: 2rem 0; padding: 2rem; background: linear-gradient(135deg, rgba(32, 116, 118, 0.08) 0%, rgba(98, 170, 118, 0.08) 100%); border-left: 4px solid var(--teal); border-radius: 15px;">
                        <h6 style="color: var(--dark-teal); margin: 0 0 1.2rem; font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.1rem;">
                            <i class="fas fa-info-circle" style="color: var(--coral);"></i> Información Importante
                        </h6>
                        <ul style="margin: 0; padding-left: 1.5rem; color: var(--gray); line-height: 2;">
                            <li style="margin-bottom: 0.5rem;">
                                <i class="fas fa-check" style="color: var(--green); margin-right: 0.5rem;"></i>
                                Recibirá una confirmación por teléfono en las próximas horas
                            </li>
                            <li style="margin-bottom: 0.5rem;">
                                <i class="fas fa-check" style="color: var(--green); margin-right: 0.5rem;"></i>
                                Por favor llegue 10 minutos antes de su hora reservada
                            </li>
                            <li style="margin-bottom: 0.5rem;">
                                <i class="fas fa-check" style="color: var(--green); margin-right: 0.5rem;"></i>
                                Para grupos mayores a 10 personas, contacte directamente al restaurante
                            </li>
                            <li>
                                <i class="fas fa-check" style="color: var(--green); margin-right: 0.5rem;"></i>
                                Las reservas se mantienen por 15 minutos después de la hora programada
                            </li>
                        </ul>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2.5rem;">
                        <button type="button" class="btn btn-secondary btn-3d" onclick="window.location.href='@Url.Action("MisReservas", "Cliente")'" style="flex: 1; padding: 1rem 2rem;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1; padding: 1rem 2rem;">
                            <span><i class="fas fa-check"></i> Enviar Reserva</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/reserva.js"></script>
}