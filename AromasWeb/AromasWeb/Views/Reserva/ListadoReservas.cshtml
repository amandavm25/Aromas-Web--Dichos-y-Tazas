@model List<AromasWeb.Abstracciones.ModeloUI.Reserva>

@{
    ViewBag.Title = "Gestión de Reservas";
    var totalReservas = Model?.Count ?? 0;
    var reservasHoy = Model?.Where(r => r.EsHoy).ToList() ?? new List<AromasWeb.Abstracciones.ModeloUI.Reserva>();
    var reservasProximas = Model?.Where(r => r.EsFutura && r.DiasHastaReserva <= 7).Count() ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-calendar-alt"></i>
                Gestión de Reservas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Reservas de
                <span class="hero-title-accent">Mesas</span>
            </h1>
            <p class="hero-subtitle">
                Administra todas las reservas del negocio en tiempo real
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoReservas", "Reserva")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre de cliente o teléfono..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("RegistrarReservaCliente", "Reserva")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Nueva Reserva</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left; padding: 1.5rem;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold);"></i>
                    Mostrando resultados para <strong style="color: var(--gold);">"@ViewBag.Buscar"</strong>
                    - <strong>@totalReservas</strong> reserva(s) encontrada(s)
                </p>
            </div>
        }

        <!-- Filtros -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold);"></i> Filtrar por estado:
                </span>
                <a href="@Url.Action("ListadoReservas", "Reserva")"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todas</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Pendiente" })"
                   class="btn @(ViewBag.FiltroEstado == "Pendiente" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-clock"></i> Pendientes</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Confirmada" })"
                   class="btn @(ViewBag.FiltroEstado == "Confirmada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Confirmadas</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Completada" })"
                   class="btn @(ViewBag.FiltroEstado == "Completada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-double"></i> Completadas</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Cancelada" })"
                   class="btn @(ViewBag.FiltroEstado == "Cancelada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> Canceladas</span>
                </a>
            </div>
        </div>

        <!-- Layout Principal: Tabla + Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDeReservas" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-olive) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Cliente</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Teléfono</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Personas</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var reserva in Model)
                                {
                                    <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1); transition: all 0.3s;">
                                        <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@reserva.IdReserva</td>
                                        <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 500;">
                                            <div style="display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                                                @reserva.NombreCliente
                                                @if (reserva.EsHoy)
                                                {
                                                    <span style="background: var(--gold); color: white; padding: 0.2rem 0.6rem; border-radius: 10px; font-size: 0.75rem; font-weight: 600;">HOY</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(reserva.Observaciones))
                                                {
                                                    <i class="fas fa-comment" style="color: var(--gold-bright);" title="Tiene observaciones"></i>
                                                }
                                            </div>
                                        </td>
                                        <td style="padding: 1.2rem; color: var(--charcoal);">@reserva.TelefonoCliente</td>
                                        <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">@reserva.FechaFormateada</td>
                                        <td style="padding: 1.2rem; color: var(--gold); font-weight: 700;">@reserva.HoraFormateada</td>
                                        <td style="padding: 1.2rem; color: var(--charcoal); text-align: center;">
                                            <span style="background: var(--cream); padding: 0.3rem 0.8rem; border-radius: 10px; font-weight: 600;">
                                                <i class="fas fa-users" style="color: var(--olive-green);"></i> @reserva.CantidadPersonas
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem;">
                                            <span style="background: @reserva.ColorEstado; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.4rem;">
                                                <i class="fas @reserva.IconoEstado"></i> @reserva.Estado
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                            @if (reserva.PuedeModificar)
                                            {
                                                <button type="button"
                                                        class="btn btn-sm"
                                                        onclick="window.location.href='@Url.Action("EditarReserva", "Reserva", new { id = reserva.IdReserva })'"
                                                        style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                        title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            }
                                            <button type="button"
                                                    class="btn btn-sm btn-detalles"
                                                    data-id="@reserva.IdReserva"
                                                    data-cliente="@reserva.NombreCliente"
                                                    data-telefono="@reserva.TelefonoCliente"
                                                    data-fecha="@reserva.FechaFormateada"
                                                    data-hora="@reserva.HoraFormateada"
                                                    data-personas="@reserva.CantidadPersonas"
                                                    data-estado="@reserva.Estado"
                                                    data-observaciones="@(reserva.Observaciones ?? "")"
                                                    style="background: #17a2b8; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetallesReserva"
                                                    title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            @if (reserva.PuedeCancelar)
                                            {
                                                <button type="button"
                                                        class="btn btn-sm btn-eliminar"
                                                        data-id="@reserva.IdReserva"
                                                        data-cliente="@reserva.NombreCliente"
                                                        data-fecha="@reserva.FechaFormateada"
                                                        data-hora="@reserva.HoraFormateada"
                                                        data-estado="@reserva.Estado"
                                                        style="background: #dc3545; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalCancelarReserva"
                                                        title="Cancelar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" style="padding: 3rem; text-align: center; color: var(--charcoal); opacity: 0.7;">
                                        <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block; opacity: 0.3;"></i>
                                        <p style="margin: 0; font-size: 1.1rem;">No se encontraron reservas</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div class="admin-table-footer">
                    <div class="admin-table-footer-text">
                        Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                    </div>

                    <div class="pagination-buttons">
                        <button id="btnAnterior" class="pagination-btn">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </button>
                        <button id="btnSiguiente" class="pagination-btn">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Estadísticas (Derecha) -->
            <div style="position: sticky; top: 100px;">

                <!-- Reservas de Hoy -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden; margin-bottom: 1.5rem;">
                    <div style="background: linear-gradient(135deg, var(--gold) 0%, var(--gold-bright) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-calendar-day" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Hoy</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Reservas del día</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 400px; overflow-y: auto;">
                        @if (reservasHoy.Any())
                        {
                            @foreach (var reserva in reservasHoy.OrderBy(r => r.Hora))
                            {
                                <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                                    <strong style="color: var(--dark-green); font-size: 0.95rem;">@reserva.NombreCliente</strong>
                                    <div style="display: flex; justify-content: space-between; margin-top: 0.5rem;">
                                        <small style="color: var(--charcoal); opacity: 0.7;">@reserva.HoraFormateada</small>
                                        <small style="color: var(--olive-green); font-weight: 600;">@reserva.CantidadPersonas personas</small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div style="padding: 2rem; text-align: center; color: var(--charcoal); opacity: 0.5;">
                                <i class="fas fa-calendar-times" style="font-size: 2rem; margin-bottom: 0.5rem; display: block;"></i>
                                <p style="margin: 0; font-size: 0.9rem;">No hay reservas para hoy</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Próximas Reservas -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: var(--olive-green); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-clock" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Próximas</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Próximos 7 días</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1.5rem; text-align: center;">
                        <h2 style="font-size: 3rem; color: var(--olive-green); margin: 0; font-family: var(--font-primary);">@reservasProximas</h2>
                        <p style="color: var(--charcoal); opacity: 0.7; margin: 0.5rem 0 0;">reservas próximas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesReserva" />
<partial name="_ModalCancelarReserva" />

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/reserva.js"></script>
}