@model List<AromasWeb.Abstracciones.ModeloUI.Reserva>

@{
    ViewBag.Title = "Gestión de Reservas";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-calendar-alt"></i>
                Gestión de Reservas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Reservas de
                <span class="hero-title-accent">Mesas</span>
            </h1>
            <p class="hero-subtitle">
                Administra todas las reservas del negocio en tiempo real
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoReservas", "Reserva")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--teal); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre de cliente o teléfono..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("RegistrarReservaCliente", "Reserva")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Nueva Reserva</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left; padding: 1.5rem;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-teal); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                    Mostrando resultados para <strong style="color: var(--coral);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> reserva(s) encontrada(s)
                </p>
            </div>
        }

        <!-- Filtros -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-teal); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--coral);"></i> Filtrar por estado:
                </span>
                <a href="@Url.Action("ListadoReservas", "Reserva")"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todas</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Pendiente" })"
                   class="btn @(ViewBag.FiltroEstado == "Pendiente" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-clock"></i> Pendientes</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Confirmada" })"
                   class="btn @(ViewBag.FiltroEstado == "Confirmada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Confirmadas</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Completada" })"
                   class="btn @(ViewBag.FiltroEstado == "Completada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-double"></i> Completadas</span>
                </a>
                <a href="@Url.Action("ListadoReservas", "Reserva", new { filtroEstado = "Cancelada" })"
                   class="btn @(ViewBag.FiltroEstado == "Cancelada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> Canceladas</span>
                </a>
            </div>
        </div>

        <!-- Layout Principal: Tabla + Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDeReservas" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Cliente</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Teléfono</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Personas</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var reservasDemo = new List<dynamic>
                                                        {
                                                        new { Id = 1, Cliente = "María González Rodríguez", Telefono = "8888-1234", Fecha = "29/11/2025", Hora = "19:30", Personas = 4, Estado = "Confirmada", Observaciones = "Mesa cerca de la ventana", EsHoy = false },
                                                        new { Id = 2, Cliente = "Carlos Jiménez Mora", Telefono = "8888-2345", Fecha = "28/11/2025", Hora = "14:00", Personas = 2, Estado = "Confirmada", Observaciones = "", EsHoy = true },
                                                        new { Id = 3, Cliente = "Ana Patricia Vargas", Telefono = "8888-3456", Fecha = "02/12/2025", Hora = "20:00", Personas = 6, Estado = "Pendiente", Observaciones = "Cumpleaños", EsHoy = false },
                                                        new { Id = 4, Cliente = "Roberto Fernández", Telefono = "8888-4567", Fecha = "27/11/2025", Hora = "12:30", Personas = 3, Estado = "Confirmada", Observaciones = "", EsHoy = false },
                                                        new { Id = 5, Cliente = "Laura Martínez", Telefono = "8888-5678", Fecha = "25/11/2025", Hora = "18:00", Personas = 2, Estado = "Completada", Observaciones = "Alergia al gluten", EsHoy = false },
                                                        new { Id = 6, Cliente = "José Luis Ramírez", Telefono = "8888-6789", Fecha = "30/11/2025", Hora = "13:00", Personas = 4, Estado = "Confirmada", Observaciones = "", EsHoy = false },
                                                        new { Id = 7, Cliente = "Sofía Hernández", Telefono = "8888-7890", Fecha = "04/12/2025", Hora = "20:30", Personas = 8, Estado = "Pendiente", Observaciones = "Evento especial", EsHoy = false },
                                                        new { Id = 8, Cliente = "Diego Alvarado", Telefono = "8888-8901", Fecha = "22/11/2025", Hora = "19:00", Personas = 5, Estado = "Cancelada", Observaciones = "", EsHoy = false }
                                                        };
                            }

                            @foreach (var reserva in reservasDemo)
                            {
                                var colorEstado = reserva.Estado switch
                                {
                                    "Pendiente" => "#f39c12",
                                    "Confirmada" => "#27ae60",
                                    "Completada" => "#3498db",
                                    "Cancelada" => "#e74c3c",
                                    _ => "#95a5a6"
                                };

                                var iconoEstado = reserva.Estado switch
                                {
                                    "Pendiente" => "fa-clock",
                                    "Confirmada" => "fa-check-circle",
                                    "Completada" => "fa-check-double",
                                    "Cancelada" => "fa-times-circle",
                                    _ => "fa-question-circle"
                                };

                                <tr style="border-bottom: 1px solid rgba(32, 116, 118, 0.1); transition: all 0.3s;">
                                    <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 600;">@reserva.Id</td>
                                    <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 500;">
                                        <div style="display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                                            @reserva.Cliente
                                            @if (reserva.EsHoy)
                                            {
                                                <span style="background: var(--coral); color: white; padding: 0.2rem 0.6rem; border-radius: 10px; font-size: 0.75rem; font-weight: 600;">HOY</span>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(reserva.Observaciones))
                                            {
                                                <i class="fas fa-comment" style="color: var(--amber);" title="Tiene observaciones"></i>
                                            }
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--black);">@reserva.Telefono</td>
                                    <td style="padding: 1.2rem; color: var(--black); font-weight: 600;">@reserva.Fecha</td>
                                    <td style="padding: 1.2rem; color: var(--coral); font-weight: 700;">@reserva.Hora</td>
                                    <td style="padding: 1.2rem; color: var(--black); text-align: center;">
                                        <span style="background: var(--cream); padding: 0.3rem 0.8rem; border-radius: 10px; font-weight: 600;">
                                            <i class="fas fa-users" style="color: var(--teal);"></i> @reserva.Personas
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span style="background: @colorEstado; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.4rem;">
                                            <i class="fas @iconoEstado"></i> @reserva.Estado
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarReserva", "Reserva", new { id = reserva.Id })'"
                                                style="background: var(--teal); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-detalles"
                                                data-id="@reserva.Id"
                                                data-cliente="@reserva.Cliente"
                                                data-telefono="@reserva.Telefono"
                                                data-fecha="@reserva.Fecha"
                                                data-hora="@reserva.Hora"
                                                data-personas="@reserva.Personas"
                                                data-estado="@reserva.Estado"
                                                data-observaciones="@reserva.Observaciones"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesReserva">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-eliminar"
                                                data-id="@reserva.Id"
                                                data-cliente="@reserva.Cliente"
                                                data-fecha="@reserva.Fecha"
                                                data-hora="@reserva.Hora"
                                                data-estado="@reserva.Estado"
                                                style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEliminarReserva">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(32, 116, 118, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-teal); font-size: 0.95rem;">
                        Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">8</span></strong> de <strong id="totalRecords">8</strong> reservas
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Estadísticas (Derecha) -->
            <div style="position: sticky; top: 100px;">

                <!-- Reservas de Hoy -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden; margin-bottom: 1.5rem;">
                    <div style="background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-calendar-day" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Hoy</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Reservas del día</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 400px; overflow-y: auto;">
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--coral);">
                            <strong style="color: var(--dark-teal); font-size: 0.95rem;">Carlos Jiménez</strong>
                            <div style="display: flex; justify-content: space-between; margin-top: 0.5rem;">
                                <small style="color: var(--gray);">14:00</small>
                                <small style="color: var(--teal); font-weight: 600;">2 personas</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesReserva" />
<partial name="_ModalCancelarReserva" />

@section Scripts {
    <script src="~/js/reserva.js"></script>
}