@model AromasWeb.Abstracciones.ModeloUI.Reserva

@{
    ViewBag.Title = "Editar Reserva";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar
                <span class="hero-title-accent">Reserva</span>
            </h1>
            <p class="hero-subtitle">
                Modifica los detalles de la reserva del cliente
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="contact-section" style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("EditarReserva", "Reserva", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdReserva)
            @Html.HiddenFor(model => model.IdCliente)

            <div class="contact-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <form class="contact-form">
                    <!-- Información del Cliente -->
                    <div style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); padding: 1.5rem 2rem; border-radius: 20px; margin-bottom: 2.5rem; box-shadow: var(--shadow-md);">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem; font-size: 1.2rem;">
                            <div style="width: 40px; height: 40px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-user"></i>
                            </div>
                            Datos del Cliente
                        </h5>
                    </div>

                    <!-- Cliente (Solo lectura) -->
                    <div class="feature-card" style="margin: 0 0 2.5rem; padding: 2rem; background: var(--white); border-radius: 15px; box-shadow: var(--shadow-sm);">
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                            <div>
                                <label style="color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.7rem;">
                                    <i class="fas fa-user" style="color: var(--teal);"></i> Nombre del Cliente
                                </label>
                                <p style="margin: 0; color: var(--dark-teal); font-weight: 600; font-size: 1.1rem;">@Model.NombreCliente</p>
                            </div>
                            <div>
                                <label style="color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.7rem;">
                                    <i class="fas fa-phone" style="color: var(--teal);"></i> Teléfono
                                </label>
                                <p style="margin: 0; color: var(--dark-teal); font-weight: 600; font-size: 1.1rem;">@Model.TelefonoCliente</p>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles de la Reserva -->
                    <div style="background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%); padding: 1.5rem 2rem; border-radius: 20px; margin: 0 0 2.5rem; box-shadow: var(--shadow-md);">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem; font-size: 1.2rem;">
                            <div style="width: 40px; height: 40px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            Detalles de la Reserva
                        </h5>
                    </div>

                    <!-- Fecha y Hora -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar"></i>
                                Fecha de la Reserva
                            </label>
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", type = "date", min = DateTime.Now.ToString("yyyy-MM-dd") } })
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-clock"></i>
                                Hora de la Reserva
                            </label>
                            <select name="Hora" class="form-control" required>
                                <option value="">-- Selecciona una hora --</option>
                                <option value="11:00">11:00 AM</option>
                                <option value="11:30">11:30 AM</option>
                                <option value="12:00">12:00 PM</option>
                                <option value="12:30">12:30 PM</option>
                                <option value="13:00">1:00 PM</option>
                                <option value="13:30">1:30 PM</option>
                                <option value="14:00">2:00 PM</option>
                                <option value="14:30">2:30 PM</option>
                                <option value="18:00">6:00 PM</option>
                                <option value="18:30">6:30 PM</option>
                                <option value="19:00">7:00 PM</option>
                                <option value="19:30">7:30 PM</option>
                                <option value="20:00">8:00 PM</option>
                                <option value="20:30">8:30 PM</option>
                                <option value="21:00">9:00 PM</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Hora, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Cantidad de Personas -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-users"></i>
                            Cantidad de Personas
                        </label>
                        @Html.EditorFor(model => model.CantidadPersonas, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "20", placeholder = "1" } })
                        @Html.ValidationMessageFor(model => model.CantidadPersonas, "", new { @class = "text-danger" })
                    </div>

                    <!-- Estado -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-check-circle"></i>
                            Estado de la Reserva
                        </label>
                        <select name="Estado" class="form-control" required>
                            <option value="Pendiente" @@(Model.Estado == "Pendiente" ? "selected" : "")>Pendiente</option>
                            <option value="Confirmada" @@(Model.Estado == "Confirmada" ? "selected" : "")>Confirmada</option>
                            <option value="Completada" @@(Model.Estado == "Completada" ? "selected" : "")>Completada</option>
                            <option value="Cancelada" @@(Model.Estado == "Cancelada" ? "selected" : "")>Cancelada</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>

                    <!-- Observaciones -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-comment"></i>
                            Observaciones del Cliente
                        </label>
                        <textarea name="Observaciones" class="form-control" rows="4" placeholder="Notas especiales, alergias, preferencias, etc." style="resize: vertical;">@Model.Observaciones</textarea>
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray); font-size: 0.85rem;">
                            <i class="fas fa-info-circle" style="color: var(--teal);"></i>
                            Máximo 500 caracteres
                        </small>
                    </div>

                    <!-- Información de Registro -->
                    <div class="feature-card" style="margin: 2rem 0; padding: 1.5rem; background: var(--white); border-radius: 12px; box-shadow: var(--shadow-sm);">
                        <label style="color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.7rem;">
                            <i class="fas fa-calendar-plus" style="color: var(--teal);"></i> Fecha de Creación
                        </label>
                        <p style="margin: 0; color: var(--dark-teal); font-weight: 600; font-size: 1.1rem;">@Model.FechaCreacionFormateada</p>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2.5rem;">
                        <button type="button" class="btn btn-secondary btn-3d" onclick="window.location.href='@Url.Action("ListadoReservas", "Reserva")'" style="flex: 1; padding: 1rem 2rem;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1; padding: 1rem 2rem;">
                            <span><i class="fas fa-check"></i> Guardar Cambios</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="~/js/reserva.js"></script>
    <script>
        // Preseleccionar la hora actual
        document.addEventListener('DOMContentLoaded', function() {
            const horaActual = '@Model.HoraFormateada';
            const selectHora = document.querySelector('select[name="Hora"]');
            
            if (selectHora && horaActual) {
                for (let i = 0; i < selectHora.options.length; i++) {
                    if (selectHora.options[i].value === horaActual) {
                        selectHora.options[i].selected = true;
                        break;
                    }
                }
            }
        });
    </script>
}