@{
    var usuarioTipo = Context.Session.GetString("UsuarioTipo");
    var usuarioNombre = Context.Session.GetString("UsuarioNombre");
    var usuarioCorreo = Context.Session.GetString("UsuarioCorreo");
    var estaAutenticado = !string.IsNullOrEmpty(usuarioTipo);
    var esAdmin = usuarioTipo == "admin";
    var esCliente = usuarioTipo == "cliente";
    var esEmpleado = usuarioTipo == "empleado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TSURÚ Cocina y Jardín</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;800&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<!-- Loader -->
<div class="loader-wrapper">
    <div class="tsuru-loader">
        <div class="leaf-container">
            <div class="leaf"></div>
            <div class="leaf"></div>
            <div class="leaf"></div>
        </div>
        <p>TSURÚ</p>
    </div>
</div>

<body>
    <!-- Navbar -->
    <nav class="navbar" id="navbar">
        <div class="container">
            <a href="/" class="logo">
                <div class="logo-circle">
                    <span class="logo-main">TSURÚ</span>
                    <span class="logo-sub">cocina y jardín</span>
                </div>
            </a>

            <ul class="nav-menu" id="navMenu">
                @if (esAdmin)
                {
                    <!-- MENÚ PARA ADMINISTRADOR -->
                    <li><a href="/" class="nav-link">Inicio</a></li>

                    <!-- Dropdown de Insumos -->
                    <li class="nav-dropdown">
                        <a href="#" class="nav-link">Insumos</a>
                        <ul class="dropdown-menu">
                            <li><a href="/Insumo/ListadoInsumos">Insumos</a></li>
                            <li><a href="/CategoriaInsumo/ListadoCategoriasInsumos">Categorías de Insumos</a></li>
                        </ul>
                    </li>

                    <!-- Dropdown de Recetas -->
                    <li class="nav-dropdown">
                        <a href="#" class="nav-link">Recetas</a>
                        <ul class="dropdown-menu">
                            <li><a href="/Receta/ListadoRecetas">Recetas</a></li>
                            <li><a href="/CategoriaReceta/ListadoCategoriasRecetas">Categorías de Recetas</a></li>
                        </ul>
                    </li>

                    <!-- Dropdown de Promociones -->
                    <li class="nav-dropdown">
                        <a href="#" class="nav-link">Promociones</a>
                        <ul class="dropdown-menu">
                            <li><a href="/Promocion/ListadoPromociones">Promociones</a></li>
                            <li><a href="/TipoPromocion/ListadoTiposPromociones">Tipos de Promoción</a></li>
                        </ul>
                    </li>

                    <!-- Dropdown de Empleados -->
                    <li class="nav-dropdown">
                        <a href="#" class="nav-link">Empleados</a>
                        <ul class="dropdown-menu">
                            <li><a href="/Empleado/ListadoEmpleados">Empleados</a></li>
                            <li><a href="/HistorialTarifa/ListadoTarifas">Historial de Tarifas</a></li>
                            <li><a href="/Asistencia/ListadoAsistencias">Asistencias</a></li>
                            <li><a href="/Planilla/ListadoPlanillas">Planillas</a></li>
                            <li><a href="/SolicitudVacaciones/ListadoSolicitudes">Solicitudes de Vacaciones</a></li>
                        </ul>
                    </li>

                    <!-- Links directos -->
                    <li><a href="/Cliente/ListadoClientes" class="nav-link">Clientes</a></li>
                    <li><a href="/Reserva/ListadoReservas" class="nav-link">Reservas</a></li>
                    <li><a href="/Modulo/ListadoModulos" class="nav-link">Módulos</a></li>
                    <li><a href="/Rol/ListadoRoles" class="nav-link">Roles</a></li>
                    <li><a href="/Permiso/ListadoPermisos" class="nav-link">Permisos</a></li>
                    <li><a href="/Bitacora/ListadoBitacoras" class="nav-link">Auditoría</a></li>
                }
                else if (esEmpleado)
                {
                    <!-- MENÚ PARA EMPLEADO -->
                    <li><a href="/" class="nav-link">Inicio</a></li>
                    <li><a href="/HistorialTarifa/MiHistorial">Mi Historial de Tarifas</a></li>
                    <li><a href="/Planilla/MiPlanilla">Mis Planillas</a></li>
                    <li><a href="/SolicitudVacaciones/MisSolicitudes">Mis Vacaciones</a></li>
                }
                else
                {
                    <!-- MENÚ PARA CLIENTES Y NO AUTENTICADOS -->
                    <li><a href="/#inicio" class="nav-link">Inicio</a></li>
                    <li><a href="https://heyzine.com/flip-book/56d6bb9fd9.html" class="nav-link">Menú</a></li>
                    <li><a href="/#especialidades" class="nav-link">Especialidades</a></li>
                    <li><a href="/#galeria" class="nav-link">Galería</a></li>
                    <li><a href="/#testimonios" class="nav-link">Reseñas</a></li>
                }

                @if (estaAutenticado)
                {
                    <!-- SI ESTÁ AUTENTICADO -->
                    @if (esCliente)
                    {
                        <!-- Botón Mis Reservas solo para clientes -->
                        <li>
                            <a href="/Cliente/MisReservas" class="btn-nav" style="background: linear-gradient(135deg, var(--amber) 0%, var(--coral) 100%);">
                                <span>Mis Reservas</span>
                            </a>
                        </li>
                    }

                    <!-- Dropdown de perfil -->
                    <li class="nav-dropdown">
                        <a href="#" class="btn-nav" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%);">
                            <span>@usuarioNombre</span>
                        </a>
                        <ul class="dropdown-menu" style="right: 0; left: auto;">
                            <li style="padding: 0.75rem 1rem; border-bottom: 1px solid var(--gray-light); background: var(--cream);">
                                <small style="color: var(--gray); display: block;">Sesión iniciada como:</small>
                                <strong style="color: var(--dark-teal); font-size: 0.9rem;">@usuarioCorreo</strong>
                            </li>
                            @if (esCliente)
                            {
                                <li><a href="/Cliente/MiPerfil">Mi Perfil</a></li>
                                <li><a href="/Auth/CerrarSesion"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                            }
                            @if (esEmpleado)
                            {
                                <li><a href="/Auth/CerrarSesion"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                            }
                            @if (esAdmin)
                            {
                                <li><a href="/Auth/CerrarSesion"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <!-- SI NO ESTÁ AUTENTICADO -->
                    <!-- Botón Reservar Mesa para no autenticados -->
                    <li>
                        <a href="/Reserva/CrearReserva" class="btn btn-primary btn-elegant">
                            <i class="fas fa-calendar-check"></i>
                            <span>Reservar Mesa</span>
                        </a>
                    </li>

                    <!-- Botón Login -->
                    <li>
                        <a href="/Auth/Login" class="btn btn-primary btn-elegant">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Iniciar Sesión</span>
                        </a>
                    </li>
                }
            </ul>

            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <!-- Mensajes de TempData -->
        @if (TempData["Mensaje"] != null)
        {
            <div style="position: fixed; top: 100px; right: 20px; z-index: 10000; animation: slideInRight 0.5s ease;">
                <div style="background: linear-gradient(135deg, #27ae60, #229954); color: white; padding: 1.5rem 2rem; border-radius: 15px; box-shadow: 0 8px 32px rgba(0,0,0,0.2); display: flex; align-items: center; gap: 1rem; min-width: 300px;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem;"></i>
                    <span style="font-weight: 600;">@TempData["Mensaje"]</span>
                </div>
            </div>
            <script>
                setTimeout(function() {
                    var mensaje = document.querySelector('[style*="slideInRight"]');
                    if (mensaje) {
                        mensaje.style.animation = 'slideOutRight 0.5s ease';
                        setTimeout(function() { mensaje.remove(); }, 500);
                    }
                }, 4000);
            </script>
        }

        @if (TempData["Error"] != null)
        {
            <div style="position: fixed; top: 100px; right: 20px; z-index: 10000; animation: slideInRight 0.5s ease;">
                <div style="background: linear-gradient(135deg, #e74c3c, #c0392b); color: white; padding: 1.5rem 2rem; border-radius: 15px; box-shadow: 0 8px 32px rgba(0,0,0,0.2); display: flex; align-items: center; gap: 1rem; min-width: 300px;">
                    <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem;"></i>
                    <span style="font-weight: 600;">@TempData["Error"]</span>
                </div>
            </div>
            <script>
                setTimeout(function() {
                    var error = document.querySelector('[style*="slideInRight"]');
                    if (error) {
                        error.style.animation = 'slideOutRight 0.5s ease';
                        setTimeout(function() { error.remove(); }, 500);
                    }
                }, 4000);
            </script>
        }

        @RenderBody()
    </main>

