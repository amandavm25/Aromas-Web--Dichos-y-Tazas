        }

        .logo-main {
            font-size: 1.6rem !important;
        }

        .logo-sub {
            font-size: 0.65rem !important;
        }

        }

        /* Mobile */
        @@media (max-width: 968px) {
            /* Resetear para móvil */
            .navbar .container

        {
            justify-content: space-between !important;
            gap: 1rem !important;
        }

        .logo {
            margin-right: 0 !important;
        }

        .nav-menu {
            position: fixed !important;
            top: 100px !important;
            left: -100% !important;
