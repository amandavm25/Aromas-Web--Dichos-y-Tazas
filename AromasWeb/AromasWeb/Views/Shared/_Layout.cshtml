        .nav-dropdown {
            position: relative;
        }

            .nav-dropdown > .nav-link {
                display: flex !important;
                align-items: center;
                gap: 0.3rem;
                cursor: pointer;
            }

            .nav-dropdown .dropdown-menu {
                position: absolute !important;
                top: 100% !important;
                left: 0 !important;
                background: #FFFFFF !important;
                min-width: 250px !important;
                border-radius: 15px !important;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15) !important;
                padding: 0.5rem 0 !important;
                opacity: 0 !important;
                visibility: hidden !important;
                transform: translateY(-10px) !important;
                transition: all 0.3s ease !important;
                z-index: 1000 !important;
                margin-top: 0.5rem !important;
                list-style: none !important;
                display: block !important;
            }

            .nav-dropdown:hover .dropdown-menu {
                opacity: 1 !important;
                visibility: visible !important;
                transform: translateY(0) !important;
            }

            .nav-dropdown .dropdown-menu li {
                list-style: none !important;
                display: block !important;
                margin: 0 !important;
            }

            .nav-dropdown .dropdown-menu a {
                display: flex !important;
                align-items: center !important;
                gap: 0.7rem !important;
                padding: 0.8rem 1.5rem !important;
                color: #22515A !important;
                text-decoration: none !important;
                font-weight: 500 !important;
                transition: all 0.3s ease !important;
                white-space: nowrap !important;
            }

                .nav-dropdown .dropdown-menu a:hover {
                    background: #FEFAF5 !important;
                    color: #207476 !important;
                    padding-left: 2rem !important;
                }

                .nav-dropdown .dropdown-menu a i {
                    color: #E06E49 !important;
                    font-size: 0.9rem !important;
                }

            .nav-dropdown > .nav-link i.fa-chevron-down {
                transition: transform 0.3s ease;
                font-size: 0.75rem;
                margin-left: 0.3rem;
            }

            .nav-dropdown:hover > .nav-link i.fa-chevron-down {
                transform: rotate(180deg);
            }

            /* Dropdown de perfil alineado a la derecha */
            .nav-dropdown .dropdown-menu[style*="right"] {
                right: 0 !important;
                left: auto !important;
            }

        /* Ajustar el contenedor del navbar */
        .navbar .container {
            display: flex !important;
            justify-content: flex-start !important;
            align-items: center !important;
            padding: 1rem 20px !important;
            gap: 2rem !important;
            max-width: 100% !important;
        }

        /* Logo a la izquierda */
        .logo {
            margin-right: auto !important;
        }

        /* Menú optimizado */
        .nav-menu {
            display: flex !important;
            list-style: none !important;
            gap: 1.2rem !important;
            align-items: center !important;
            flex-wrap: nowrap !important;
            margin-left: auto !important;
        }

        /* Evitar que el texto se rompa */
        .nav-dropdown > .nav-link,
        .nav-link {
            white-space: nowrap !important;
        }

        /* Ajustar tamaño de elementos en pantallas grandes */
        @@media (min-width: 969px) and (max-width: 1400px) {
            .nav-menu

        {
            gap: 0.9rem !important;
        }

        .nav-link {
            font-size: 0.82rem !important;
        }

        .btn-nav {
            padding: 0.65rem 1.3rem !important;
            font-size: 0.82rem !important;
        }

        }

        /* Ajuste para pantallas medianas */
        @@media (min-width: 969px) and (max-width: 1200px) {
            .navbar .container

        {
            gap: 1.5rem !important;
        }

        .nav-menu {
            gap: 0.7rem !important;
        }

        .nav-link {
            font-size: 0.78rem !important;
            letter-spacing: 0.5px !important;
        }

        .btn-nav {
            padding: 0.6rem 1.1rem !important;
