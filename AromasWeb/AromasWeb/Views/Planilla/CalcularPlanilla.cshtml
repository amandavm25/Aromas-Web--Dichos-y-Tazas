@model AromasWeb.Abstracciones.ModeloUI.Planilla

@{
    ViewBag.Title = "Calcular Planilla";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-calculator"></i>
                Calcular Pago
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Calcular
                <span class="hero-title-accent">Planilla</span>
            </h1>
            <p class="hero-subtitle">
                Calcula automáticamente el pago de un empleado por período
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("CalcularPlanilla", "Planilla", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="contact-form-wrapper" data-aos="fade-up">
                <form class="contact-form">
                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <!-- Información del Cálculo -->
                    <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-calculator"></i> Configuración del Cálculo
                        </h5>
                    </div>

                    <!-- Seleccionar Empleado -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user"></i>
                            Empleado
                        </label>
                        <select name="idEmpleado" class="form-control" required>
                            <option value="">Seleccione un empleado</option>
                            @foreach (var emp in ViewBag.Empleados)
                            {
                                <option value="@emp.IdEmpleado">@emp.NombreCompleto - @emp.Cargo</option>
                            }
                        </select>
                        <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7;">
                            <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                            Empleado para el cual se calculará el pago
                        </small>
                    </div>

                    <!-- Período -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar-alt"></i>
                                Fecha Inicio del Período
                            </label>
                            <input type="date" name="periodoInicio" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar-check"></i>
                                Fecha Fin del Período
                            </label>
                            <input type="date" name="periodoFin" class="form-control" required />
                        </div>
                    </div>

                    <!-- Información de Cálculo -->
                    <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin: 2rem 0;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-info-circle"></i> ¿Cómo se calcula el pago?
                        </h5>
                    </div>

                    <div class="feature-card" style="background: var(--white); padding: 2rem; margin: 0 0 2rem;">
                        <h6 style="color: var(--dark-green); margin-bottom: 1.5rem; font-weight: 700;">
                            <i class="fas fa-calculator" style="color: var(--olive-green);"></i> Fórmulas de Cálculo
                        </h6>

                        <div style="display: grid; gap: 1.5rem;">
                            <div style="background: var(--cream); padding: 1.2rem; border-radius: 10px; border-left: 4px solid var(--olive-green);">
                                <strong style="color: var(--dark-green); display: block; margin-bottom: 0.5rem;">
                                    1. Horas Trabajadas por Día
                                </strong>
                                <code style="background: white; padding: 0.5rem; border-radius: 5px; display: block; font-family: 'Courier New', monospace; color: var(--charcoal);">
                                    (Hora Salida - Hora Entrada) - Tiempo Almuerzo
                                </code>
                            </div>

                            <div style="background: var(--cream); padding: 1.2rem; border-radius: 10px; border-left: 4px solid var(--dark-green);">
                                <strong style="color: var(--dark-green); display: block; margin-bottom: 0.5rem;">
                                    2. Clasificación de Horas
                                </strong>
                                <code style="background: white; padding: 0.5rem; border-radius: 5px; display: block; font-family: 'Courier New', monospace; color: var(--charcoal);">
                                    Si Horas ≤ 8: Regulares = Horas, Extras = 0<br>
                                    Si Horas > 8: Regulares = 8, Extras = Horas - 8
                                </code>
                            </div>

                            <div style="background: var(--cream); padding: 1.2rem; border-radius: 10px; border-left: 4px solid var(--gold-bright);">
                                <strong style="color: var(--dark-green); display: block; margin-bottom: 0.5rem;">
                                    3. Pago Bruto
                                </strong>
                                <code style="background: white; padding: 0.5rem; border-radius: 5px; display: block; font-family: 'Courier New', monospace; color: var(--charcoal);">
                                    (Horas Regulares × Tarifa) + (Horas Extras × Tarifa × 1.5)
                                </code>
                            </div>

                            <div style="background: var(--cream); padding: 1.2rem; border-radius: 10px; border-left: 4px solid var(--gold);">
                                <strong style="color: var(--dark-green); display: block; margin-bottom: 0.5rem;">
                                    4. Deducciones
                                </strong>
                                <code style="background: white; padding: 0.5rem; border-radius: 5px; display: block; font-family: 'Courier New', monospace; color: var(--charcoal);">
                                    CCSS = Pago Bruto × 10.67%<br>
                                    Impuesto Renta = Según escala progresiva CR
                                </code>
                            </div>

                            <div style="background: var(--cream); padding: 1.2rem; border-radius: 10px; border-left: 4px solid var(--dark-green);">
                                <strong style="color: var(--dark-green); display: block; margin-bottom: 0.5rem;">
                                    5. Pago Neto
                                </strong>
                                <code style="background: white; padding: 0.5rem; border-radius: 5px; display: block; font-family: 'Courier New', monospace; color: var(--charcoal);">
                                    Pago Bruto - Total Deducciones
                                </code>
                            </div>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoPlanillas", "Planilla")'" style="flex: 1;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1;">
                            <span><i class="fas fa-calculator"></i> Calcular Planilla</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="~/js/planilla.js"></script>
}