@model List<AromasWeb.Abstracciones.ModeloUI.Planilla>

@{
    ViewBag.Title = "Planillas del Empleado";
    var empleado = (AromasWeb.Controllers.EmpleadoInfo)ViewBag.Empleado;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-file-invoice-dollar"></i>
                Historial de Planillas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Planillas de Pago
            </h1>
            <p class="hero-subtitle">
                @empleado.NombreCompleto • @empleado.Cargo
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Información del Empleado -->
        <div class="testimonial-card card-3d" style="background: linear-gradient(135deg, var(--teal), var(--dark-teal)); color: white; margin-bottom: 3rem; padding: 2.5rem;" data-aos="fade-up">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
                <div>
                    <i class="fas fa-user" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.9;"></i>
                    <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Nombre Completo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: white;">@empleado.NombreCompleto</h4>
                </div>
                <div>
                    <i class="fas fa-id-card" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.9;"></i>
                    <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Identificación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: white;">@empleado.Identificacion</h4>
                </div>
                <div>
                    <i class="fas fa-briefcase" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.9;"></i>
                    <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Cargo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: white;">@empleado.Cargo</h4>
                </div>
                <div>
                    <i class="fas fa-calendar" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.9;"></i>
                    <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Fecha de Contratación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: white;">@empleado.FechaContratacion.ToString("dd/MM/yyyy")</h4>
                </div>
                <div>
                    <i class="fas fa-hourglass-half" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.9;"></i>
                    <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Antigüedad</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: white;">@empleado.TiempoServicio</h4>
                </div>
            </div>
        </div>

        <!-- Estadísticas de Planillas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-file-invoice" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count</h3>
                <p style="margin: 0; opacity: 0.9;">Planillas Totales</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--green) 0%, #4d9160 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-dollar-sign" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    ₡@Model.Sum(p => p.PagoNeto).ToString("N0")
                </h3>
                <p style="margin: 0; opacity: 0.9;">Total Recibido</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--amber) 0%, var(--coral) 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-chart-line" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    ₡@(Model.Any() ? Model.Average(p => p.PagoNeto).ToString("N0") : "0")
                </h3>
                <p style="margin: 0; opacity: 0.9;">Promedio por Planilla</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--coral) 0%, #c75a3a 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-clock" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @Model.Sum(p => p.TotalHorasTrabajadas).ToString("N2")h
                </h3>
                <p style="margin: 0; opacity: 0.9;">Total Horas Trabajadas</p>
            </div>
        </div>

        <!-- Botones de Acción -->
        <div style="display: flex; gap: 1rem; margin-bottom: 3rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("CalcularPlanilla", "Planilla", new { idEmpleado = empleado.IdEmpleado })" class="btn btn-primary btn-3d">
                <span><i class="fas fa-calculator"></i> Calcular Nueva Planilla</span>
            </a>
            <a href="@Url.Action("ListadoPlanillas", "Planilla")" class="btn btn-secondary">
                <span><i class="fas fa-arrow-left"></i> Volver al Listado</span>
            </a>
            <button onclick="window.print()" class="btn" style="background: var(--green); color: white; border: none; margin-left: auto;">
                <span><i class="fas fa-print"></i> Imprimir Historial</span>
            </button>
        </div>

        <!-- Filtros de Fecha -->
        <div style="background: var(--white); padding: 1.5rem; border-radius: 25px; box-shadow: var(--shadow-lg); margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("PlanillasEmpleado", "Planilla")" style="display: flex; gap: 1rem; align-items: end;">
                <input type="hidden" name="id" value="@empleado.IdEmpleado" />

                <div style="flex: 1;">
                    <label style="display: block; color: var(--dark-teal); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-calendar-alt" style="color: var(--teal);"></i> Fecha Inicio
                    </label>
                    <input type="date" name="fechaInicio" value="@ViewBag.FechaInicio" class="form-control" />
                </div>

                <div style="flex: 1;">
                    <label style="display: block; color: var(--dark-teal); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-calendar-alt" style="color: var(--teal);"></i> Fecha Fin
                    </label>
                    <input type="date" name="fechaFin" value="@ViewBag.FechaFin" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary" style="border-radius: 15px; padding: 0.9rem 2rem;">
                    <span><i class="fas fa-search"></i> Filtrar</span>
                </button>
            </form>
        </div>

        <!-- Listado de Planillas -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-teal); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-history"></i> Historial de Planillas
            </h4>

            @if (Model.Any())
            {
                <div style="display: grid; gap: 2rem;">
                    @foreach (var planilla in Model)
                    {
                        var colorEstado = planilla.Estado switch
                        {
                            "Pagado" => "#27ae60",
                            "Calculado" => "#f39c12",
                            "Anulado" => "#e74c3c",
                            _ => "#95a5a6"
                        };

                        <div class="feature-card" style="position: relative; padding: 2rem; border-left: 5px solid @colorEstado;">
                            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr auto; gap: 2rem; align-items: center;">
                                <div>
                                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
                                        <h5 style="margin: 0; color: var(--dark-teal); font-weight: 700; font-size: 1.3rem;">
                                            @planilla.PeriodoFormateado
                                        </h5>
                                        <span style="background: @colorEstado; color: white; padding: 0.3rem 0.8rem; border-radius: 15px; font-size: 0.8rem; font-weight: 600;">
                                            @planilla.Estado
                                        </span>
                                    </div>
                                    <p style="margin: 0; color: var(--gray); font-size: 0.95rem;">
                                        <i class="fas fa-calendar-alt" style="color: var(--teal);"></i>
                                        @planilla.DiasPeriodo días • Tarifa: ₡@planilla.TarifaHora.ToString("N2")/h
                                    </p>
                                </div>

                                <div style="text-align: center;">
                                    <p style="margin: 0 0 0.3rem; color: var(--gray); font-size: 0.85rem;">Horas Totales</p>
                                    <strong style="color: var(--teal); font-size: 1.3rem;">@planilla.TotalHorasTrabajadas.ToString("N2")h</strong>
                                </div>

                                <div style="text-align: center;">
                                    <p style="margin: 0 0 0.3rem; color: var(--gray); font-size: 0.85rem;">Pago Bruto</p>
                                    <strong style="color: var(--dark-teal); font-size: 1.3rem;">₡@planilla.PagoBruto.ToString("N0")</strong>
                                </div>

                                <div style="text-align: center;">
                                    <p style="margin: 0 0 0.3rem; color: var(--gray); font-size: 0.85rem;">Pago Neto</p>
                                    <strong style="color: var(--green); font-size: 1.5rem; font-family: var(--font-primary);">₡@planilla.PagoNeto.ToString("N0")</strong>
                                </div>

                                <div>
                                    <a href="@Url.Action("VerDetallePlanilla", "Planilla", new { id = planilla.IdPlanilla })"
                                       class="btn btn-primary"
                                       style="white-space: nowrap; padding: 0.7rem 1.5rem;">
                                        <span><i class="fas fa-eye"></i> Ver Detalle</span>
                                    </a>
                                </div>
                            </div>

                            <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--cream); display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem;">
                                <div>
                                    <span style="color: var(--gray); font-size: 0.85rem;"><i class="fas fa-clock"></i> H. Regulares:</span>
                                    <strong style="color: var(--teal); margin-left: 0.5rem;">@planilla.TotalHorasRegulares.ToString("N2")h</strong>
                                </div>
                                <div>
                                    <span style="color: var(--gray); font-size: 0.85rem;"><i class="fas fa-star"></i> H. Extras:</span>
                                    <strong style="color: var(--amber); margin-left: 0.5rem;">@planilla.TotalHorasExtras.ToString("N2")h</strong>
                                </div>
                                <div>
                                    <span style="color: var(--gray); font-size: 0.85rem;"><i class="fas fa-minus-circle"></i> Deducciones:</span>
                                    <strong style="color: var(--coral); margin-left: 0.5rem;">₡@planilla.TotalDeducciones.ToString("N0")</strong>
                                </div>
                                <div>
                                    <span style="color: var(--gray); font-size: 0.85rem;"><i class="fas fa-percentage"></i> % Deducción:</span>
                                    <strong style="color: var(--coral); margin-left: 0.5rem;">@planilla.PorcentajeDeducciones.ToString("N1")%</strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 3rem; color: var(--gray);">
                    <i class="fas fa-inbox" style="font-size: 3rem; color: var(--gray); margin-bottom: 1rem; display: block;"></i>
                    <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">No hay planillas registradas</p>
                    <p style="margin: 0.5rem 0 0; font-size: 0.95rem;">Este empleado aún no tiene planillas calculadas</p>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/planilla.js"></script>
}