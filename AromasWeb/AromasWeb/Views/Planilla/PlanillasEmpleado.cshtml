@model List<AromasWeb.Abstracciones.ModeloUI.Planilla>

@{
    ViewBag.Title = "Planillas del Empleado";
    var empleado = (AromasWeb.Controllers.EmpleadoInfo)ViewBag.Empleado;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-file-invoice-dollar"></i>
                Historial de Planillas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Planillas de Pago
            </h1>
            <p class="hero-subtitle">
                @empleado.NombreCompleto • @empleado.Cargo
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Información del Empleado -->
        <div class="feature-card" style="background: white; margin-bottom: 3rem; padding: 2.5rem; border-left: 5px solid var(--olive-green);" data-aos="fade-up">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-user" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Nombre Completo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.NombreCompleto</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-id-card" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Identificación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.Identificacion</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-briefcase" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Cargo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.Cargo</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-calendar" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Fecha de Contratación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.FechaContratacion.ToString("dd/MM/yyyy")</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-hourglass-half" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Antigüedad</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.TiempoServicio</h4>
                </div>
            </div>
        </div>

        <!-- Estadísticas de Planillas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-file-invoice"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count</h3>
                <p style="margin: 0.5rem 0;">Planillas Totales</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    ₡@Model.Sum(p => p.PagoNeto).ToString("N0")
                </h3>
                <p style="margin: 0.5rem 0;">Total Recibido</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    ₡@(Model.Any() ? Model.Average(p => p.PagoNeto).ToString("N0") : "0")
                </h3>
                <p style="margin: 0.5rem 0;">Promedio por Planilla</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @Model.Sum(p => p.TotalHorasTrabajadas).ToString("N2")h
                </h3>
                <p style="margin: 0.5rem 0;">Total Horas Trabajadas</p>
            </div>
        </div>

        <!-- Botones de Acción -->
        <div style="display: flex; gap: 1rem; margin-bottom: 3rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("CalcularPlanilla", "Planilla", new { idEmpleado = empleado.IdEmpleado })" class="btn btn-primary">
                <span><i class="fas fa-calculator"></i> Calcular Nueva Planilla</span>
            </a>
            <a href="@Url.Action("ListadoPlanillas", "Planilla")" class="btn btn-secondary">
                <span><i class="fas fa-arrow-left"></i> Volver al Listado</span>
            </a>
            <button onclick="window.print()" class="btn" style="background: #27ae60; color: white; border: none; margin-left: auto;">
                <span><i class="fas fa-print"></i> Imprimir Historial</span>
            </button>
        </div>

        <!-- Filtros de Fecha -->
        <div style="background: var(--white); padding: 2rem; border-radius: 25px; box-shadow: var(--shadow-lg); margin-bottom: 3rem;" data-aos="fade-up">
            <h5 style="color: var(--dark-green); margin-bottom: 1.5rem; font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-filter" style="color: var(--olive-green);"></i> Filtrar Planillas
            </h5>
            <form method="get" action="@Url.Action("PlanillasEmpleado", "Planilla")" style="display: flex; gap: 1rem; align-items: end; flex-wrap: wrap;">
                <input type="hidden" name="id" value="@empleado.IdEmpleado" />

                <div style="flex: 1; min-width: 200px;">
                    <label style="display: block; color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i> Fecha Inicio
                    </label>
                    <input type="date" name="fechaInicio" value="@ViewBag.FechaInicio" class="form-control" style="padding: 0.9rem; border-radius: 15px; border: 2px solid var(--cream);" />
                </div>

                <div style="flex: 1; min-width: 200px;">
                    <label style="display: block; color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i> Fecha Fin
                    </label>
                    <input type="date" name="fechaFin" value="@ViewBag.FechaFin" class="form-control" style="padding: 0.9rem; border-radius: 15px; border: 2px solid var(--cream);" />
                </div>

                <button type="submit" class="btn btn-primary" style="padding: 0.9rem 2rem;">
                    <span><i class="fas fa-search"></i> Filtrar</span>
                </button>
            </form>
        </div>

        <!-- Listado de Planillas -->
        <div style="background: var(--cream); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-green); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-history"></i> Historial de Planillas
            </h4>

            @if (Model.Any())
            {
                <div style="display: grid; gap: 2rem;">
                    @foreach (var planilla in Model)
                    {
                        var esReciente = planilla == Model.First();
                        var colorEstado = planilla.Estado switch
                        {
                            "Pagado" => "var(--olive-green)",
                            "Calculado" => "var(--gold-bright)",
                            "Anulado" => "#e74c3c",
                            _ => "var(--charcoal)"
                        };

                        <div class="feature-card" style="position: relative; padding: 2rem; border-left: 5px solid @colorEstado; background: white;">
                            @if (esReciente)
                            {
                                <div style="position: absolute; top: 1rem; right: 1rem;">
                                    <span style="background: var(--gold-bright); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;">
                                        <i class="fas fa-star"></i> Más Reciente
                                    </span>
                                </div>
                            }

                            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr auto; gap: 2rem; align-items: center;">
                                <div>
                                    <h5 style="margin: 0 0 0.5rem; color: var(--dark-green); font-weight: 700; font-size: 1.3rem;">
                                        @planilla.PeriodoFormateado
                                    </h5>
                                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.95rem;">
                                        <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i>
                                        @planilla.DiasPeriodo días • Tarifa: ₡@planilla.TarifaHora.ToString("N2")/h
                                    </p>
                                </div>

                                <div style="text-align: center;">
                                    <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">Horas Totales</p>
                                    <strong style="color: var(--olive-green); font-size: 1.3rem;">@planilla.TotalHorasTrabajadas.ToString("N2")h</strong>
                                </div>

                                <div style="text-align: center;">
                                    <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">Pago Bruto</p>
                                    <strong style="color: var(--dark-green); font-size: 1.3rem;">₡@planilla.PagoBruto.ToString("N0")</strong>
                                </div>

                                <div style="text-align: center;">
                                    <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">Pago Neto</p>
                                    <strong style="color: var(--olive-green); font-size: 1.5rem; font-family: var(--font-primary);">₡@planilla.PagoNeto.ToString("N0")</strong>
                                </div>

                                <div>
                                    <a href="@Url.Action("VerDetallePlanilla", "Planilla", new { id = planilla.IdPlanilla })"
                                       class="btn btn-primary"
                                       style="white-space: nowrap; padding: 0.7rem 1.5rem;">
                                        <span><i class="fas fa-eye"></i> Ver Detalle</span>
                                    </a>
                                </div>
                            </div>

                            <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--cream); display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem;">
                                <div>
                                    <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;"><i class="fas fa-clock"></i> H. Regulares:</span>
                                    <strong style="color: var(--olive-green); margin-left: 0.5rem;">@planilla.TotalHorasRegulares.ToString("N2")h</strong>
                                </div>
                                <div>
                                    <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;"><i class="fas fa-star"></i> H. Extras:</span>
                                    <strong style="color: var(--gold-bright); margin-left: 0.5rem;">@planilla.TotalHorasExtras.ToString("N2")h</strong>
                                </div>
                                <div>
                                    <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;"><i class="fas fa-minus-circle"></i> Deducciones:</span>
                                    <strong style="color: var(--gold); margin-left: 0.5rem;">₡@planilla.TotalDeducciones.ToString("N0")</strong>
                                </div>
                                <div>
                                    <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;"><i class="fas fa-toggle-on"></i> Estado:</span>
                                    <span style="background: @colorEstado; color: white; padding: 0.3rem 0.8rem; border-radius: 15px; font-size: 0.8rem; font-weight: 600; margin-left: 0.5rem;">
                                        @planilla.Estado
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 3rem; color: var(--charcoal); opacity: 0.7;">
                    <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block;"></i>
                    <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">No hay planillas registradas</p>
                    <p style="margin: 0.5rem 0 0; font-size: 0.95rem;">Este empleado aún no tiene planillas calculadas</p>
                </div>
            }
        </div>
    </div>
</section>

<style>
    @@media print {
        .navbar, .footer, .scroll-to-top, .hero-leaves, .scroll-indicator, button, .btn {
            display: none !important;
        }

        .hero {
            min-height: auto !important;
            padding: 2rem 0 1rem !important;
        }

        section {
            padding: 1rem 0 !important;
        }

        body {
            background: white !important;
        }
    }
</style>

@section Scripts {
    <script src="~/js/planilla.js"></script>
}