@model List<AromasWeb.Abstracciones.ModeloUI.Planilla>

@{
    ViewBag.Title = "Gestión de Planillas";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-file-invoice-dollar"></i>
                Gestión de Planillas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Planillas de Pago
            </h1>
            <p class="hero-subtitle">
                Administra y calcula el pago de los empleados
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de acciones y filtros -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CalcularPlanilla", "Planilla")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-calculator"></i> Calcular Nueva Planilla</span>
                </a>
            </div>
        </div>

        <!-- Filtros -->
        <div style="background: var(--white); padding: 2rem; border-radius: 25px; box-shadow: var(--shadow-lg); margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoPlanillas", "Planilla")" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; align-items: end;">

                <div>
                    <label style="display: block; color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-user" style="color: var(--olive-green);"></i> Empleado
                    </label>
                    <select name="empleado" class="form-control">
                        <option value="">Todos los empleados</option>
                        <option value="1">Kenneth Salas</option>
                        <option value="2">María González</option>
                        <option value="3">David Rodríguez</option>
                        <option value="4">Ana Jiménez</option>
                    </select>
                </div>

                <div>
                    <label style="display: block; color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-toggle-on" style="color: var(--olive-green);"></i> Estado
                    </label>
                    <select name="estado" class="form-control">
                        <option value="">Todos los estados</option>
                        <option value="Calculado">Calculado</option>
                        <option value="Pagado">Pagado</option>
                        <option value="Anulado">Anulado</option>
                    </select>
                </div>

                <div>
                    <label style="display: block; color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i> Fecha Inicio
                    </label>
                    <input type="date" name="fechaInicio" value="@ViewBag.FechaInicio" class="form-control" />
                </div>

                <div>
                    <label style="display: block; color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem;">
                        <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i> Fecha Fin
                    </label>
                    <input type="date" name="fechaFin" value="@ViewBag.FechaFin" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary" style="border-radius: 15px; padding: 0.9rem 2rem;">
                    <span><i class="fas fa-search"></i> Filtrar</span>
                </button>
            </form>
        </div>

        <!-- Tabla de Planillas -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;" data-aos="fade-up">
            <div class="table-responsive">
                <table style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Período</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tarifa/Hora</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">H. Regulares</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">H. Extras</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Pago Bruto</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Deducciones</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Pago Neto</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var planillasDemo = new List<dynamic>
                                                {
                                                new { Id = 1, Empleado = "Kenneth Salas", Cargo = "Chef Principal", Inicio = "01/11/2024", Fin = "15/11/2024", Tarifa = 2800.00m, HorasReg = 120.00m, HorasExt = 8.00m, Bruto = 369600.00m, Deducciones = 39436.32m, Neto = 330163.68m, Estado = "Pagado" },
                                                new { Id = 2, Empleado = "María González", Cargo = "Asistente de Cocina", Inicio = "01/11/2024", Fin = "15/11/2024", Tarifa = 1900.00m, HorasReg = 120.00m, HorasExt = 4.00m, Bruto = 239400.00m, Deducciones = 25539.48m, Neto = 213860.52m, Estado = "Calculado" },
                                                new { Id = 3, Empleado = "David Rodríguez", Cargo = "Barista", Inicio = "01/11/2024", Fin = "15/11/2024", Tarifa = 2400.00m, HorasReg = 116.00m, HorasExt = 6.00m, Bruto = 300000.00m, Deducciones = 32010.00m, Neto = 267990.00m, Estado = "Calculado" },
                                                new { Id = 4, Empleado = "Ana Jiménez", Cargo = "Cajera", Inicio = "16/10/2024", Fin = "31/10/2024", Tarifa = 1800.00m, HorasReg = 128.00m, HorasExt = 2.00m, Bruto = 235800.00m, Deducciones = 25160.86m, Neto = 210639.14m, Estado = "Pagado" }
                                                };
                        }

                        @foreach (var planilla in planillasDemo)
                        {
                            <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@planilla.Id</td>
                                <td style="padding: 1.2rem;">
                                    <div>
                                        <strong style="color: var(--dark-green);">@planilla.Empleado</strong>
                                        <br>
                                        <small style="color: var(--charcoal); opacity: 0.7;">@planilla.Cargo</small>
                                    </div>
                                </td>
                                <td style="padding: 1.2rem; color: var(--charcoal);">
                                    <div>
                                        <strong>@planilla.Inicio</strong>
                                        <br>
                                        <small style="color: var(--charcoal); opacity: 0.7;">hasta @planilla.Fin</small>
                                    </div>
                                </td>
                                <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">₡@planilla.Tarifa.ToString("N2")</td>
                                <td style="padding: 1.2rem; color: var(--olive-green); font-weight: 600;">@planilla.HorasReg.ToString("N2")h</td>
                                <td style="padding: 1.2rem; color: var(--gold-bright); font-weight: 600;">@planilla.HorasExt.ToString("N2")h</td>
                                <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 700;">₡@planilla.Bruto.ToString("N0")</td>
                                <td style="padding: 1.2rem; color: var(--gold); font-weight: 600;">₡@planilla.Deducciones.ToString("N0")</td>
                                <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 700; font-size: 1.1rem;">₡@planilla.Neto.ToString("N0")</td>
                                <td style="padding: 1.2rem;">
                                    @if (planilla.Estado == "Pagado")
                                    {
                                        <span style="background: #27ae60; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Pagado</span>
                                    }
                                    else if (planilla.Estado == "Calculado")
                                    {
                                        <span style="background: var(--gold-bright); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Calculado</span>
                                    }
                                    else
                                    {
                                        <span style="background: #e74c3c; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Anulado</span>
                                    }
                                </td>
                                <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                    <button type="button"
                                            class="btn btn-sm"
                                            onclick="window.location.href='@Url.Action("VerDetallePlanilla", "Planilla", new { id = planilla.Id })'"
                                            style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                            title="Ver detalle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm"
                                            onclick="window.location.href='@Url.Action("PlanillasEmpleado", "Planilla", new { id = planilla.Id })'"
                                            style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                            title="Ver todas las planillas del empleado">
                                        <i class="fas fa-history"></i>
                                    </button>
                                    @if (planilla.Estado == "Calculado")
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-pagar"
                                                data-id="@planilla.Id"
                                                data-empleado="@planilla.Empleado"
                                                data-periodo="@planilla.Inicio - @planilla.Fin"
                                                data-neto="₡@planilla.Neto.ToString("N2")"
                                                style="background: #27ae60; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalPagarPlanilla"
                                                title="Marcar como pagado">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                <div style="color: var(--dark-green); font-size: 0.95rem;">
                    Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">4</span></strong> de <strong id="totalRecords">4</strong> planillas
                </div>
                <div style="display: flex; gap: 0.5rem;">
                    <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                        &lt; Anterior
                    </button>
                    <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                        Siguiente &gt;
                    </button>
                </div>
            </div>
        </div>

        <!-- Resumen Estadísticas (ABAJO) -->
        <div style="margin-top: 3rem;" data-aos="fade-up">
            <div style="background: linear-gradient(135deg, var(--olive-green), var(--dark-green)); padding: 2.5rem; border-radius: 25px; box-shadow: var(--shadow-lg);">
                <h5 style="margin: 0 0 2rem; color: white; font-weight: 600; display: flex; align-items: center; gap: 0.5rem; font-size: 1.3rem;">
                    <i class="fas fa-chart-pie"></i> Resumen de Planillas
                </h5>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-file-invoice" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Planillas Totales</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">4</h4>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-check-circle" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Planillas Pagadas</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">2</h4>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-clock" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Planillas Pendientes</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">2</h4>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-dollar-sign" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Total a Pagar</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">₡1,144,800.00</h4>
                        <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">Planillas pendientes</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalPagarPlanilla" />

@section Scripts {
    <script src="~/js/planilla.js"></script>
}