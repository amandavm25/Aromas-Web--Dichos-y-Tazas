@model List<AromasWeb.Abstracciones.ModeloUI.Planilla>

@{
    ViewBag.Title = "Gestión de Planillas";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-file-invoice-dollar"></i>
                Gestión de Planillas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Planillas de Pago
            </h1>
            <p class="hero-subtitle">
                Administra y calcula el pago de los empleados
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Resumen de Planillas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-file-invoice"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">4</h3>
                <p style="margin: 0.5rem 0;">Planillas Totales</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">2</h3>
                <p style="margin: 0.5rem 0;">Planillas Pagadas</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">2</h3>
                <p style="margin: 0.5rem 0;">Planillas Pendientes</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">₡1,144,800</h3>
                <p style="margin: 0.5rem 0;">Total a Pagar</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    Planillas pendientes
                </small>
            </div>
        </div>

        <!-- Barra de acciones -->
        <div style="display: flex; gap: 1rem; margin-bottom: 3rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("CalcularPlanilla", "Planilla")" class="btn btn-primary">
                <span><i class="fas fa-calculator"></i> Calcular Nueva Planilla</span>
            </a>
        </div>

        <!-- Filtros -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoPlanillas", "Planilla")" style="display: contents;">
                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                    <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                        <i class="fas fa-filter" style="color: var(--gold);"></i> Filtrar:
                    </span>

                    <!-- Filtro por Empleado -->
                    <div style="position: relative;">
                        <i class="fas fa-user" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <select name="empleado" style="border-radius: 50px; padding: 0.6rem 1.5rem 0.6rem 50px; font-size: 0.9rem; border: 2px solid var(--cream); background: var(--white); min-width: 200px; color: var(--dark-green); font-weight: 600; font-family: var(--font-secondary);">
                            <option value="">Todos los empleados</option>
                            <option value="1">Kenneth Salas</option>
                            <option value="2">María González</option>
                            <option value="3">David Rodríguez</option>
                            <option value="4">Ana Jiménez</option>
                        </select>
                    </div>

                    <!-- Filtro por Estado -->
                    <div style="position: relative;">
                        <i class="fas fa-toggle-on" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <select name="estado" style="border-radius: 50px; padding: 0.6rem 1.5rem 0.6rem 50px; font-size: 0.9rem; border: 2px solid var(--cream); background: var(--white); min-width: 180px; color: var(--dark-green); font-weight: 600; font-family: var(--font-secondary);">
                            <option value="">Todos los estados</option>
                            <option value="Calculado">Calculado</option>
                            <option value="Pagado">Pagado</option>
                            <option value="Anulado">Anulado</option>
                        </select>
                    </div>

                    <!-- Filtro por Fecha Inicio -->
                    <div style="position: relative;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <input type="date"
                               name="fechaInicio"
                               value="@ViewBag.FechaInicio"
                               style="padding: 0.6rem 1.5rem 0.6rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 0.9rem; background: var(--white); color: var(--dark-green); font-weight: 600; font-family: var(--font-secondary);">
                    </div>

                    <!-- Filtro por Fecha Fin -->
                    <div style="position: relative;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <input type="date"
                               name="fechaFin"
                               value="@ViewBag.FechaFin"
                               style="padding: 0.6rem 1.5rem 0.6rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 0.9rem; background: var(--white); color: var(--dark-green); font-weight: 600; font-family: var(--font-secondary);">
                    </div>

                    <!-- Botones de acción -->
                    <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span><i class="fas fa-filter"></i> Aplicar</span>
                    </button>

                    <a href="@Url.Action("ListadoPlanillas", "Planilla")" class="btn btn-secondary" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span><i class="fas fa-times"></i> Limpiar</span>
                    </a>
                </div>
            </form>
        </div>

        <!-- Tabla de Planillas -->
        <div style="background: var(--cream); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-green); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-list"></i> Listado de Planillas
            </h4>

            <div style="background: var(--white); border-radius: 20px; overflow: hidden; box-shadow: var(--shadow-sm);">
                <div style="overflow-x: auto; max-width: 100%;">
                    <table style="margin-bottom: 0; width: 100%; min-width: 1400px; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Período</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Tarifa/Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">H. Regulares</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">H. Extras</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Pago Bruto</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Deducciones</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Pago Neto</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; font-family: var(--font-secondary);">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center; font-family: var(--font-secondary);">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var planillasDemo = new List<dynamic>
                                                        {
                                                        new { Id = 1, Empleado = "Kenneth Salas", Cargo = "Chef Principal", Inicio = "01/11/2024", Fin = "15/11/2024", Tarifa = 2800.00m, HorasReg = 120.00m, HorasExt = 8.00m, Bruto = 369600.00m, Deducciones = 39436.32m, Neto = 330163.68m, Estado = "Pagado" },
                                                        new { Id = 2, Empleado = "María González", Cargo = "Asistente de Cocina", Inicio = "01/11/2024", Fin = "15/11/2024", Tarifa = 1900.00m, HorasReg = 120.00m, HorasExt = 4.00m, Bruto = 239400.00m, Deducciones = 25539.48m, Neto = 213860.52m, Estado = "Calculado" },
                                                        new { Id = 3, Empleado = "David Rodríguez", Cargo = "Barista", Inicio = "01/11/2024", Fin = "15/11/2024", Tarifa = 2400.00m, HorasReg = 116.00m, HorasExt = 6.00m, Bruto = 300000.00m, Deducciones = 32010.00m, Neto = 267990.00m, Estado = "Calculado" },
                                                        new { Id = 4, Empleado = "Ana Jiménez", Cargo = "Cajera", Inicio = "16/10/2024", Fin = "31/10/2024", Tarifa = 1800.00m, HorasReg = 128.00m, HorasExt = 2.00m, Bruto = 235800.00m, Deducciones = 25160.86m, Neto = 210639.14m, Estado = "Pagado" }
                                                        };
                            }

                            @foreach (var planilla in planillasDemo)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; font-family: var(--font-secondary);">@planilla.Id</td>
                                    <td style="padding: 1.2rem; font-family: var(--font-secondary);">
                                        <div>
                                            <strong style="color: var(--dark-green);">@planilla.Empleado</strong>
                                            <br>
                                            <small style="color: var(--charcoal); opacity: 0.7;">@planilla.Cargo</small>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-family: var(--font-secondary);">
                                        <div>
                                            <strong>@planilla.Inicio</strong>
                                            <br>
                                            <small style="color: var(--charcoal); opacity: 0.7;">hasta @planilla.Fin</small>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600; font-family: var(--font-secondary);">₡@planilla.Tarifa.ToString("N2")</td>
                                    <td style="padding: 1.2rem; color: var(--olive-green); font-weight: 600; font-family: var(--font-secondary);">@planilla.HorasReg.ToString("N2")h</td>
                                    <td style="padding: 1.2rem; color: var(--gold-bright); font-weight: 600; font-family: var(--font-secondary);">@planilla.HorasExt.ToString("N2")h</td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 700; font-family: var(--font-secondary);">₡@planilla.Bruto.ToString("N0")</td>
                                    <td style="padding: 1.2rem; color: var(--gold); font-weight: 600; font-family: var(--font-secondary);">₡@planilla.Deducciones.ToString("N0")</td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 700; font-size: 1.1rem; font-family: var(--font-secondary);">₡@planilla.Neto.ToString("N0")</td>
                                    <td style="padding: 1.2rem; font-family: var(--font-secondary);">
                                        @if (planilla.Estado == "Pagado")
                                        {
                                            <span style="background: var(--olive-green); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Pagado</span>
                                        }
                                        else if (planilla.Estado == "Calculado")
                                        {
                                            <span style="background: var(--gold-bright); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Calculado</span>
                                        }
                                        else
                                        {
                                            <span style="background: #e74c3c; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Anulado</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("VerDetallePlanilla", "Planilla", new { id = planilla.Id })'"
                                                style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Ver detalle">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarPlanilla", "Planilla", new { id = planilla.Id })'"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm"
                                                style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-green); font-size: 0.95rem; font-family: var(--font-secondary);">
                        Mostrando <strong>1-4</strong> de <strong>4</strong> planillas
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button class="btn btn-secondary" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button class="btn btn-primary" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalPagarPlanilla" />

@section Scripts {
    <script src="~/js/planilla.js"></script>
}