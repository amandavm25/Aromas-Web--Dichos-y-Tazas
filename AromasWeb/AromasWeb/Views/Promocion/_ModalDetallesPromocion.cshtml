<div class="modal fade admin-modal modal-olive" id="modalDetallesPromocion" tabindex="-1" aria-labelledby="modalDetallesPromocionLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalDetallesPromocionLabel">
                    <div class="modal-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    Detalles de la Promoción
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">

                <!-- Nombre + Tipo -->
                <div class="modal-entity-header entity-block">
                    <h5 id="detalles-nombre-promocion" class="modal-entity-name"></h5>
                    <div class="modal-entity-meta">
                        <div class="modal-entity-meta-item">
                            <small>Tipo:</small>
                            <p id="detalles-tipo-promocion"></p>
                        </div>
                        <div class="modal-entity-meta-item">
                            <small>Recetas:</small>
                            <p id="detalles-recetas-count-promocion"></p>
                        </div>
                    </div>
                </div>

                <!-- Descuento, Estado, Vigencia -->
                <div class="modal-data-grid-3">
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-percent"></i> Descuento
                        </label>
                        <p id="detalles-descuento-promocion" class="modal-data-value" style="color: var(--gold); font-size: 1.8rem; font-family: var(--font-primary);"></p>
                    </div>
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-toggle-on"></i> Estado
                        </label>
                        <div>
                            <span id="detalles-estado-badge-promocion" class="badge" style="font-size: 0.95rem; padding: 0.4rem 1.2rem; border-radius: 50px; font-weight: 600; display: inline-block;"></span>
                        </div>
                    </div>
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-calendar-check"></i> Vigencia
                        </label>
                        <div>
                            <span id="detalles-vigencia-badge-promocion" class="badge" style="font-size: 0.95rem; padding: 0.4rem 1.2rem; border-radius: 50px; font-weight: 600; display: inline-block;"></span>
                        </div>
                    </div>
                </div>

                <!-- Período de vigencia -->
                <h6 class="modal-subsection-title">
                    <i class="fas fa-calendar-alt"></i> Período de Vigencia
                </h6>
                <div class="modal-summary">
                    <div class="modal-summary-grid">
                        <div>
                            <label class="modal-summary-label">
                                <i class="fas fa-play-circle"></i> Fecha de Inicio
                            </label>
                            <p id="detalles-fecha-inicio" class="modal-summary-value"></p>
                        </div>
                        <div>
                            <label class="modal-summary-label">
                                <i class="fas fa-stop-circle"></i> Fecha de Fin
                            </label>
                            <p id="detalles-fecha-fin" class="modal-summary-value"></p>
                        </div>
                        <div>
                            <label class="modal-summary-label">
                                <i class="fas fa-clock"></i> Duración Total
                            </label>
                            <p id="detalles-duracion" class="modal-summary-value summary-extra"></p>
                        </div>
                    </div>
                </div>

                <!-- Recetas en Promoción -->
                <h6 class="modal-subsection-title">
                    <i class="fas fa-utensils"></i> Recetas en Promoción
                </h6>
                <div class="modal-summary">
                    <div id="lista-recetas-promocion" style="max-height: 350px; overflow-y: auto;">
                        <!-- Se carga dinámicamente vía fetch -->
                    </div>
                </div>

            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        const botonesDetalles = document.querySelectorAll('.btn-detalles-promocion');

        botonesDetalles.forEach(boton => {
            boton.addEventListener('click', function () {

                const id        = parseInt(this.getAttribute('data-id'));
                const nombre    = this.getAttribute('data-nombre');
                const tipo      = this.getAttribute('data-tipo');
                const descuento = this.getAttribute('data-descuento');
                const inicio    = this.getAttribute('data-inicio');
                const fin       = this.getAttribute('data-fin');
                const vigencia  = this.getAttribute('data-vigencia');
                const estado    = this.getAttribute('data-estado');

                // Datos básicos
                document.getElementById('detalles-nombre-promocion').textContent  = nombre;
                document.getElementById('detalles-tipo-promocion').textContent    = tipo;
                document.getElementById('detalles-descuento-promocion').textContent = parseFloat(descuento).toFixed(2) + '%';
                document.getElementById('detalles-fecha-inicio').textContent      = inicio;
                document.getElementById('detalles-fecha-fin').textContent         = fin;

                // Badge estado
                const estadoBadge = document.getElementById('detalles-estado-badge-promocion');
                estadoBadge.textContent      = estado;
                estadoBadge.style.background = estado === 'Activa' ? 'var(--green)' : 'var(--red)';
                estadoBadge.style.color      = 'white';

                // Badge vigencia
                const vigenciaBadge = document.getElementById('detalles-vigencia-badge-promocion');
                vigenciaBadge.textContent      = vigencia;
                vigenciaBadge.style.color      = 'white';
                vigenciaBadge.style.background = vigencia === 'Vigente'       ? 'var(--green)' :
                                                 vigencia === 'Próximamente'  ? 'var(--gold)'  : 'var(--red)';

                // Calcular duración
                const fi   = new Date(inicio.split('/').reverse().join('-'));
                const ff   = new Date(fin.split('/').reverse().join('-'));
                const dias = Math.ceil((ff - fi) / (1000 * 60 * 60 * 24)) + 1;
                document.getElementById('detalles-duracion').textContent = dias + ' días';

                // ── Cargar recetas reales desde el servidor ──────────
                const listaRecetas = document.getElementById('lista-recetas-promocion');
                document.getElementById('detalles-recetas-count-promocion').textContent = 'cargando...';
                listaRecetas.innerHTML = '<p style="text-align:center;padding:2rem;color:var(--charcoal);opacity:0.6;"><i class="fas fa-spinner fa-spin"></i> Cargando recetas...</p>';

                fetch(`/Promocion/ObtenerRecetasPromocion?id=${id}`)
                    .then(response => {
                        if (!response.ok) throw new Error('Error al obtener recetas');
                        return response.json();
                    })
                    .then(recetas => {
                        document.getElementById('detalles-recetas-count-promocion').textContent = recetas.length + ' receta(s)';
                        listaRecetas.innerHTML = '';

                        if (recetas.length === 0) {
                            listaRecetas.innerHTML = '<p style="text-align:center;color:var(--charcoal);opacity:0.7;padding:2rem;">No hay recetas asociadas a esta promoción</p>';
                            return;
                        }

                        recetas.forEach(rec => {
                            const div = document.createElement('div');
                            div.className = 'modal-data-cell';
                            div.style.cssText = 'display:flex; justify-content:space-between; align-items:center; margin-bottom:0.5rem; flex-wrap:wrap; gap:0.5rem;';
                            div.innerHTML = `
                                <div>
                                    <p class="modal-data-value" style="margin:0;">${rec.nombreReceta}</p>
                                    <small style="color:var(--charcoal);opacity:0.7;">${rec.categoriaReceta ?? ''}</small>
                                </div>
                                <div style="text-align:right;">
                                    <small style="color:var(--charcoal);opacity:0.6;text-decoration:line-through;display:block;">
                                        ₡${parseFloat(rec.precioOriginal).toLocaleString('es-CR', { minimumFractionDigits: 2 })}
                                    </small>
                                    <span class="modal-summary-value" style="color:var(--green);">
                                        ₡${parseFloat(rec.precioPromocional).toLocaleString('es-CR', { minimumFractionDigits: 2 })}
                                    </span>
                                    <small style="color:var(--gold);display:block;font-weight:600;">
                                        Ahorro: ₡${parseFloat(rec.ahorro).toLocaleString('es-CR', { minimumFractionDigits: 2 })}
                                    </small>
                                </div>
                            `;
                            listaRecetas.appendChild(div);
                        });
                    })
                    .catch(err => {
                        console.error(err);
                        document.getElementById('detalles-recetas-count-promocion').textContent = '0 receta(s)';
                        listaRecetas.innerHTML = '<p style="text-align:center;color:var(--red);padding:2rem;"><i class="fas fa-exclamation-triangle"></i> Error al cargar las recetas</p>';
                    });
            });
        });
    });
</script>