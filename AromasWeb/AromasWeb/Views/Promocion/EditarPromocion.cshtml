@model AromasWeb.Abstracciones.ModeloUI.Promocion

@{
    ViewBag.Title = "Editar Promoción";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar una
                <span class="hero-title-accent">Promoción</span>
            </h1>
            <p class="hero-subtitle">
                Modifica la información de la promoción
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("EditarPromocion", "Promocion", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdPromocion)

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Bloque 1: Información Básica -->
                <div class="admin-form-header">
                    <i class="fas fa-info-circle"></i>
                    <h5>Información Básica</h5>
                </div>

                <div class="admin-form-body">

                    <!-- Nombre -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-tag"></i>
                            Nombre de la Promoción
                        </label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Descuento Navideño" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <!-- Tipo y Descuento -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-list"></i>
                                Tipo de Promoción
                            </label>
                            @{
                                var tiposPromocion = ViewBag.TodosTipos as List<AromasWeb.Abstracciones.ModeloUI.TipoPromocion> ?? new List<AromasWeb.Abstracciones.ModeloUI.TipoPromocion>();
                            }
                            <select name="IdTipoPromocion" class="form-control">
                                <option value="">-- Selecciona un tipo --</option>
                                @foreach (var tipo in tiposPromocion)
                                {
                                    <option value="@tipo.IdTipoPromocion"
                                            selected="@(Model.IdTipoPromocion == tipo.IdTipoPromocion ? "selected" : null)">
                                        @tipo.Nombre
                                    </option>
                                }
                            </select>
                            @Html.ValidationMessageFor(model => model.IdTipoPromocion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-percent"></i>
                                Porcentaje de Descuento
                            </label>
                            @Html.EditorFor(model => model.PorcentajeDescuento, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", max = "100", step = "0.01" } })
                            @Html.ValidationMessageFor(model => model.PorcentajeDescuento, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = "3", placeholder = "Breve descripción de la promoción..." })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        <small class="admin-form-hint">
                            <i class="fas fa-info-circle"></i>
                            Máximo 500 caracteres
                        </small>
                    </div>

                    <!-- Fechas -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar-alt"></i>
                                Fecha de Inicio
                            </label>
                            @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar-check"></i>
                                Fecha de Fin
                            </label>
                            @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Duración -->
                    <div id="duracionPromocion" class="admin-form-info-box" style="display: none;">
                        <i class="fas fa-clock"></i>
                        <div>
                            <strong>Duración de la Promoción</strong>
                            <p id="textoDuracion"></p>
                        </div>
                    </div>

                </div>

                <!-- Bloque 2: Recetas Asociadas -->
                <div class="admin-form-header" style="margin-top: 0;">
                    <i class="fas fa-utensils"></i>
                    <h5>Recetas en Promoción</h5>
                </div>

                <div class="admin-form-body">

                    <div id="recetas-container"></div>

                    <button type="button" id="btnAgregarReceta" class="btn btn-secondary" style="width: 100%; margin-bottom: 1.5rem;">
                        <span><i class="fas fa-plus"></i> Agregar Receta</span>
                    </button>

                    <!-- Resumen -->
                    <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); color: white; padding: 1.5rem; border-radius: 15px; margin-bottom: 1.5rem;">
                        <h5 style="margin: 0 0 1rem; color: white; font-weight: 600;">
                            <i class="fas fa-chart-line"></i> Resumen de la Promoción
                        </h5>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span>Descuento aplicado:</span>
                            <strong id="resumenDescuento">@Model.PorcentajeDescuento%</strong>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span>Recetas incluidas:</span>
                            <strong id="resumenRecetas">@Model.Recetas.Count</strong>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span>Duración:</span>
                            <strong id="resumenDuracion">-</strong>
                        </div>
                    </div>

                </div>

                <!-- Estado -->
                <div class="form-group">
                    <label for="estadoCheckbox" style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; cursor: pointer;">
                        <input type="checkbox" name="Estado" id="estadoCheckbox" value="true"
                               class="form-check-input" style="width:20px;height:20px;flex-shrink:0;cursor:pointer;"
                               @(Model.Estado ? "checked" : "") />
                        <input type="hidden" name="Estado" value="false" />
                        <span style="flex: 1;">
                            <i class="fas fa-toggle-on"></i>
                            Estado (Activo/Inactivo)
                        </span>
                    </label>
                    <small class="admin-form-hint">
                        <i class="fas fa-exclamation-triangle"></i>
                        Marca como activa para que la promoción esté disponible
                    </small>
                </div>

                <!-- Botones -->
                <div class="admin-form-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoPromociones", "Promocion")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <span>Guardar Cambios</span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

<!-- Template de Receta (oculto) -->
<template id="receta-template">
    <div class="receta-item feature-card" style="margin-bottom: 1rem; padding: 1.5rem; position: relative;">
        <button type="button" class="btn-eliminar-receta" style="position: absolute; top: 10px; right: 10px; width: 35px; height: 35px; background: var(--red); color: white; border: none; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-times"></i>
        </button>
        <div class="form-row">
            <div class="form-group" style="flex: 2;">
                <label><i class="fas fa-utensils"></i> Receta</label>
                <select name="Recetas[INDEX].IdReceta" class="form-control select-receta" required>
                    <option value="">-- Selecciona una receta --</option>
                </select>
            </div>
            <div class="form-group">
                <label><i class="fas fa-coins"></i> Precio Original</label>
                <input type="text" class="form-control precio-original" readonly style="background: var(--cream);" value="₡0.00">
            </div>
            <div class="form-group">
                <label><i class="fas fa-tag"></i> Precio con Descuento</label>
                <input type="text" class="form-control precio-descuento" readonly style="background: var(--cream); color: var(--green); font-weight: 700;" value="₡0.00">
            </div>
        </div>
        <div class="info-receta" style="display: none; background: var(--cream); padding: 1rem; border-radius: 10px; margin-top: 1rem;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <strong style="color: var(--dark-green); display: block; margin-bottom: 0.3rem;">Categoría:</strong>
                    <span class="categoria-receta" style="color: var(--charcoal); opacity: 0.7;"></span>
                </div>
                <div style="text-align: right;">
                    <strong style="color: var(--dark-green); display: block; margin-bottom: 0.3rem;">Ahorro:</strong>
                    <span class="ahorro-receta" style="color: var(--green); font-size: 1.2rem; font-weight: 700;">₡0.00</span>
                </div>
            </div>
        </div>
    </div>
</template>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/promocion.js" asp-append-version="true"></script>
    <script>
        window.recetasDisponibles = [];

        @if (ViewBag.RecetasDisponibles != null)
        {
                <text>window.recetasDisponibles = [</text>
                var primero = true;
                foreach (var rec in (List<AromasWeb.Abstracciones.ModeloUI.Receta>)ViewBag.RecetasDisponibles)
                {
                        if (!primero)
                        {

                        <text>,</text>
                    }
                        primero = false;
                        var idReceta = rec.IdReceta;
                        var nombreReceta = (rec.Nombre ?? "").Replace("'", "\\'");
                        var precioVenta = rec.PrecioVenta ?? 0m;
                        var categoria = (rec.NombreCategoria ?? "").Replace("'", "\\'");
                        <text>{ idReceta: @idReceta, nombre: '@Html.Raw(nombreReceta)', precioVenta: @precioVenta.ToString(System.Globalization.CultureInfo.InvariantCulture), nombreCategoria: '@Html.Raw(categoria)' }</text>
                }
                <text>];</text>
        }

        window.recetasExistentes = [];

        @if (Model.Recetas != null && Model.Recetas.Any())
        {
                <text>window.recetasExistentes = [</text>
                var primeroRec = true;
                foreach (var rec in Model.Recetas)
                {
                        if (!primeroRec)
                        {

                        <text>,</text>
                    }
                        primeroRec = false;
                        <text>{ idReceta: @rec.IdReceta }</text>
                }
                <text>];</text>
        }
    </script>
}