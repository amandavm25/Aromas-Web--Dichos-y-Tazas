<div class="modal fade" id="modalEliminarPromocion" tabindex="-1" aria-labelledby="modalEliminarPromocionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 25px; overflow: hidden; box-shadow: var(--shadow-xl);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, var(--red) 0%, #c0392b 100%); color: var(--white); border: none; padding: 2rem;">
                <h5 class="modal-title" id="modalEliminarPromocionLabel" style="font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.5rem;">
                    <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="opacity: 1;"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2.5rem; background: var(--cream);">
                <!-- Alerta de advertencia -->
                <div class="feature-card" style="background: linear-gradient(135deg, rgba(231, 76, 60, 0.1) 0%, rgba(192, 57, 43, 0.1) 100%); padding: 2rem; margin: 0 0 2rem; border-left: 5px solid var(--red);">
                    <div style="display: flex; align-items: start; gap: 1rem;">
                        <div style="width: 50px; height: 50px; background: var(--red); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                            <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem; color: white;"></i>
                        </div>
                        <div>
                            <h6 style="color: #c0392b; margin: 0 0 0.5rem; font-weight: 700; font-size: 1.1rem;">¡ATENCIÓN!</h6>
                            <p style="margin: 0; color: #c0392b; font-weight: 500; line-height: 1.6;">
                                ¿Está seguro que desea <strong>ELIMINAR</strong> esta promoción de forma permanente? Esta acción no se puede deshacer y afectará todas las recetas asociadas.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Información de la promoción -->
                <div style="background: var(--white); padding: 2rem; border-radius: 20px; box-shadow: var(--shadow-sm);">
                    <h6 style="color: var(--dark-green); margin-bottom: 1.5rem; font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-family: var(--font-primary); font-size: 1.2rem;">
                        <i class="fas fa-tags" style="color: var(--olive-green);"></i> Detalles de la Promoción a Eliminar
                    </h6>

                    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem;">
                        <!-- ID -->
                        <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hashtag" style="color: var(--olive-green);"></i> ID
                            </label>
                            <p id="eliminar-id-display-promocion" style="color: var(--dark-green); font-size: 1.2rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Nombre -->
                        <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-tag" style="color: var(--olive-green);"></i> Nombre
                            </label>
                            <p id="eliminar-nombre-promocion" style="color: var(--dark-green); font-size: 1.1rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Tipo -->
                        <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-list" style="color: var(--olive-green);"></i> Tipo
                            </label>
                            <p id="eliminar-tipo-promocion" style="color: var(--dark-green); font-size: 1.1rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Descuento -->
                        <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-percent" style="color: var(--gold);"></i> Descuento
                            </label>
                            <p id="eliminar-descuento-promocion" style="color: var(--gold); font-size: 1.1rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Vigencia -->
                        <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar-check" style="color: var(--olive-green);"></i> Vigencia
                            </label>
                            <span id="eliminar-vigencia-badge-promocion" class="badge" style="font-size: 0.9rem; padding: 0.5rem 1.2rem; border-radius: 50px; font-weight: 600;"></span>
                        </div>

                        <!-- Estado -->
                        <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-toggle-on" style="color: var(--olive-green);"></i> Estado
                            </label>
                            <span id="eliminar-estado-badge-promocion" class="badge" style="font-size: 0.9rem; padding: 0.5rem 1.2rem; border-radius: 50px; font-weight: 600;"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--white); border: none; padding: 1.5rem 2.5rem; display: flex; justify-content: space-between; gap: 1rem;">
                <form id="formEliminarPromocion" method="post" action="" style="display: flex; gap: 1rem; width: 100%; justify-content: flex-end;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="eliminar-id-promocion" name="IdPromocion" />

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 0.9rem 2.5rem; border-radius: 50px;">
                        <span><i class="fas fa-times"></i> Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary btn-3d" style="background: linear-gradient(135deg, var(--red), #c0392b); padding: 0.9rem 2.5rem; border-radius: 50px;">
                        <span><i class="fas fa-trash"></i> Eliminar</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const botonesEliminar = document.querySelectorAll('.btn-eliminar-promocion');

        botonesEliminar.forEach(boton => {
            boton.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                const nombre = this.getAttribute('data-nombre');
                const tipo = this.getAttribute('data-tipo');
                const descuento = this.getAttribute('data-descuento');
                const vigencia = this.getAttribute('data-vigencia');
                const estado = this.getAttribute('data-estado');

                document.getElementById('eliminar-id-display-promocion').textContent = id;
                document.getElementById('eliminar-id-promocion').value = id;
                document.getElementById('eliminar-nombre-promocion').textContent = nombre;
                document.getElementById('eliminar-tipo-promocion').textContent = tipo;
                document.getElementById('eliminar-descuento-promocion').textContent = descuento;

                // Vigencia badge
                const vigenciaBadge = document.getElementById('eliminar-vigencia-badge-promocion');
                vigenciaBadge.textContent = vigencia;
                if (vigencia === 'Vigente') {
                    vigenciaBadge.style.background = 'var(--green)';
                } else if (vigencia === 'Próximamente') {
                    vigenciaBadge.style.background = 'var(--gold)';
                } else {
                    vigenciaBadge.style.background = 'var(--red)';
                }

                // Estado badge
                const estadoBadge = document.getElementById('eliminar-estado-badge-promocion');
                estadoBadge.textContent = estado;
                if (estado === 'Activa') {
                    estadoBadge.style.background = 'var(--green)';
                } else {
                    estadoBadge.style.background = 'var(--red)';
                }

                const form = document.getElementById('formEliminarPromocion');
                form.action = '/Promocion/EliminarPromocion/' + id;
            });
        });
    });
</script>