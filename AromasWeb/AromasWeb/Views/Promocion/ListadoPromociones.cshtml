@model List<AromasWeb.Abstracciones.ModeloUI.Promocion>

@{
    ViewBag.Title = "Gestión de Promociones";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-tags"></i>
                Gestión de Promociones
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Promociones Activas
            </h1>
            <p class="hero-subtitle">
                Administra las promociones y ofertas especiales del negocio
            </p>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoPromociones", "Promocion")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--teal); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre, tipo o descripción..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearPromocion", "Promocion")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Nueva Promoción</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-teal); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                    Mostrando resultados para <strong style="color: var(--coral);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> promoción(es) encontrada(s)
                </p>
            </div>
        }

        <!-- Filtros por tipo y vigencia -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 1.5rem; flex-wrap: wrap; align-items: start;">
                <!-- Filtro por tipo -->
                <div style="flex: 1; min-width: 300px;">
                    <span style="color: var(--dark-teal); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary); display: block; margin-bottom: 0.7rem;">
                        <i class="fas fa-filter" style="color: var(--coral);"></i> Filtrar por tipo:
                    </span>
                    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                        <a href="@Url.Action("ListadoPromociones", "Promocion")"
                           class="btn @(ViewBag.Tipo == null ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-th"></i> Todas</span>
                        </a>

                        @if (ViewBag.TodosTipos != null)
                        {
                            @foreach (var tipo in (List<AromasWeb.Abstracciones.ModeloUI.TipoPromocion>)ViewBag.TodosTipos)
                            {
                                <a href="@Url.Action("ListadoPromociones", "Promocion", new { tipo = tipo.IdTipoPromocion })"
                                   class="btn @(ViewBag.Tipo == tipo.IdTipoPromocion ? "btn-primary" : "btn-secondary")"
                                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                                    <span>@tipo.Nombre</span>
                                </a>
                            }
                        }
                    </div>
                </div>

                <!-- Filtro por vigencia -->
                <div style="min-width: 300px;">
                    <span style="color: var(--dark-teal); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary); display: block; margin-bottom: 0.7rem;">
                        <i class="fas fa-calendar-check" style="color: var(--coral);"></i> Filtrar por vigencia:
                    </span>
                    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                        <a href="@Url.Action("ListadoPromociones", "Promocion")"
                           class="btn @(string.IsNullOrEmpty(ViewBag.Vigencia as string) ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span>Todas</span>
                        </a>
                        <a href="@Url.Action("ListadoPromociones", "Promocion", new { vigencia = "vigente" })"
                           class="btn @(ViewBag.Vigencia == "vigente" ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span>Vigentes</span>
                        </a>
                        <a href="@Url.Action("ListadoPromociones", "Promocion", new { vigencia = "proxima" })"
                           class="btn @(ViewBag.Vigencia == "proxima" ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span>Próximas</span>
                        </a>
                        <a href="@Url.Action("ListadoPromociones", "Promocion", new { vigencia = "expirada" })"
                           class="btn @(ViewBag.Vigencia == "expirada" ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span>Expiradas</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Layout Principal: Tabla + Panel de Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDePromociones" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Nombre</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tipo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Descuento</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Inicio</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Fin</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Vigencia</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Recetas</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var promocionesDemo = new List<dynamic>
                                                        {
                                                        new { Id = 1, Nombre = "Descuento Navideño", Tipo = "Descuento Directo", Descuento = 20m, FechaInicio = "01/12/2024", FechaFin = "31/12/2024", Vigencia = "Vigente", DiasRestantes = 34, Recetas = 2, Estado = true },
                                                        new { Id = 2, Nombre = "Happy Hour Café", Tipo = "Happy Hour", Descuento = 15m, FechaInicio = "01/11/2024", FechaFin = "31/01/2025", Vigencia = "Vigente", DiasRestantes = 65, Recetas = 1, Estado = true },
                                                        new { Id = 3, Nombre = "2x1 Galletas", Tipo = "2x1", Descuento = 50m, FechaInicio = "15/11/2024", FechaFin = "30/11/2024", Vigencia = "Vigente", DiasRestantes = 3, Recetas = 1, Estado = true },
                                                        new { Id = 4, Nombre = "Combo Desayuno", Tipo = "Combo", Descuento = 25m, FechaInicio = "01/11/2024", FechaFin = "31/12/2024", Vigencia = "Vigente", DiasRestantes = 34, Recetas = 2, Estado = true },
                                                        new { Id = 5, Nombre = "Black Friday", Tipo = "Descuento Directo", Descuento = 30m, FechaInicio = "29/11/2024", FechaFin = "29/11/2024", Vigencia = "Expirada", DiasRestantes = 0, Recetas = 3, Estado = false },
                                                        new { Id = 6, Nombre = "Día de San Valentín", Tipo = "Día Especial", Descuento = 15m, FechaInicio = "14/02/2025", FechaFin = "14/02/2025", Vigencia = "Próximamente", DiasRestantes = 0, Recetas = 2, Estado = true }
                                                        };
                            }

                            @foreach (var promo in promocionesDemo)
                            {
                                var colorVigencia = promo.Vigencia == "Vigente" ? "#27ae60" : promo.Vigencia == "Próximamente" ? "#3498db" : "#e74c3c";
                                var urgente = promo.Vigencia == "Vigente" && promo.DiasRestantes <= 7 && promo.DiasRestantes > 0;
                                var rowStyle = urgente ? "background: rgba(231, 76, 60, 0.05); border-left: 4px solid #e74c3c;" : "";

                                <tr style="border-bottom: 1px solid rgba(32, 116, 118, 0.1); transition: all 0.3s; @rowStyle">
                                    <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 600;">@promo.Id</td>
                                    <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 500;">
                                        @promo.Nombre
                                        @if (urgente)
                                        {
                                            <i class="fas fa-exclamation-triangle" style="color: #e74c3c; margin-left: 0.5rem;" title="Por vencer"></i>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--black);">@promo.Tipo</td>
                                    <td style="padding: 1.2rem; color: var(--coral); font-weight: 700; font-size: 1.1rem;">@promo.Descuento%</td>
                                    <td style="padding: 1.2rem; color: var(--gray);">@promo.FechaInicio</td>
                                    <td style="padding: 1.2rem; color: var(--gray);">@promo.FechaFin</td>
                                    <td style="padding: 1.2rem;">
                                        <span style="background: @colorVigencia; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                                            @promo.Vigencia
                                            @if (promo.DiasRestantes > 0 && promo.Vigencia == "Vigente")
                                            {
                                                <span>(@promo.DiasRestantes días)</span>
                                            }
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center;">
                                        <span style="background: var(--teal); color: var(--white); padding: 0.4rem 0.8rem; border-radius: 50%; font-weight: 700;">@promo.Recetas</span>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        @if (promo.Estado)
                                        {
                                            <span style="background: #27ae60; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Activa</span>
                                        }
                                        else
                                        {
                                            <span style="background: #e74c3c; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Inactiva</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarPromocion", "Promocion", new { id = promo.Id })'"
                                                style="background: var(--teal); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-detalles-promocion"
                                                data-id="@promo.Id"
                                                data-nombre="@promo.Nombre"
                                                data-tipo="@promo.Tipo"
                                                data-descuento="@promo.Descuento"
                                                data-inicio="@promo.FechaInicio"
                                                data-fin="@promo.FechaFin"
                                                data-vigencia="@promo.Vigencia"
                                                data-recetas="@promo.Recetas"
                                                data-estado="@(promo.Estado ? "Activa" : "Inactiva")"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesPromocion"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-eliminar-promocion"
                                                data-id="@promo.Id"
                                                data-nombre="@promo.Nombre"
                                                data-tipo="@promo.Tipo"
                                                data-descuento="@promo.Descuento%"
                                                data-vigencia="@promo.Vigencia"
                                                data-estado="@(promo.Estado ? "Activa" : "Inactiva")"
                                                style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEliminarPromocion"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(32, 116, 118, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-teal); font-size: 0.95rem;">
                        Mostrando <strong>1-6</strong> de <strong>6</strong> promociones
                    </div>
                </div>
            </div>

            <!-- Panel Lateral -->
            <div style="position: sticky; top: 100px;">
                <!-- Promociones Vigentes -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden; margin-bottom: 1.5rem;">
                    <div style="background: linear-gradient(135deg, #27ae60 0%, #229954 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                            <i class="fas fa-check-circle" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Vigentes Hoy</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Promociones activas</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1.5rem; text-align: center;">
                        <h2 style="font-size: 3rem; color: #27ae60; margin: 0; font-family: var(--font-primary);">4</h2>
                        <p style="color: var(--gray); margin: 0.5rem 0 0;">promociones activas</p>
                    </div>
                </div>

                <!-- Por Vencer -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                            <i class="fas fa-clock" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Por Vencer</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Próximos 7 días</p>
                            </div>
                        </div>
                    </div>
                    <div id="alertasPorVencer" style="padding: 1rem; display: grid; gap: 0.7rem;">
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid #e74c3c;">
                            <strong style="color: var(--dark-teal); font-size: 0.95rem; display: block; margin-bottom: 0.3rem;">2x1 Galletas</strong>
                            <div style="font-size: 0.85rem; color: var(--gray);">
                                <i class="fas fa-calendar"></i> Vence en <strong style="color: #e74c3c;">3 días</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resumen Estadísticas -->
        <div style="margin-top: 3rem;" data-aos="fade-up">
            <div style="background: linear-gradient(135deg, var(--teal), var(--dark-teal)); padding: 2.5rem; border-radius: 25px; box-shadow: var(--shadow-lg);">
                <h5 style="margin: 0 0 2rem; color: white; font-weight: 600; display: flex; align-items: center; gap: 0.5rem; font-size: 1.3rem;">
                    <i class="fas fa-chart-pie"></i> Resumen de Promociones
                </h5>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-tags" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Total Promociones</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">6</h4>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-percent" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Descuento Promedio</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">25.8%</h4>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-utensils" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Recetas en Promoción</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">11</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesPromocion" />
<partial name="_ModalEliminarPromocion" />

@section Scripts {
    <script src="~/js/promocion.js"></script>
}