@model List<AromasWeb.Abstracciones.ModeloUI.Promocion>

@{
    ViewBag.Title = "Gestión de Promociones";
    var totalPromociones = Model?.Count ?? 0;
    var promoVigentes = Model?.Where(p => p.EstaVigente).Count() ?? 0;
    var descuentoPromedio = Model != null && Model.Any() ? Model.Average(p => p.PorcentajeDescuento) : 0;
    var totalRecetas = Model?.Sum(p => p.CantidadRecetas) ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-tags"></i>
                Gestión de Promociones
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Promociones
            </h1>
            <p class="hero-subtitle">
                Administra las promociones y ofertas especiales del negocio
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Tarjetas de resumen -->
        <div class="features-grid" style="margin-bottom: 3rem; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalPromociones</h3>
                <p style="margin: 0.5rem 0;">Total Promociones</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@promoVigentes</h3>
                <p style="margin: 0.5rem 0;">Vigentes Hoy</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-percent"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@descuentoPromedio.ToString("F1")%</h3>
                <p style="margin: 0.5rem 0;">Descuento Promedio</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalRecetas</h3>
                <p style="margin: 0.5rem 0;">Recetas en Promoción</p>
            </div>
        </div>

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoPromociones", "Promocion")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre, tipo o descripción..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearPromocion", "Promocion")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Nueva Promoción</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> promoción(es) encontrada(s)
                </p>
            </div>
        }

        <!-- Filtros -->
        <div style="margin-bottom: 2rem;" data-aos="fade-up">
            <div style="display: flex; gap: 1.5rem; flex-wrap: wrap; align-items: start;">

                <!-- Filtro por tipo -->
                <div style="flex: 1; min-width: 300px;">
                    <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary); display: block; margin-bottom: 0.7rem;">
                        <i class="fas fa-filter" style="color: var(--gold-bright);"></i> Filtrar por tipo:
                    </span>
                    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                        <a href="@Url.Action("ListadoPromociones", "Promocion")"
                           class="btn @(ViewBag.Tipo == null ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-th"></i> Todas</span>
                        </a>
                        @if (ViewBag.TodosTipos != null)
                        {
                            @foreach (var tipo in (List<AromasWeb.Abstracciones.ModeloUI.TipoPromocion>)ViewBag.TodosTipos)
                            {
                                <a href="@Url.Action("ListadoPromociones", "Promocion", new { tipo = tipo.IdTipoPromocion })"
                                   class="btn @(ViewBag.Tipo == tipo.IdTipoPromocion ? "btn-primary" : "btn-secondary")"
                                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                                    <span>@tipo.Nombre</span>
                                </a>
                            }
                        }
                    </div>
                </div>

                <!-- Filtro por vigencia -->
                <div style="flex: 1; min-width: 300px;">
                    <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary); display: block; margin-bottom: 0.7rem;">
                        <i class="fas fa-calendar-check" style="color: var(--gold-bright);"></i> Filtrar por vigencia:
                    </span>
                    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                        <a href="@Url.Action("ListadoPromociones", "Promocion")"
                           class="btn @(string.IsNullOrEmpty(ViewBag.Vigencia as string) ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-th"></i> Todas</span>
                        </a>
                        <a href="@Url.Action("ListadoPromociones", "Promocion", new { vigencia = "Vigente" })"
                           class="btn @(ViewBag.Vigencia == "Vigente" ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-check-circle"></i> Vigentes</span>
                        </a>
                        <a href="@Url.Action("ListadoPromociones", "Promocion", new { vigencia = "Próximamente" })"
                           class="btn @(ViewBag.Vigencia == "Próximamente" ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-clock"></i> Próximas</span>
                        </a>
                        <a href="@Url.Action("ListadoPromociones", "Promocion", new { vigencia = "Expirada" })"
                           class="btn @(ViewBag.Vigencia == "Expirada" ? "btn-primary" : "btn-secondary")"
                           style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-times-circle"></i> Expiradas</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grid principal: tabla + panel lateral -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div class="admin-table-container">
                <div class="table-responsive">
                    <table class="admin-table" id="laTablaDeProm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th style="text-align: center;">Descuento</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Vigencia</th>
                                <th>Estado</th>
                                <th style="text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int contador = 1;
                                foreach (var promo in Model)
                                {
                                    <tr>
                                        <td class="td-id">@contador</td>
                                        <td class="td-nombre">
                                            @promo.Nombre
                                        </td>
                                        <td>
                                            <span class="badge-cantidad">@promo.NombreTipoPromocion</span>
                                        </td>
                                        <td style="text-align: center; font-weight: 700; color: var(--gold); font-size: 1.05rem;">
                                            @promo.PorcentajeDescuento%
                                        </td>
                                        <td style="color: var(--charcoal);">@promo.FechaInicio.ToString("dd/MM/yyyy")</td>
                                        <td style="color: var(--charcoal);">@promo.FechaFin.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @{
                                                var claseVigencia = promo.VigenciaTexto == "Vigente" ? "activo" :
                                                promo.VigenciaTexto == "Próximamente" ? "badge-pendiente" : "inactivo";
                                            }
                                            <span class="badge-estado @claseVigencia">
                                                @promo.VigenciaTexto
                                                @if (promo.DiasRestantes > 0 && promo.VigenciaTexto == "Vigente")
                                                {
                                                    <span>(@promo.DiasRestantes d.)</span>
                                                }
                                            </span>
                                        </td>
                                        <td>
                                            @if (promo.Estado)
                                            {
                                                <span class="badge-estado activo">Activa</span>
                                            }
                                            else
                                            {
                                                <span class="badge-estado inactivo">Inactiva</span>
                                            }
                                        </td>
                                        <td style="text-align: center; white-space: nowrap;">
                                            <button type="button"
                                                    class="btn-table-action btn-table-edit"
                                                    onclick="window.location.href='@Url.Action("EditarPromocion", "Promocion", new { id = promo.IdPromocion })'"
                                                    title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn-table-action btn-table-view btn-detalles-promocion"
                                                    data-id="@promo.IdPromocion"
                                                    data-nombre="@promo.Nombre"
                                                    data-tipo="@promo.NombreTipoPromocion"
                                                    data-descuento="@promo.PorcentajeDescuento"
                                                    data-inicio="@promo.FechaInicio.ToString("dd/MM/yyyy")"
                                                    data-fin="@promo.FechaFin.ToString("dd/MM/yyyy")"
                                                    data-vigencia="@promo.VigenciaTexto"
                                                    data-recetas="@promo.CantidadRecetas"
                                                    data-estado="@promo.EstadoTexto"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetallesPromocion"
                                                    title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    contador++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="admin-table-empty">
                                        <i class="fas fa-inbox"></i>
                                        <p>No se encontraron promociones</p>
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || ViewBag.Tipo != null || !string.IsNullOrWhiteSpace(ViewBag.Vigencia as string))
                                        {
                                            <p class="empty-subtitle">Intenta con otros filtros o términos de búsqueda</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div class="admin-table-footer">
                    <div class="admin-table-footer-text">
                        Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                    </div>
                    <div class="pagination-buttons">
                        <button id="btnAnterior" class="pagination-btn">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </button>
                        <button id="btnSiguiente" class="pagination-btn">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel Lateral -->
            <div style="position: sticky; top: 100px;">

                <!-- Vigentes Hoy -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden; margin-bottom: 1.5rem;">
                    <div style="background: var(--olive-green); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-check-circle" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Vigentes Hoy</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Promociones activas</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1.5rem; text-align: center;">
                        <h2 style="font-size: 3rem; color: var(--olive-green); margin: 0; font-family: var(--font-primary);">@promoVigentes</h2>
                        <p style="color: var(--charcoal); opacity: 0.7; margin: 0.5rem 0 0;">promociones activas</p>
                    </div>
                </div>

                <!-- Por Vencer -->
                @{
                    var promoPorVencer = Model?.Where(p => p.EstaVigente && p.DiasRestantes <= 7 && p.DiasRestantes > 0).ToList();
                }
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: var(--gold); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-clock" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Por Vencer</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Próximos 7 días</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem;">
                        @if (promoPorVencer != null && promoPorVencer.Any())
                        {
                            @foreach (var promo in promoPorVencer)
                            {
                                <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                                    <strong style="color: var(--dark-green); font-size: 0.95rem; display: block; margin-bottom: 0.3rem;">@promo.Nombre</strong>
                                    <div style="font-size: 0.85rem; color: var(--charcoal); opacity: 0.7;">
                                        <i class="fas fa-calendar"></i> Vence en <strong style="color: var(--gold);">@promo.DiasRestantes días</strong>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div style="padding: 1rem; text-align: center; color: var(--charcoal); opacity: 0.5;">
                                <i class="fas fa-check-circle" style="font-size: 2rem; margin-bottom: 0.5rem; display: block;"></i>
                                <p style="margin: 0; font-size: 0.9rem;">No hay promociones por vencer</p>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesPromocion" />

@section Scripts {
    <script src="~/js/promocion.js" asp-append-version="true"></script>
}