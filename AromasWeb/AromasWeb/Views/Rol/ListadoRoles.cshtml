@model List<AromasWeb.Abstracciones.ModeloUI.Rol>

@{
    ViewBag.Title = "Gestión de Roles";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-shield"></i>
                Gestión de Roles
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Roles Registrados
            </h1>
            <p class="hero-subtitle">
                Administra los roles del personal del negocio
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoRoles", "Rol")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre o descripción..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearRol", "Rol")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Agregar Rol</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> rol(es) encontrado(s)
                </p>
            </div>
        }

        <!-- Filtro por estado -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold-bright);"></i> Filtrar por estado:
                </span>
                <a href="@Url.Action("ListadoRoles", "Rol")"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todos</span>
                </a>
                <a href="@Url.Action("ListadoRoles", "Rol", new { filtroEstado = "activo" })"
                   class="btn @(ViewBag.FiltroEstado == "activo" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Activos</span>
                </a>
                <a href="@Url.Action("ListadoRoles", "Rol", new { filtroEstado = "inactivo" })"
                   class="btn @(ViewBag.FiltroEstado == "inactivo" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> Inactivos</span>
                </a>
            </div>
        </div>

        <!-- Tabla Principal -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;" data-aos="fade-up">
            <div class="table-responsive">
                <table id="laTablaDeRoles" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Nombre</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Descripción</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var rolesDemo = new List<dynamic>
                                                {
                                                new { Id = 1, Nombre = "Administrador", Descripcion = "Acceso completo al sistema", Estado = true },
                                                new { Id = 2, Nombre = "Empleado", Descripcion = "Usuario estándar", Estado = true }
                                                };
                        }

                        @foreach (var rol in rolesDemo)
                        {
                            <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1); transition: all 0.3s;">
                                <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@rol.Id</td>
                                <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 500;">@rol.Nombre</td>
                                <td style="padding: 1.2rem; color: var(--charcoal);">@rol.Descripcion</td>
                                <td style="padding: 1.2rem;">
                                    @if (rol.Estado)
                                    {
                                        <span style="background: #27ae60; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Activo</span>
                                    }
                                    else
                                    {
                                        <span style="background: #e74c3c; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Inactivo</span>
                                    }
                                </td>
                                <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                    <button type="button"
                                            class="btn btn-sm"
                                            onclick="window.location.href='@Url.Action("AsignarPermisos", "Permiso", new { id = rol.Id })'"
                                            style="background: var(--gold); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                            title="Asignar Permisos">
                                        <i class="fas fa-shield-alt"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm"
                                            onclick="window.location.href='@Url.Action("EditarRol", "Rol", new { id = rol.Id })'"
                                            style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                            title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm btn-detalles"
                                            data-id="@rol.Id"
                                            data-nombre="@rol.Nombre"
                                            data-descripcion="@rol.Descripcion"
                                            data-estado="@(rol.Estado ? "Activo" : "Inactivo")"
                                            style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalDetallesRol"
                                            title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm btn-eliminar"
                                            data-id="@rol.Id"
                                            data-nombre="@rol.Nombre"
                                            data-descripcion="@rol.Descripcion"
                                            data-estado="@(rol.Estado ? "Activo" : "Inactivo")"
                                            style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalEliminarRol"
                                            title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                <div style="color: var(--dark-green); font-size: 0.95rem;">
                    Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">2</span></strong> de <strong id="totalRecords">2</strong> roles
                </div>
                <div style="display: flex; gap: 0.5rem;">
                    <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                        &lt; Anterior
                    </button>
                    <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                        Siguiente &gt;
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesRol" />
<partial name="_ModalEliminarRol" />

@section Scripts {
    <script src="~/js/rol.js"></script>
}