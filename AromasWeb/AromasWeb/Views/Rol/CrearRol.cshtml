@model AromasWeb.Abstracciones.ModeloUI.Rol

@{
    ViewBag.Title = "Agregar Rol";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-plus"></i>
                Nuevo Registro
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Agregar un
                <span class="hero-title-accent">Rol</span>
            </h1>
            <p class="hero-subtitle">
                Registra un nuevo rol en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("CrearRol", "Rol", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="contact-form-wrapper" data-aos="fade-up">
                <form class="contact-form">
                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <!-- Información del Rol -->
                    <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-user-shield"></i> Información del Rol
                        </h5>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-tag"></i>
                            Nombre del Rol
                        </label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Supervisor" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        @Html.TextAreaFor(model => model.Descripcion, 4, 50, new { @class = "form-control", placeholder = "Describe el rol...", style = "min-height: 120px; resize: vertical;" })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>

                    <!-- Estado del Rol -->
                    <div class="form-group">
                        <label style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; cursor: pointer; border: 2px solid rgba(143, 142, 106, 0.2);">
                            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input", id = "estadoCheckbox", @checked = "checked" } })
                            <span style="flex: 1;">
                                <i class="fas fa-toggle-on"></i>
                                Estado del Rol (Activo/Inactivo)
                            </span>
                        </label>
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoRoles", "Rol")'" style="flex: 1;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1;">
                            <span><i class="fas fa-save"></i> Agregar Rol</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/rol.js"></script>
}