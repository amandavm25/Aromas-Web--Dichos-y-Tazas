@model AromasWeb.Abstracciones.ModeloUI.Rol

@{
    ViewBag.Title = "Agregar Rol";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-plus-circle"></i>
                Nuevo Registro
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Agregar un
                <span class="hero-title-accent">Rol</span>
            </h1>
            <p class="hero-subtitle">
                Registra un nuevo rol en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("CrearRol", "Rol", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Header -->
                <div class="admin-form-header">
                    <i class="fas fa-user-shield"></i>
                    <h5>Información del Rol</h5>
                </div>

                <div class="admin-form-body">

                    <!-- Nombre -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-tag"></i>
                            Nombre del Rol
                        </label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Supervisor" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Describe las responsabilidades de este rol...", rows = 4 })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>

                    <!-- Estado -->
                    <div class="form-group">
                        <div class="form-check" style="padding: 1.5rem; background: var(--cream); border-radius: 15px; display: flex; align-items: center; gap: 1rem; cursor: pointer;">
                            <input class="form-check-input" type="checkbox" name="Estado" id="estadoCheckbox" value="true"
                                   checked
                                   style="width:20px;height:20px;flex-shrink:0;cursor:pointer;margin-top:0;" />
                            <input type="hidden" name="Estado" value="false" />
                            <label class="form-check-label" for="estadoCheckbox" style="cursor:pointer;flex:1;margin-bottom:0;">
                                <i class="fas fa-toggle-on"></i>
                                Estado del Rol (Activo/Inactivo)
                            </label>
                        </div>
                        <small class="admin-form-hint">
                            <i class="fas fa-info-circle"></i>
                            Activa o desactiva el rol en el sistema
                        </small>
                    </div>

                    <!-- Info box -->
                    <div class="admin-form-info-box">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <strong>Registro de Nuevo Rol</strong>
                            <p>Una vez creado, podrás asignar permisos específicos a este rol desde el listado de roles.</p>
                        </div>
                    </div>

                </div>

                <!-- Botones -->
                <div class="admin-form-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoRoles", "Rol")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <span>Agregar Rol</span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/rol.js"></script>
}