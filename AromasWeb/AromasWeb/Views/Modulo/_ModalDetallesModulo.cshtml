<div class="modal fade admin-modal modal-olive" id="modalDetallesModulo" tabindex="-1" aria-labelledby="modalDetallesModuloLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalDetallesModuloLabel">
                    <div class="modal-icon">
                        <i class="fas fa-cube"></i>
                    </div>
                    Detalles del Módulo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">

                <!-- Nombre del Módulo -->
                <div class="modal-entity-header entity-block">
                    <h5 id="detalles-nombre-modulo" class="modal-entity-name"></h5>
                </div>

                <!-- ID y Estado en 2 columnas -->
                <div class="modal-data-grid-2">
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-hashtag"></i> ID del Módulo
                        </label>
                        <p id="detalles-id-modulo" class="modal-data-value"></p>
                    </div>
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-toggle-on"></i> Estado
                        </label>
                        <span id="detalles-estado-badge-modulo" class="badge"
                              style="font-size: 0.95rem; padding: 0.4rem 1.2rem; border-radius: 50px; font-weight: 600; display: inline-block;"></span>
                    </div>
                </div>

                <!-- Descripción -->
                <h6 class="modal-subsection-title">
                    <i class="fas fa-align-left"></i> Descripción
                </h6>
                <div class="modal-summary">
                    <div class="modal-summary-grid" style="grid-template-columns: 1fr;">
                        <div>
                            <p id="detalles-descripcion-modulo" class="modal-summary-value"
                               style="font-weight: 400; font-size: 1rem; line-height: 1.6;"></p>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.btn-detalles-modulo').forEach(btn => {
            btn.addEventListener('click', function () {
                document.getElementById('detalles-id-modulo').textContent = '#' + this.dataset.id;
                document.getElementById('detalles-nombre-modulo').textContent = this.dataset.nombre;
                document.getElementById('detalles-descripcion-modulo').textContent = this.dataset.descripcion || 'Sin descripción';

                const badge = document.getElementById('detalles-estado-badge-modulo');
                const estado = this.dataset.estado;
                badge.textContent = estado;
                badge.style.background = estado === 'Activo' ? 'var(--green)' : 'var(--red)';
                badge.style.color = 'white';
            });
        });
    });
</script>