@model AromasWeb.Abstracciones.ModeloUI.Modulo

@{
    ViewBag.Title = "Editar Módulo";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar un
                <span class="hero-title-accent">Módulo</span>
            </h1>
            <p class="hero-subtitle">
                Modifica la información del módulo en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("EditarModulo", "Modulo", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdModulo)

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Header -->
                <div class="admin-form-header">
                    <i class="fas fa-cube"></i>
                    <h5>Información del Módulo</h5>
                </div>

                <div class="admin-form-body">

                    <!-- Nombre -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-tag"></i>
                            Nombre del Módulo
                        </label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Gestión de Empleados" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Describe la funcionalidad del módulo...", rows = 4 })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>

                    <!-- Estado -->
                    <div class="form-group">
                        <label for="estadoCheckbox" style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; cursor: pointer;">
                            <input type="checkbox" name="Estado" id="estadoCheckbox" value="true"
                                   class="form-check-input" style="width:20px;height:20px;flex-shrink:0;cursor:pointer;"
                                   @(Model.Estado ? "checked" : "") />
                            <input type="hidden" name="Estado" value="false" />
                            <span style="flex: 1;">
                                <i class="fas fa-toggle-on"></i>
                                Estado (Activo/Inactivo)
                            </span>
                        </label>
                        <small class="admin-form-hint">
                            <i class="fas fa-info-circle"></i>
                            Activa o desactiva el módulo en el sistema
                        </small>
                    </div>

                    <!-- Info box -->
                    <div class="admin-form-info-box">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <strong>Actualización de Módulo</strong>
                            <p>Los cambios se aplicarán a todos los roles que tengan asignado este módulo.</p>
                        </div>
                    </div>

                </div>

                <!-- Botones -->
                <div class="admin-form-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoModulos", "Modulo")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        <span>Guardar Cambios</span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/modulo.js"></script>
}