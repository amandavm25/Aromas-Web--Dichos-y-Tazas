@model AromasWeb.Abstracciones.ModeloUI.Modulo

@{
    ViewBag.Title = "Agregar Módulo";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-plus-circle"></i>
                Nuevo Registro
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Agregar un
                <span class="hero-title-accent">Módulo</span>
            </h1>
            <p class="hero-subtitle">
                Registra un nuevo módulo en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 800px;">
        @using (Html.BeginForm("CrearModulo", "Modulo", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="contact-form-wrapper" data-aos="fade-up">
                <form class="contact-form">
                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <!-- Información del Módulo -->
                    <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-cube"></i> Información del Módulo
                        </h5>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-tag"></i>
                            Nombre del Módulo
                        </label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Gestión de Empleados" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Describe la funcionalidad del módulo...", rows = 4 })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>

                    <!-- Estado del Módulo -->
                    <div class="form-group">
                        <label style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: #F5EDD8; border-radius: 15px; cursor: pointer;">
                            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input", id = "estadoCheckbox", @checked = "checked" } })
                            <span style="flex: 1;">
                                <i class="fas fa-toggle-on"></i>
                                Estado del Módulo (Activo/Inactivo)
                            </span>
                        </label>
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                        <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7;">
                            <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                            Activa o desactiva el módulo en el sistema
                        </small>
                    </div>

                    <!-- Información adicional -->
                    <div class="feature-card" style="margin: 2rem 0; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <i class="fas fa-info-circle" style="color: var(--olive-green); font-size: 2rem;"></i>
                            <div>
                                <strong style="color: var(--dark-green); display: block; margin-bottom: 0.3rem;">Registro de Nuevo Módulo</strong>
                                <p style="margin: 0; color: var(--charcoal); opacity: 0.85; font-size: 0.95rem;">
                                    Este módulo será agregado al sistema y podrá ser asignado a diferentes roles de usuario.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoModulos", "Modulo")'" style="flex: 1;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1;">
                            <span><i class="fas fa-save"></i> Agregar Módulo</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/modulo.js"></script>
}