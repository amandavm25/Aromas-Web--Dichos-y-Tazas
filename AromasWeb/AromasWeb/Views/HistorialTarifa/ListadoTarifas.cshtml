@model List<AromasWeb.Abstracciones.ModeloUI.HistorialTarifa>

@{
    ViewBag.Title = "Historial de Tarifas";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-money-bill-wave"></i>
                Gestión Salarial
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de Tarifas
            </h1>
            <p class="hero-subtitle">
                Consulta y administra el historial de tarifas por hora del personal
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoTarifas", "HistorialTarifa")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por empleado..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <select name="estado"
                        style="padding: 1rem 2rem; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); box-shadow: var(--shadow-sm);">
                    <option value="">Todos los estados</option>
                    <option value="Vigente" @@(ViewBag.EstadoFiltro == "Vigente" ? "selected" : "")>Vigente</option>
                    <option value="Vencida" @@(ViewBag.EstadoFiltro == "Vencida" ? "selected" : "")>Vencida</option>
                    <option value="Futura" @@(ViewBag.EstadoFiltro == "Futura" ? "selected" : "")>Futura</option>
                </select>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearTarifa", "HistorialTarifa")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Registrar Nueva Tarifa</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || !string.IsNullOrWhiteSpace(ViewBag.EstadoFiltro as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                    {
                        <span>Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong></span>
                    }
                    @if (!string.IsNullOrWhiteSpace(ViewBag.EstadoFiltro as string))
                    {
                        <span>- Estado: <strong style="color: var(--gold-bright);">@ViewBag.EstadoFiltro</strong></span>
                    }
                    - <strong>@(Model?.Count ?? 0)</strong> tarifa(s) encontrada(s)
                </p>
            </div>
        }

        <!-- Tabla Principal -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;" data-aos="fade-up">
            <div class="table-responsive">
                <table id="laTablaDeTarifas" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tarifa/Hora</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Salario Mensual</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Motivo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Vigencia</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var tarifa in Model)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@tarifa.IdHistorialTarifa</td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; font-size: 1.05rem;">
                                        <i class="fas fa-user-tie" style="color: var(--gold-bright); margin-right: 0.5rem;"></i>
                                        Empleado #@tarifa.IdEmpleado
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span style="color: var(--gold-bright); font-weight: 700; font-size: 1.3rem;">
                                            ₡@tarifa.TarifaHora.ToString("N2")
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">
                                        <span style="font-weight: 600;">₡@tarifa.SalarioMensualEstimado.ToString("N2")</span>
                                        <br />
                                        <small style="opacity: 0.7; font-size: 0.85rem;">(estimado)</small>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); max-width: 300px;">
                                        @(tarifa.Motivo.Length > 50 ? tarifa.Motivo.Substring(0, 50) + "..." : tarifa.Motivo)
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); white-space: nowrap;">
                                        <div style="display: flex; flex-direction: column; gap: 0.25rem;">
                                            <span>
                                                <i class="fas fa-play" style="color: #27ae60; margin-right: 0.3rem;"></i>
                                                @tarifa.FechaInicioFormateada
                                            </span>
                                            <span>
                                                <i class="fas fa-stop" style="color: #e74c3c; margin-right: 0.3rem;"></i>
                                                @tarifa.FechaFinFormateada
                                            </span>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        @{
                                            var estadoColor = tarifa.EstadoVigencia switch
                                            {
                                                "Vigente" => "#27ae60",
                                                "Vencida" => "#e74c3c",
                                                "Futura" => "#3498db",
                                                _ => "#95a5a6"
                                            };
                                        }
                                        <span style="background: @estadoColor; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                                            @tarifa.EstadoVigencia
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        @if (tarifa.EstadoVigencia == "Vigente")
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-finalizar-tarifa"
                                                    data-id="@tarifa.IdHistorialTarifa"
                                                    data-empleado="Empleado #@tarifa.IdEmpleado"
                                                    data-tarifa="₡@tarifa.TarifaHora.ToString("N2")"
                                                    style="background: #f39c12; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalFinalizarTarifa"
                                                    title="Finalizar tarifa">
                                                <i class="fas fa-stop-circle"></i>
                                            </button>
                                        }
                                        <button type="button"
                                                class="btn btn-sm btn-detalles-tarifa"
                                                data-id="@tarifa.IdHistorialTarifa"
                                                data-empleado="Empleado #@tarifa.IdEmpleado"
                                                data-tarifa="₡@tarifa.TarifaHora.ToString("N2")"
                                                data-salario="₡@tarifa.SalarioMensualEstimado.ToString("N2")"
                                                data-motivo="@tarifa.Motivo"
                                                data-fecha-inicio="@tarifa.FechaInicioFormateada"
                                                data-fecha-fin="@tarifa.FechaFinFormateada"
                                                data-fecha-registro="@tarifa.FechaRegistroFormateada"
                                                data-estado="@tarifa.EstadoVigencia"
                                                data-cumple-minimo="@(tarifa.CumpleSalarioMinimo ? "Sí" : "No")"
                                                data-dias-vigencia="@tarifa.DiasVigencia"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesTarifa"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <a href="@Url.Action("VerHistorialEmpleado", "HistorialTarifa", new { id = tarifa.IdEmpleado })"
                                           class="btn btn-sm"
                                           style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px; text-decoration: none; display: inline-block;"
                                           title="Ver historial completo">
                                            <i class="fas fa-history"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" style="padding: 3rem; text-align: center; color: var(--charcoal);">
                                    <i class="fas fa-inbox" style="font-size: 3rem; color: var(--olive-green); opacity: 0.5; margin-bottom: 1rem; display: block;"></i>
                                    <p style="margin: 0; font-size: 1.1rem;">No se encontraron tarifas</p>
                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                                    {
                                        <p style="margin: 0.5rem 0 0 0; opacity: 0.7;">Intenta con otros términos de búsqueda</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                <div style="color: var(--dark-green); font-size: 0.95rem;">
                    Mostrando <strong>@(Model?.Count ?? 0)</strong> de <strong>@(Model?.Count ?? 0)</strong> tarifas
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Detalles -->
<div class="modal fade" id="modalDetallesTarifa" tabindex="-1" aria-labelledby="modalDetallesTarifaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border-radius: 20px; border: none; overflow: hidden;">
            <div class="modal-header" style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); color: var(--white); border: none;">
                <h5 class="modal-title" id="modalDetallesTarifaLabel">
                    <i class="fas fa-info-circle"></i> Detalles de la Tarifa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="padding: 2rem;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Empleado:</label>
                        <p id="detalleEmpleado" style="color: var(--dark-green); font-size: 1.1rem; font-weight: 600; margin: 0;"></p>
                    </div>
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Estado:</label>
                        <span id="detalleEstado"></span>
                    </div>
                </div>
                <hr style="margin: 1.5rem 0; border-color: rgba(143, 142, 106, 0.2);">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Tarifa por Hora:</label>
                        <p id="detalleTarifa" style="color: var(--gold-bright); font-size: 1.8rem; font-weight: 700; margin: 0;"></p>
                    </div>
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Salario Mensual Estimado:</label>
                        <p id="detalleSalario" style="color: var(--charcoal); font-size: 1.3rem; font-weight: 600; margin: 0;"></p>
                        <small style="opacity: 0.7; font-size: 0.85rem;">(basado en 207.84 horas/mes)</small>
                    </div>
                </div>
                <hr style="margin: 1.5rem 0; border-color: rgba(143, 142, 106, 0.2);">
                <div>
                    <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Motivo del Cambio:</label>
                    <p id="detalleMotivo" style="color: var(--charcoal); margin: 0;"></p>
                </div>
                <hr style="margin: 1.5rem 0; border-color: rgba(143, 142, 106, 0.2);">
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1.5rem;">
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Fecha Inicio:</label>
                        <p id="detalleFechaInicio" style="color: var(--charcoal); margin: 0;"></p>
                    </div>
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Fecha Fin:</label>
                        <p id="detalleFechaFin" style="color: var(--charcoal); margin: 0;"></p>
                    </div>
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Días de Vigencia:</label>
                        <p id="detalleDiasVigencia" style="color: var(--charcoal); font-weight: 600; margin: 0;"></p>
                    </div>
                </div>
                <hr style="margin: 1.5rem 0; border-color: rgba(143, 142, 106, 0.2);">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Fecha de Registro:</label>
                        <p id="detalleFechaRegistro" style="color: var(--charcoal); margin: 0;"></p>
                    </div>
                    <div>
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Cumple Salario Mínimo:</label>
                        <span id="detalleCumpleMinimo"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="border: none; padding: 1rem 2rem;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 50px; padding: 0.75rem 2rem;">
                    <i class="fas fa-times"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Finalizar Tarifa -->
<div class="modal fade" id="modalFinalizarTarifa" tabindex="-1" aria-labelledby="modalFinalizarTarifaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 20px; border: none; overflow: hidden;">
            <div class="modal-header" style="background: #f39c12; color: var(--white); border: none;">
                <h5 class="modal-title" id="modalFinalizarTarifaLabel">
                    <i class="fas fa-stop-circle"></i> Finalizar Tarifa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formFinalizarTarifa" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body" style="padding: 2rem;">
                    <p style="font-size: 1.1rem; color: var(--charcoal); margin-bottom: 1.5rem;">
                        ¿Está seguro que desea finalizar la siguiente tarifa?
                    </p>
                    <div style="background: var(--cream); padding: 1.5rem; border-radius: 15px; border-left: 4px solid #f39c12;">
                        <p style="margin: 0 0 0.5rem 0; color: var(--dark-green);"><strong>Empleado:</strong> <span id="finalizarEmpleado"></span></p>
                        <p style="margin: 0; color: var(--dark-green);"><strong>Tarifa Actual:</strong> <span id="finalizarTarifa"></span></p>
                    </div>
                    <div style="margin-top: 1.5rem;">
                        <label style="color: var(--olive-green); font-weight: 600; display: block; margin-bottom: 0.5rem;">Fecha de Finalización:</label>
                        <input type="date" 
                               name="fechaFin" 
                               required
                               style="width: 100%; padding: 1rem; border: 2px solid var(--cream); border-radius: 10px; font-size: 1rem;">
                    </div>
                </div>
                <div class="modal-footer" style="border: none; padding: 1rem 2rem;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 50px; padding: 0.75rem 2rem;">
                        <i class="fas fa-times"></i> Cancelar
                    </button>
                    <button type="submit" class="btn" style="border-radius: 50px; padding: 0.75rem 2rem; background: #f39c12; border: none; color: var(--white);">
                        <i class="fas fa-stop-circle"></i> Finalizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal de detalles
        document.querySelectorAll('.btn-detalles-tarifa').forEach(btn => {
            btn.addEventListener('click', function() {
                document.getElementById('detalleEmpleado').textContent = this.dataset.empleado;
                document.getElementById('detalleTarifa').textContent = this.dataset.tarifa;
                document.getElementById('detalleSalario').textContent = this.dataset.salario;
                document.getElementById('detalleMotivo').textContent = this.dataset.motivo;
                document.getElementById('detalleFechaInicio').textContent = this.dataset.fechaInicio;
                document.getElementById('detalleFechaFin').textContent = this.dataset.fechaFin;
                document.getElementById('detalleFechaRegistro').textContent = this.dataset.fechaRegistro;
                document.getElementById('detalleDiasVigencia').textContent = this.dataset.diasVigencia + ' días';
                
                const estado = this.dataset.estado;
                let estadoColor = '#95a5a6';
                if (estado === 'Vigente') estadoColor = '#27ae60';
                else if (estado === 'Vencida') estadoColor = '#e74c3c';
                else if (estado === 'Futura') estadoColor = '#3498db';
                
                const estadoHtml = `<span style="background: ${estadoColor}; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">${estado}</span>`;
                document.getElementById('detalleEstado').innerHTML = estadoHtml;
                
                const cumpleMinimo = this.dataset.cumpleMinimo;
                const minimoColor = cumpleMinimo === 'Sí' ? '#27ae60' : '#e74c3c';
                const minimoHtml = `<span style="background: ${minimoColor}; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">${cumpleMinimo}</span>`;
                document.getElementById('detalleCumpleMinimo').innerHTML = minimoHtml;
            });
        });

        // Modal de finalizar
        document.querySelectorAll('.btn-finalizar-tarifa').forEach(btn => {
            btn.addEventListener('click', function() {
                const id = this.dataset.id;
                const empleado = this.dataset.empleado;
                const tarifa = this.dataset.tarifa;
                
                document.getElementById('finalizarEmpleado').textContent = empleado;
                document.getElementById('finalizarTarifa').textContent = tarifa;
                document.getElementById('formFinalizarTarifa').action = '@Url.Action("FinalizarTarifa", "HistorialTarifa")'.replace('0', id) + '?id=' + id;
            });
        });
    </script>
}