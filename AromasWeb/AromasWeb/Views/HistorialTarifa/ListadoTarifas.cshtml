@model List<AromasWeb.Abstracciones.ModeloUI.HistorialTarifa>

@{
    ViewBag.Title = "Historial de Tarifas";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-money-bill-wave"></i>
                Gestión Salarial
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de
                <span class="hero-title-accent">Tarifas</span>
            </h1>
            <p class="hero-subtitle">
                Consulta y administra el historial de tarifas por hora de todos los empleados
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Estadísticas Rápidas (ARRIBA) -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-history" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">6</h3>
                <p style="margin: 0; opacity: 0.9;">Registros Totales</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--green) 0%, #4d9160 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-check-circle" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">4</h3>
                <p style="margin: 0; opacity: 0.9;">Tarifas Vigentes</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--amber) 0%, var(--coral) 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-dollar-sign" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">₡2,175.00</h3>
                <p style="margin: 0; opacity: 0.9;">Tarifa Promedio</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--coral) 0%, #c75a3a 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-users" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">4</h3>
                <p style="margin: 0; opacity: 0.9;">Empleados Activos</p>
            </div>
        </div>

        <!-- Filtros y Búsqueda -->
        <div class="contact-form-wrapper" style="margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoTarifas", "HistorialTarifa")">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 1.5rem;">
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user"></i> Filtrar por Empleado
                        </label>
                        @{
                            var empleadosData = new List<dynamic>
                            {
                                new { IdEmpleado = 1, NombreCompleto = "Kenneth Salas", Cargo = "Chef Principal" },
                                new { IdEmpleado = 2, NombreCompleto = "María González", Cargo = "Asistente de Cocina" },
                                new { IdEmpleado = 3, NombreCompleto = "David Rodríguez", Cargo = "Barista" },
                                new { IdEmpleado = 4, NombreCompleto = "Ana Jiménez", Cargo = "Cajera" }
                            };
                        }
                        <select name="empleado" class="form-control">
                            <option value="">Todos los empleados</option>
                            @foreach (var emp in empleadosData)
                            {
                                <option value="@emp.IdEmpleado" @@(ViewBag.EmpleadoFiltro == emp.IdEmpleado ? "selected" : "")>
                                    @emp.NombreCompleto - @emp.Cargo
                                </option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-filter"></i> Estado de Vigencia
                        </label>
                        <select name="estado" class="form-control">
                            <option value="">Todos los estados</option>
                            <option value="Vigente" @@(ViewBag.EstadoFiltro == "Vigente" ? "selected" : "")>Vigentes</option>
                            <option value="Vencida" @@(ViewBag.EstadoFiltro == "Vencida" ? "selected" : "")>Vencidas</option>
                            <option value="Futura" @@(ViewBag.EstadoFiltro == "Futura" ? "selected" : "")>Futuras</option>
                        </select>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                    <button type="submit" class="btn btn-primary btn-3d">
                        <span><i class="fas fa-search"></i> Aplicar Filtros</span>
                    </button>
                    <a href="@Url.Action("ListadoTarifas", "HistorialTarifa")" class="btn btn-secondary">
                        <span><i class="fas fa-times"></i> Limpiar</span>
                    </a>
                    <a href="@Url.Action("CrearTarifa", "HistorialTarifa")" class="btn btn-primary btn-3d" style="margin-left: auto;">
                        <span><i class="fas fa-plus"></i> Registrar Nueva Tarifa</span>
                    </a>
                </div>
            </form>
        </div>

        <!-- Layout Principal: Tabla + Panel Lateral -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="tablaTarifas" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tarifa/Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Salario Mensual</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Inicio</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Fin</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Motivo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var tarifasDemo = new List<dynamic>
                                {
                                    new { Id = 1, IdEmpleado = 1, Nombre = "Kenneth Salas", Cargo = "Chef Principal", Tarifa = 2500.00m, Salario = 519600.00m, FechaInicio = "15/01/2023", FechaFin = "30/06/2024", Estado = "Vencida", Motivo = "Tarifa inicial al contratar", Dias = 532, FechaRegistro = "15/01/2023 08:00" },
                                    new { Id = 2, IdEmpleado = 1, Nombre = "Kenneth Salas", Cargo = "Chef Principal", Tarifa = 2800.00m, Salario = 581952.00m, FechaInicio = "01/07/2024", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Aumento por desempeño excepcional", Dias = 151, FechaRegistro = "25/06/2024 10:30" },
                                    new { Id = 3, IdEmpleado = 2, Nombre = "María González", Cargo = "Asistente de Cocina", Tarifa = 1900.00m, Salario = 394896.00m, FechaInicio = "20/03/2023", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Tarifa inicial - Asistente de cocina", Dias = 984, FechaRegistro = "20/03/2023 09:00" },
                                    new { Id = 4, IdEmpleado = 3, Nombre = "David Rodríguez", Cargo = "Barista", Tarifa = 2200.00m, Salario = 457248.00m, FechaInicio = "10/02/2023", FechaFin = "31/08/2024", Estado = "Vencida", Motivo = "Tarifa inicial - Barista certificado", Dias = 568, FechaRegistro = "10/02/2023 08:00" },
                                    new { Id = 5, IdEmpleado = 3, Nombre = "David Rodríguez", Cargo = "Barista", Tarifa = 2400.00m, Salario = 498816.00m, FechaInicio = "01/09/2024", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Aumento semestral por antigüedad", Dias = 89, FechaRegistro = "28/08/2024 14:20" },
                                    new { Id = 6, IdEmpleado = 4, Nombre = "Ana Jiménez", Cargo = "Cajera", Tarifa = 1800.00m, Salario = 374112.00m, FechaInicio = "05/04/2023", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Tarifa inicial - Cajera", Dias = 968, FechaRegistro = "05/04/2023 08:00" }
                                };
                            }

                            @foreach (var tarifa in tarifasDemo)
                            {
                                var estadoColor = tarifa.Estado switch
                                {
                                    "Vigente" => "#27ae60",
                                    "Vencida" => "#e74c3c",
                                    "Futura" => "#3498db",
                                    _ => "#95a5a6"
                                };

                                var estadoIcon = tarifa.Estado switch
                                {
                                    "Vigente" => "fa-check-circle",
                                    "Vencida" => "fa-times-circle",
                                    "Futura" => "fa-clock",
                                    _ => "fa-question-circle"
                                };

                                <tr class="fila-tarifa" data-vigencia="@tarifa.Estado.ToLower()" style="border-bottom: 1px solid rgba(32, 116, 118, 0.1); transition: all 0.3s;">
                                    <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 600;">@tarifa.Id</td>
                                    <td style="padding: 1.2rem;">
                                        <div style="display: flex; flex-direction: column;">
                                            <strong style="color: var(--dark-teal); font-weight: 600;">@tarifa.Nombre</strong>
                                            <span style="font-size: 0.85rem; color: var(--gray);">@tarifa.Cargo</span>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--coral); font-weight: 700; font-size: 1.2rem;">
                                        ₡@tarifa.Tarifa.ToString("N2")
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 600;">
                                        ₡@tarifa.Salario.ToString("N2")
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--black);">@tarifa.FechaInicio</td>
                                    <td style="padding: 1.2rem; color: var(--black);">@tarifa.FechaFin</td>
                                    <td style="padding: 1.2rem;">
                                        <span style="background: @estadoColor; color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                            <i class="fas @estadoIcon"></i> @tarifa.Estado
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--black); max-width: 300px;">@tarifa.Motivo</td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm btn-detalles"
                                                data-id="@tarifa.Id"
                                                data-empleado="@tarifa.Nombre"
                                                data-cargo="@tarifa.Cargo"
                                                data-tarifa="@tarifa.Tarifa.ToString("N2")"
                                                data-salario="@tarifa.Salario.ToString("N2")"
                                                data-inicio="@tarifa.FechaInicio"
                                                data-fin="@tarifa.FechaFin"
                                                data-estado="@tarifa.Estado"
                                                data-motivo="@tarifa.Motivo"
                                                data-dias="@tarifa.Dias"
                                                data-registro="@tarifa.FechaRegistro"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesTarifa">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                onclick="window.location.href='@Url.Action("VerHistorialEmpleado", "HistorialTarifa", new { id = tarifa.IdEmpleado })'"
                                                class="btn btn-sm"
                                                style="background: var(--amber); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Ver historial completo del empleado">
                                            <i class="fas fa-history"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(32, 116, 118, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-teal); font-size: 0.95rem;">
                        Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">6</span></strong> de <strong id="totalRecords">6</strong> registros
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel Lateral: Empleados con Cambios Recientes -->
            <div style="position: sticky; top: 100px;">
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, var(--amber) 0%, var(--coral) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-chart-line" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Cambios Recientes</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Últimos ajustes</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 400px; overflow-y: auto;">
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--green);">
                            <strong style="color: var(--dark-teal); font-size: 0.95rem; display: flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-arrow-up" style="color: var(--green);"></i>
                                Kenneth Salas
                            </strong>
                            <small style="color: var(--gray); display: block; margin-top: 0.3rem;">₡2,500 → ₡2,800/hora</small>
                            <small style="color: var(--gray); display: block; margin-top: 0.2rem;">Hace 5 meses</small>
                        </div>
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--green);">
                            <strong style="color: var(--dark-teal); font-size: 0.95rem; display: flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-arrow-up" style="color: var(--green);"></i>
                                David Rodríguez
                            </strong>
                            <small style="color: var(--gray); display: block; margin-top: 0.3rem;">₡2,200 → ₡2,400/hora</small>
                            <small style="color: var(--gray); display: block; margin-top: 0.2rem;">Hace 3 meses</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resumen Estadísticas (ABAJO) -->
        <div style="margin-top: 3rem;" data-aos="fade-up">
            <div style="background: linear-gradient(135deg, var(--teal), var(--dark-teal)); padding: 2.5rem; border-radius: 25px; box-shadow: var(--shadow-lg);">
                <h5 style="margin: 0 0 2rem; color: white; font-weight: 600; display: flex; align-items: center; gap: 0.5rem; font-size: 1.3rem;">
                    <i class="fas fa-chart-pie"></i> Resumen de Tarifas por Hora
                </h5>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-coins" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Costo Nómina Mensual</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">₡1,848,576.00</h4>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-arrow-trend-up" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Tarifa Más Alta</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">₡2,800.00</h4>
                        <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">Kenneth Salas - Chef Principal</small>
                    </div>
                    <div style="background: rgba(255,255,255,0.15); padding: 1.5rem; border-radius: 15px;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 1rem;">
                            <i class="fas fa-arrow-trend-down" style="font-size: 1.5rem; color: white;"></i>
                            <span style="font-size: 1rem; color: white; opacity: 0.9; font-weight: 500;">Tarifa Más Baja</span>
                        </div>
                        <h4 style="margin: 0; font-size: 2rem; font-weight: 700; color: white;">₡1,800.00</h4>
                        <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">Ana Jiménez - Cajera</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesTarifa" />

@section Scripts {
    <script src="~/js/historial-tarifa.js"></script>
}