@model List<AromasWeb.Abstracciones.ModeloUI.HistorialTarifa>

@{
    ViewBag.Title = "Historial de Tarifas";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-money-bill-wave"></i>
                Gestión Salarial
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de
                <span class="hero-title-accent">Tarifas</span>
            </h1>
            <p class="hero-subtitle">
                Consulta y administra el historial de tarifas por hora de todos los empleados
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Resumen Estadísticas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">₡1,848,576</h3>
                <p style="margin: 0.5rem 0;">Costo Nómina Mensual</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-arrow-trend-up"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">₡2,800</h3>
                <p style="margin: 0.5rem 0;">Tarifa Más Alta</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    Kenneth Salas - Chef Principal
                </small>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-arrow-trend-down"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">₡1,800</h3>
                <p style="margin: 0.5rem 0;">Tarifa Más Baja</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    Ana Jiménez - Cajera
                </small>
            </div>
        </div>

        <!-- Filtros y Búsqueda -->
        <div class="contact-form-wrapper" style="margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoTarifas", "HistorialTarifa")">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 1.5rem;">
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user"></i> Filtrar por Empleado
                        </label>
                        @{
                            var empleadosData = new List<dynamic>
                                                {
                                                new { IdEmpleado = 1, NombreCompleto = "Kenneth Salas", Cargo = "Chef Principal" },
                                                new { IdEmpleado = 2, NombreCompleto = "María González", Cargo = "Asistente de Cocina" },
                                                new { IdEmpleado = 3, NombreCompleto = "David Rodríguez", Cargo = "Barista" },
                                                new { IdEmpleado = 4, NombreCompleto = "Ana Jiménez", Cargo = "Cajera" }
                                                };
                        }
                        <select name="empleado" class="form-control">
                            <option value="">Todos los empleados</option>
                            @foreach (var emp in empleadosData)
                            {
                                <option value="@emp.IdEmpleado">
                                    @emp.NombreCompleto - @emp.Cargo
                                </option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-filter"></i> Estado de Vigencia
                        </label>
                        <select name="estado" class="form-control">
                            <option value="">Todos los estados</option>
                            <option value="Vigente">Vigentes</option>
                            <option value="Vencida">Vencidas</option>
                            <option value="Futura">Futuras</option>
                        </select>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                    <button type="submit" class="btn btn-primary btn-3d">
                        <span><i class="fas fa-search"></i> Aplicar Filtros</span>
                    </button>
                    <a href="@Url.Action("ListadoTarifas", "HistorialTarifa")" class="btn btn-secondary">
                        <span><i class="fas fa-times"></i> Limpiar</span>
                    </a>
                    <a href="@Url.Action("CrearTarifa", "HistorialTarifa")" class="btn btn-primary btn-3d" style="margin-left: auto;">
                        <span><i class="fas fa-plus"></i> Registrar Nueva Tarifa</span>
                    </a>
                </div>
            </form>
        </div>

        <!-- Layout Principal: Tabla + Panel Lateral -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="tablaTarifas" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tarifa/Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Salario Mensual</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Inicio</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Fin</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Motivo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var tarifasDemo = new List<dynamic>
                                                        {
                                                        new { Id = 1, IdEmpleado = 1, Nombre = "Kenneth Salas", Cargo = "Chef Principal", Tarifa = 2500.00m, Salario = 519600.00m, FechaInicio = "15/01/2023", FechaFin = "30/06/2024", Estado = "Vencida", Motivo = "Tarifa inicial al contratar", Dias = 532, FechaRegistro = "15/01/2023 08:00" },
                                                        new { Id = 2, IdEmpleado = 1, Nombre = "Kenneth Salas", Cargo = "Chef Principal", Tarifa = 2800.00m, Salario = 581952.00m, FechaInicio = "01/07/2024", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Aumento por desempeño excepcional", Dias = 151, FechaRegistro = "25/06/2024 10:30" },
                                                        new { Id = 3, IdEmpleado = 2, Nombre = "María González", Cargo = "Asistente de Cocina", Tarifa = 1900.00m, Salario = 394896.00m, FechaInicio = "20/03/2023", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Tarifa inicial", Dias = 984, FechaRegistro = "20/03/2023 09:00" },
                                                        new { Id = 4, IdEmpleado = 3, Nombre = "David Rodríguez", Cargo = "Barista", Tarifa = 2200.00m, Salario = 457248.00m, FechaInicio = "10/02/2023", FechaFin = "31/08/2024", Estado = "Vencida", Motivo = "Tarifa inicial", Dias = 568, FechaRegistro = "10/02/2023 08:00" },
                                                        new { Id = 5, IdEmpleado = 3, Nombre = "David Rodríguez", Cargo = "Barista", Tarifa = 2400.00m, Salario = 498816.00m, FechaInicio = "01/09/2024", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Aumento semestral", Dias = 89, FechaRegistro = "28/08/2024 14:20" },
                                                        new { Id = 6, IdEmpleado = 4, Nombre = "Ana Jiménez", Cargo = "Cajera", Tarifa = 1800.00m, Salario = 374112.00m, FechaInicio = "05/04/2023", FechaFin = "Sin definir", Estado = "Vigente", Motivo = "Tarifa inicial", Dias = 968, FechaRegistro = "05/04/2023 08:00" }
                                                        };
                            }

                            @foreach (var tarifa in tarifasDemo)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@tarifa.Id</td>
                                    <td style="padding: 1.2rem;">
                                        <div>
                                            <strong style="color: var(--dark-green); font-weight: 600;">@tarifa.Nombre</strong>
                                            <span style="font-size: 0.85rem; color: var(--charcoal); opacity: 0.7; display: block;">@tarifa.Cargo</span>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--gold); font-weight: 700; font-size: 1.2rem;">
                                        ₡@tarifa.Tarifa.ToString("N2")
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">
                                        ₡@tarifa.Salario.ToString("N2")
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@tarifa.FechaInicio</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@tarifa.FechaFin</td>
                                    <td style="padding: 1.2rem;">
                                        @{
                                            var estadoColor = tarifa.Estado == "Vigente" ? "#27ae60" : "#e74c3c";
                                            var estadoIcon = tarifa.Estado == "Vigente" ? "fa-check-circle" : "fa-times-circle";
                                        }
                                        <span style="background: @estadoColor; color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                            <i class="fas @estadoIcon"></i> @tarifa.Estado
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); max-width: 300px;">@tarifa.Motivo</td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm btn-detalles"
                                                data-id="@tarifa.Id"
                                                data-empleado="@tarifa.Nombre"
                                                data-cargo="@tarifa.Cargo"
                                                data-tarifa="@tarifa.Tarifa.ToString("N2")"
                                                data-salario="@tarifa.Salario.ToString("N2")"
                                                data-inicio="@tarifa.FechaInicio"
                                                data-fin="@tarifa.FechaFin"
                                                data-estado="@tarifa.Estado"
                                                data-motivo="@tarifa.Motivo"
                                                data-dias="@tarifa.Dias"
                                                data-registro="@tarifa.FechaRegistro"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesTarifa"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                onclick="window.location.href='@Url.Action("VerHistorialEmpleado", "HistorialTarifa", new { id = tarifa.IdEmpleado })'"
                                                class="btn btn-sm"
                                                style="background: var(--gold-bright); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Ver historial completo">
                                            <i class="fas fa-history"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-green); font-size: 0.95rem;">
                        Mostrando <strong>1-6</strong> de <strong>6</strong> registros
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button class="btn btn-secondary" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button class="btn btn-primary" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel Lateral -->
            <div style="position: sticky; top: 100px;">
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-chart-line" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Cambios Recientes</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Últimos ajustes</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 400px; overflow-y: auto;">
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid #27ae60;">
                            <strong style="color: var(--dark-green); font-size: 0.95rem; display: flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-arrow-up" style="color: #27ae60;"></i>
                                Kenneth Salas
                            </strong>
                            <small style="color: var(--charcoal); opacity: 0.7; display: block; margin-top: 0.3rem;">₡2,500 → ₡2,800/hora</small>
                            <small style="color: var(--charcoal); opacity: 0.7; display: block; margin-top: 0.2rem;">Hace 5 meses</small>
                        </div>
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid #27ae60;">
                            <strong style="color: var(--dark-green); font-size: 0.95rem; display: flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-arrow-up" style="color: #27ae60;"></i>
                                David Rodríguez
                            </strong>
                            <small style="color: var(--charcoal); opacity: 0.7; display: block; margin-top: 0.3rem;">₡2,200 → ₡2,400/hora</small>
                            <small style="color: var(--charcoal); opacity: 0.7; display: block; margin-top: 0.2rem;">Hace 3 meses</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesTarifa" />

@section Scripts {
    <script src="~/js/historial-tarifa.js"></script>
}