@model List<AromasWeb.Abstracciones.ModeloUI.HistorialTarifa>

@{
    ViewBag.Title = "Mi Historial de Tarifas";
    var empleado = (AromasWeb.Controllers.EmpleadoInfo)ViewBag.EmpleadoActual;
    var tarifaActual = Model.FirstOrDefault(t => t.EstadoVigencia == "Vigente");
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-circle"></i>
                Mi Información Salarial
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Hola, <span class="hero-title-accent">@empleado.NombreCompleto</span>
            </h1>
            <p class="hero-subtitle">
                Consulta tu historial de tarifas y crecimiento salarial
            </p>

            <!-- Info rápida del empleado -->
            <div style="display: flex; justify-content: center; gap: 3rem; flex-wrap: wrap; margin-top: 2rem; margin-bottom: 3rem; color: black;">
                <div>
                    <i class="fas fa-briefcase" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@empleado.Cargo</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Puesto Actual</span>
                </div>
                <div>
                    <i class="fas fa-calendar-alt" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@empleado.TiempoServicio</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Tiempo en la Empresa</span>
                </div>
                <div>
                    <i class="fas fa-id-card" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@empleado.Identificacion</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Identificación</span>
                </div>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1200px;">

        <!-- Tarifa Actual - Card Destacado -->
        @if (tarifaActual != null)
        {
            <div class="feature-card" style="background: white; padding: 3rem; margin-bottom: 3rem; position: relative; overflow: hidden; border-left: 5px solid var(--gold);" data-aos="zoom-in">
                <div style="position: relative; z-index: 1;">
                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem;">
                        <div style="width: 70px; height: 70px; background: var(--gold); border-radius: 20px; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-md);">
                            <i class="fas fa-star" style="font-size: 2rem; color: white;"></i>
                        </div>
                        <div>
                            <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.95rem;">Tu Tarifa Actual</p>
                            <h2 style="margin: 0; font-size: 3rem; font-weight: 700; font-family: var(--font-primary); color: var(--dark-green);">
                                ₡@tarifaActual.TarifaHora.ToString("N2")<span style="font-size: 1.5rem; opacity: 0.7; color: var(--charcoal);">/hora</span>
                            </h2>
                        </div>
                    </div>

                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; background: var(--cream); padding: 2rem; border-radius: 20px;">
                        <div>
                            <p style="margin: 0 0 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">
                                <i class="fas fa-calendar-check" style="color: var(--olive-green);"></i> Vigente desde
                            </p>
                            <strong style="font-size: 1.1rem; color: var(--dark-green);">@tarifaActual.FechaInicioFormateada</strong>
                        </div>
                        <div>
                            <p style="margin: 0 0 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">
                                <i class="fas fa-wallet" style="color: var(--olive-green);"></i> Salario Mensual Estimado
                            </p>
                            <strong style="font-size: 1.1rem; color: var(--dark-green);">₡@tarifaActual.SalarioMensualEstimado.ToString("N2")</strong>
                        </div>
                        <div>
                            <p style="margin: 0 0 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">
                                <i class="fas fa-hourglass-half" style="color: var(--olive-green);"></i> Días de vigencia
                            </p>
                            <strong style="font-size: 1.1rem; color: var(--dark-green);">@tarifaActual.DiasVigencia días</strong>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(tarifaActual.Motivo))
                    {
                        <div style="margin-top: 2rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; border-left: 3px solid var(--gold);">
                            <p style="margin: 0 0 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">
                                <i class="fas fa-info-circle" style="color: var(--gold);"></i> Motivo del ajuste
                            </p>
                            <p style="margin: 0; font-size: 1rem; line-height: 1.6; color: var(--dark-green);">@tarifaActual.Motivo</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Estadísticas de Crecimiento -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-history"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count</h3>
                <p style="margin: 0.5rem 0;">Ajustes de Tarifa</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @{
                        var primeraTarifa = Model.OrderBy(t => t.FechaInicio).FirstOrDefault();
                        var crecimiento = 0m;
                        if (primeraTarifa != null && tarifaActual != null && primeraTarifa.TarifaHora > 0)
                        {
                            crecimiento = ((tarifaActual.TarifaHora - primeraTarifa.TarifaHora) / primeraTarifa.TarifaHora) * 100;
                        }
                    }
                    +@crecimiento.ToString("N1")%
                </h3>
                <p style="margin: 0.5rem 0;">Crecimiento Salarial</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @if (primeraTarifa != null)
                    {
                        <text>₡@primeraTarifa.TarifaHora.ToString("N2")</text>
                    }
                    else
                    {
                        <text>₡0.00</text>
                    }
                </h3>
                <p style="margin: 0.5rem 0;">Tarifa Inicial</p>
            </div>
        </div>

        <!-- Timeline de Mi Historial -->
        <div style="background: var(--cream); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-green); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-clock"></i> Mi Historial de Tarifas
            </h4>

            @if (Model.Any())
            {
                <div style="position: relative; padding-left: 3rem;">
                    <!-- Línea vertical -->
                    <div style="position: absolute; left: 1rem; top: 0; bottom: 0; width: 3px; background: linear-gradient(180deg, var(--olive-green) 0%, var(--gold) 100%);"></div>

                    @foreach (var tarifa in Model)
                    {
                        var esActual = tarifa.EstadoVigencia == "Vigente";
                        var colorLinea = esActual ? "var(--olive-green)" : "var(--charcoal)";
                        var iconoEstado = esActual ? "fa-check-circle" : "fa-clock";

                        <div class="feature-card" style="position: relative; margin-bottom: 2rem; padding: 2rem; border-left: 5px solid @colorLinea; background: white;">
                            <!-- Punto en la línea -->
                            <div style="position: absolute; left: -3rem; top: 2rem; width: 20px; height: 20px; background: @colorLinea; border-radius: 50%; border: 4px solid var(--white); box-shadow: 0 0 0 3px @colorLinea;"></div>

                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem;">
                                <div style="flex: 1;">
                                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.7rem; flex-wrap: wrap;">
                                        <h5 style="margin: 0; color: var(--dark-green); font-weight: 700; font-size: 1.8rem; font-family: var(--font-primary);">
                                            ₡@tarifa.TarifaHora.ToString("N2")<span style="font-size: 1rem; opacity: 0.7;">/hora</span>
                                        </h5>
                                        @if (esActual)
                                        {
                                            <span style="background: var(--olive-green); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                                <i class="fas @iconoEstado"></i> Tarifa Actual
                                            </span>
                                        }
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 2rem; flex-wrap: wrap; color: var(--charcoal); opacity: 0.7; font-size: 0.95rem;">
                                        <span>
                                            <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i>
                                            <strong>Desde:</strong> @tarifa.FechaInicioFormateada
                                        </span>
                                        @if (tarifa.FechaFin.HasValue)
                                        {
                                            <span>
                                                <i class="fas fa-calendar-times" style="color: var(--gold);"></i>
                                                <strong>Hasta:</strong> @tarifa.FechaFinFormateada
                                            </span>
                                        }
                                        <span>
                                            <i class="fas fa-hourglass-half" style="color: var(--gold-bright);"></i>
                                            @tarifa.DiasVigencia días
                                        </span>
                                    </div>
                                </div>
                                <div style="text-align: right;">
                                    <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">Salario Mensual</p>
                                    <strong style="color: var(--gold); font-size: 1.5rem; font-family: var(--font-primary);">
                                        ₡@tarifa.SalarioMensualEstimado.ToString("N2")
                                    </strong>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(tarifa.Motivo))
                            {
                                <div style="background: var(--cream); padding: 1.5rem; border-radius: 15px; margin-top: 1rem;">
                                    <p style="margin: 0; color: var(--dark-green); line-height: 1.7;">
                                        <i class="fas fa-comment" style="color: var(--gold); margin-right: 0.5rem;"></i>
                                        @tarifa.Motivo
                                    </p>
                                </div>
                            }

                            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--cream); font-size: 0.85rem; color: var(--charcoal); opacity: 0.7;">
                                <i class="fas fa-calendar-plus"></i>
                                Registrado el @tarifa.FechaRegistroFormateada
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/historialTarifa.js"></script>
}