<div class="modal fade" id="modalDetallesTarifa" tabindex="-1" aria-labelledby="modalDetallesTarifaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 25px; overflow: hidden; box-shadow: var(--shadow-xl);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); color: var(--white); border: none; padding: 2rem;">
                <h5 class="modal-title" id="modalDetallesTarifaLabel" style="font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.5rem;">
                    <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    Detalles de la Tarifa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="opacity: 1;"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2.5rem; background: var(--cream);">
                <!-- Información del Empleado -->
                <div style="background: var(--white); padding: 1.5rem; border-radius: 20px; margin-bottom: 2rem; box-shadow: var(--shadow-sm); border-left: 5px solid var(--teal);">
                    <h5 id="detalles-empleado-tarifa" style="color: var(--dark-teal); margin: 0 0 0.3rem; font-size: 1.6rem; font-family: var(--font-primary); font-weight: 700;"></h5>
                    <p id="detalles-cargo-tarifa" style="margin: 0; color: var(--gray); font-size: 1rem;"></p>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <!-- Columna Izquierda -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- ID -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hashtag" style="color: var(--teal); font-size: 1.1rem;"></i> ID del Registro
                            </label>
                            <p id="detalles-id-tarifa" style="color: var(--dark-teal); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Tarifa por Hora -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0; background: linear-gradient(135deg, var(--cream) 0%, #f5ede4 100%);">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-dollar-sign" style="color: var(--coral); font-size: 1.1rem;"></i> Tarifa por Hora
                            </label>
                            <p id="detalles-tarifa-hora" style="color: var(--coral); font-size: 2rem; font-weight: 700; margin: 0; font-family: var(--font-primary);"></p>
                        </div>

                        <!-- Fecha de Inicio -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar-check" style="color: var(--teal); font-size: 1.1rem;"></i> Fecha de Inicio
                            </label>
                            <p id="detalles-fecha-inicio" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Días de Vigencia -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hourglass-half" style="color: var(--teal); font-size: 1.1rem;"></i> Días de Vigencia
                            </label>
                            <p id="detalles-dias-vigencia" style="color: var(--dark-teal); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>
                    </div>

                    <!-- Columna Derecha -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- Salario Mensual -->
                        <div style="background: linear-gradient(135deg, var(--teal), var(--dark-teal)); padding: 1.8rem; border-radius: 20px; color: white; box-shadow: var(--shadow-md);">
                            <label style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; opacity: 0.9;">
                                <i class="fas fa-wallet" style="font-size: 1.1rem;"></i> Salario Mensual
                            </label>
                            <p id="detalles-salario-mensual" style="font-size: 2rem; font-weight: 700; margin: 0; font-family: var(--font-primary);"></p>
                            <small style="opacity: 0.8; font-size: 0.85rem; display: block; margin-top: 0.5rem;">
                                Basado en 207.84 horas/mes
                            </small>
                        </div>

                        <!-- Fecha de Fin -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar-times" style="color: var(--teal); font-size: 1.1rem;"></i> Fecha de Fin
                            </label>
                            <p id="detalles-fecha-fin" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Estado -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-info-circle" style="color: var(--teal); font-size: 1.1rem;"></i> Estado de Vigencia
                            </label>
                            <span id="detalles-estado-badge-tarifa" class="badge" style="font-size: 1rem; padding: 0.6rem 1.5rem; border-radius: 50px; display: inline-block; font-weight: 600;"></span>
                        </div>

                        <!-- Fecha de Registro -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar-plus" style="color: var(--teal); font-size: 1.1rem;"></i> Fecha de Registro
                            </label>
                            <p id="detalles-fecha-registro" style="color: var(--dark-teal); font-size: 1rem; font-weight: 600; margin: 0;"></p>
                        </div>
                    </div>
                </div>

                <!-- Motivo -->
                <div style="background: var(--white); padding: 1.5rem; border-radius: 20px; margin-top: 2rem; box-shadow: var(--shadow-sm);">
                    <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                        <i class="fas fa-comment" style="color: var(--teal); font-size: 1.1rem;"></i> Motivo del Cambio
                    </label>
                    <p id="detalles-motivo-tarifa" style="color: var(--dark-teal); margin: 0; line-height: 1.7;"></p>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--white); border: none; padding: 1.5rem 2.5rem;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 0.9rem 2.5rem; border-radius: 50px;">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>