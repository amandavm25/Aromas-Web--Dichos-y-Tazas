@model List<AromasWeb.Abstracciones.ModeloUI.HistorialTarifa>

@{
    ViewBag.Title = "Historial de Tarifas del Empleado";
    var empleado = (AromasWeb.Abstracciones.ModeloUI.Empleado)ViewBag.Empleado;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-clock"></i>
                Historial Personal
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de Tarifas
            </h1>
            <p class="hero-subtitle">
                @empleado.Nombre @empleado.Apellidos • @empleado.Cargo
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Información del Empleado -->
        <div class="feature-card" style="background: white; margin-bottom: 3rem; padding: 2.5rem; border-left: 5px solid var(--olive-green);" data-aos="fade-up">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-user" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Nombre Completo</p>
                    <h4 style="margin: 0.3rem 0 0;k font-weight: 600; color: var(--dark-green);">@empleado.Nombre @empleado.Apellidos</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-id-card" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Identificación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.Identificacion</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-briefcase" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Cargo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.Cargo</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-calendar" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Fecha de Contratación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleado.FechaContratacionFormateada</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-hourglass-half" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Antigüedad</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">
                        @empleado.AnosTrabajados
                    </h4>
                </div>
            </div>
        </div>

        <!-- Estadísticas de Tarifas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @{
                        var tarifaActual = Model.FirstOrDefault(t => t.EstadoVigencia == "Vigente");
                    }
                    @if (tarifaActual != null)
                    {
                        <text>₡@tarifaActual.TarifaHora.ToString("N2")</text>
                    }
                    else
                    {
                        <text>Sin tarifa</text>
                    }
                </h3>
                <p style="margin: 0.5rem 0;">Tarifa Actual por Hora</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-wallet"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @if (tarifaActual != null)
                    {
                        <text>₡@tarifaActual.SalarioMensualEstimado.ToString("N0")</text>
                    }
                    else
                    {
                        <text>₡0</text>
                    }
                </h3>
                <p style="margin: 0.5rem 0;">Salario Mensual Estimado</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-history"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count</h3>
                <p style="margin: 0.5rem 0;">Cambios de Tarifa</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @{
                        var primeraTarifa = Model.OrderBy(t => t.FechaInicio).FirstOrDefault();
                        var crecimiento = 0m;
                        if (primeraTarifa != null && tarifaActual != null && primeraTarifa.TarifaHora > 0)
                        {
                            crecimiento = ((tarifaActual.TarifaHora - primeraTarifa.TarifaHora) / primeraTarifa.TarifaHora) * 100;
                        }
                    }
                    @crecimiento.ToString("N1")%
                </h3>
                <p style="margin: 0.5rem 0;">Crecimiento Salarial</p>
            </div>
        </div>

        <!-- Botones de Acción -->
        <div style="display: flex; gap: 1rem; margin-bottom: 3rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("CrearTarifa", "HistorialTarifa", new { idEmpleado = empleado.IdEmpleado })" class="btn btn-primary btn-3d">
                <span><i class="fas fa-plus"></i> Registrar Nueva Tarifa</span>
            </a>
            <a href="@Url.Action("ListadoTarifas", "HistorialTarifa")" class="btn btn-secondary">
                <span><i class="fas fa-arrow-left"></i> Volver al Listado</span>
            </a>
            <button onclick="window.print()" class="btn" style="background: var(--olive-green); color: white; border: none; margin-left: auto;">
                <span><i class="fas fa-print"></i> Imprimir Historial</span>
            </button>
        </div>

        <!-- Timeline de Tarifas -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-green); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-clock"></i> Línea de Tiempo de Tarifas
            </h4>

            <div style="position: relative; padding-left: 3rem;">
                <!-- Línea vertical -->
                <div style="position: absolute; left: 1rem; top: 0; bottom: 0; width: 3px; background: linear-gradient(180deg, var(--olive-green) 0%, var(--gold) 100%);"></div>

                @foreach (var tarifa in Model)
                {
                    var estadoColor = tarifa.EstadoVigencia switch
                    {
                        "Vigente" => "var(--olive-green)",
                        "Vencida" => "#95a5a6",
                        "Futura" => "var(--gold-bright)",
                        _ => "#95a5a6"
                    };

                    var estadoIcon = tarifa.EstadoVigencia switch
                    {
                        "Vigente" => "fa-check-circle",
                        "Vencida" => "fa-clock",
                        "Futura" => "fa-calendar",
                        _ => "fa-question-circle"
                    };

                    <div class="feature-card" style="position: relative; margin-bottom: 2rem; padding: 2rem; border-left: 5px solid @estadoColor; background: white;">
                        <!-- Punto en la línea -->
                        <div style="position: absolute; left: -3rem; top: 2rem; width: 20px; height: 20px; background: @estadoColor; border-radius: 50%; border: 4px solid var(--white); box-shadow: 0 0 0 3px @estadoColor;"></div>

                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                            <div style="flex: 1;">
                                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
                                    <h5 style="margin: 0; color: var(--dark-green); font-weight: 700; font-size: 1.5rem;">
                                        ₡@tarifa.TarifaHora.ToString("N2")/hora
                                    </h5>
                                    <span style="background: @estadoColor; color: white; padding: 0.3rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                        <i class="fas @estadoIcon"></i> @tarifa.EstadoVigencia
                                    </span>
                                </div>
                                <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.95rem;">
                                    <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i>
                                    <strong>Vigencia:</strong> @tarifa.FechaInicioFormateada
                                    @if (tarifa.FechaFin.HasValue)
                                    {
                                        <text> - @tarifa.FechaFinFormateada</text>
                                    }
                                    else
                                    {
                                        <text> - Indefinido</text>
                                    }
                                    (@tarifa.DiasVigencia días)
                                </p>
                            </div>
                            <div style="text-align: right;">
                                <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">Salario Mensual</p>
                                <strong style="color: var(--gold); font-size: 1.3rem; font-family: var(--font-primary);">
                                    ₡@tarifa.SalarioMensualEstimado.ToString("N2")
                                </strong>
                            </div>
                        </div>

                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; margin-top: 1rem;">
                            <p style="margin: 0; color: var(--dark-green);">
                                <i class="fas fa-comment" style="color: var(--gold);"></i>
                                <strong>Motivo:</strong> @tarifa.Motivo
                            </p>
                        </div>

                        <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--cream); display: flex; justify-content: space-between; font-size: 0.85rem; color: var(--charcoal); opacity: 0.7;">
                            <span>
                                <i class="fas fa-calendar-plus"></i>
                                Registrado: @tarifa.FechaRegistroFormateada
                            </span>
                            <span>
                                ID: #@tarifa.IdHistorialTarifa
                            </span>
                        </div>
                    </div>
                }

                @if (!Model.Any())
                {
                    <div style="text-align: center; padding: 3rem; color: var(--charcoal); opacity: 0.7;">
                        <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block;"></i>
                        <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">No hay registros de tarifas</p>
                        <p style="margin: 0.5rem 0 0; font-size: 0.95rem;">Este empleado aún no tiene tarifas registradas</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/historialTarifa.js"></script>
}