@model AromasWeb.Abstracciones.ModeloUI.Cliente

@{
    ViewBag.Title = "Agregar Cliente";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-plus"></i>
                Nuevo Registro
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Agregar un
                <span class="hero-title-accent">Cliente</span>
            </h1>
            <p class="hero-subtitle">
                Registra un nuevo cliente en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("CrearCliente", "Cliente", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" style="margin-bottom: 2rem;">
                        <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-warning" style="margin-bottom: 2rem;">
                        <strong>Errores encontrados:</strong>
                        <ul style="margin: 0.5rem 0 0 0;">
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                foreach (var error in modelState.Errors)
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            }
                        </ul>
                    </div>
                }

                <!-- Información Personal -->
                <div class="admin-form-header">
                    <i class="fas fa-box"></i>
                    <h5>Información Personal</h5>
                </div>

                <!-- Nombre -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-user"></i>
                        Nombre
                    </label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Juan" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Apellidos -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-user"></i>
                        Apellidos
                    </label>
                    @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Pérez Rodríguez" } })
                    @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                </div>

                <!-- Identificación y Teléfono -->
                <div class="form-row">
                    <div class="form-group">
                        <label>
                            <i class="fas fa-id-card"></i>
                            Identificación
                        </label>
                        @Html.EditorFor(model => model.Identificacion, new { htmlAttributes = new { @class = "form-control", placeholder = "1-1234-5678" } })
                        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-phone"></i>
                            Teléfono
                        </label>
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "8888-1234" } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Correo Electrónico -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-envelope"></i>
                        Correo Electrónico
                    </label>
                    @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "correo@ejemplo.com" } })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>

                <!-- Información de Cuenta -->
                <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin: 2rem 0;">
                    <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                        <i class="fas fa-lock"></i> Información de Cuenta
                    </h5>
                </div>

                <!-- Contraseña -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-key"></i>
                        Contraseña
                    </label>
                    @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Mínimo 8 caracteres" } })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                    <small class="admin-form-hint">
                        <i class="fas fa-info-circle"></i>
                        La contraseña debe tener al menos 8 caracteres.
                    </small>
                </div>

                <!-- Confirmar Contraseña -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-key"></i>
                        Confirmar Contraseña
                    </label>
                    <input type="password" name="ConfirmarContrasena" class="form-control" placeholder="Repite la contraseña" />
                    @if (ViewData.ModelState.ContainsKey("ConfirmarContrasena"))
                    {
                        <span class="text-danger">@ViewData.ModelState["ConfirmarContrasena"].Errors.FirstOrDefault()?.ErrorMessage</span>
                    }
                </div>

                <!-- Estado del Cliente -->
                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; cursor: pointer;">
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input", id = "estadoCheckbox", @checked = "checked" } })
                        <span style="flex: 1;">
                            <i class="fas fa-toggle-on"></i>
                            Estado del Cliente (Activo/Inactivo)
                        </span>
                    </label>
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    <small class="admin-form-hint">
                        <i class="fas fa-info-circle"></i>
                        Activa/Desactiva acceso al cliente.
                    </small>
                </div>

                <!-- Botones -->
                <div class="admin-form-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoClientes", "Cliente")'">
                        <i class="fas fa-times"></i>
                        <span> Cancelar </span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <span> Agregar Cliente </span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="~/js/cliente.js"></script>
}