@model AromasWeb.Abstracciones.ModeloUI.Reserva

@{
    ViewBag.Title = "Editar Mi Reserva";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Modificar Reserva
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar Mi
                <span class="hero-title-accent">Reserva</span>
            </h1>
            <p class="hero-subtitle">
                Actualiza los detalles de tu reserva fácilmente
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="contact-section" style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("EditarMiReserva", "Cliente", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdReserva)
            @Html.HiddenFor(model => model.IdCliente)

            <div class="contact-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <form class="contact-form">
                    <!-- Información Actual de la Reserva -->
                    <div class="feature-card" style="margin: 0 0 2.5rem; padding: 2rem; background: linear-gradient(135deg, rgba(143, 142, 106, 0.08) 0%, rgba(62, 74, 58, 0.08) 100%); border-left: 4px solid var(--olive-green); border-radius: 15px;">
                        <h6 style="color: var(--dark-green); margin: 0 0 1.5rem; font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.1rem;">
                            <div style="width: 35px; height: 35px; background: var(--olive-green); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-info-circle" style="color: white; font-size: 0.9rem;"></i>
                            </div>
                            Reserva Actual
                        </h6>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
                            <div style="background: var(--white); padding: 1rem; border-radius: 12px; box-shadow: var(--shadow-sm);">
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.5rem;">
                                    <i class="fas fa-hashtag" style="color: var(--olive-green);"></i> Reserva #
                                </span>
                                <p style="margin: 0; color: var(--dark-green); font-weight: 700; font-size: 1.3rem;">@Model.IdReserva</p>
                            </div>
                            <div style="background: var(--white); padding: 1rem; border-radius: 12px; box-shadow: var(--shadow-sm);">
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.5rem;">
                                    <i class="fas fa-check-circle" style="color: var(--olive-green);"></i> Estado
                                </span>
                                <span style="background: #f39c12; color: var(--white); padding: 0.4rem 1rem; border-radius: 15px; font-size: 0.9rem; font-weight: 600; display: inline-block;">
                                    @Model.Estado
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles de la Reserva -->
                    <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); padding: 1.5rem 2rem; border-radius: 20px; margin: 0 0 2.5rem; box-shadow: var(--shadow-md);">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem; font-size: 1.2rem;">
                            <div style="width: 40px; height: 40px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            Nuevos Detalles
                        </h5>
                    </div>

                    <!-- Fecha y Hora -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar"></i>
                                Fecha de la Reserva
                            </label>
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", type = "date", min = DateTime.Now.ToString("yyyy-MM-dd") } })
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">
                                <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                                Puedes cambiar la fecha con al menos 24 horas de anticipación
                            </small>
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-clock"></i>
                                Hora de la Reserva
                            </label>
                            <select name="Hora" class="form-control" required>
                                <option value="">-- Selecciona una hora --</option>
                                <option value="11:00">11:00 AM</option>
                                <option value="11:30">11:30 AM</option>
                                <option value="12:00">12:00 PM</option>
                                <option value="12:30">12:30 PM</option>
                                <option value="13:00">1:00 PM</option>
                                <option value="13:30">1:30 PM</option>
                                <option value="14:00">2:00 PM</option>
                                <option value="14:30">2:30 PM</option>
                                <option value="18:00">6:00 PM</option>
                                <option value="18:30">6:30 PM</option>
                                <option value="19:00">7:00 PM</option>
                                <option value="19:30">7:30 PM</option>
                                <option value="20:00">8:00 PM</option>
                                <option value="20:30">8:30 PM</option>
                                <option value="21:00">9:00 PM</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Hora, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Cantidad de Personas -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-users"></i>
                            Cantidad de Personas
                        </label>
                        @Html.EditorFor(model => model.CantidadPersonas, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "20", placeholder = "1" } })
                        @Html.ValidationMessageFor(model => model.CantidadPersonas, "", new { @class = "text-danger" })
                        <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">
                            <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                            Máximo 20 personas por reserva
                        </small>
                    </div>

                    <!-- Observaciones -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-comment"></i>
                            Observaciones o Solicitudes Especiales
                        </label>
                        <textarea name="Observaciones" class="form-control" rows="4" placeholder="Añade cualquier solicitud especial (alergias, preferencias de mesa, celebraciones, etc.)" style="resize: vertical;">@Model.Observaciones</textarea>
                        <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">
                            <i class="fas fa-info-circle" style="color: var(--olive-green);"></i>
                            Opcional - Máximo 500 caracteres
                        </small>
                    </div>

                    <!-- Políticas de Cambio -->
                    <div class="feature-card" style="margin: 2rem 0; padding: 2rem; background: linear-gradient(135deg, rgba(197, 179, 88, 0.08) 0%, rgba(184, 167, 106, 0.08) 100%); border-left: 4px solid var(--gold); border-radius: 15px;">
                        <h6 style="color: var(--dark-green); margin: 0 0 1.2rem; font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.1rem;">
                            <div style="width: 35px; height: 35px; background: var(--gold); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-exclamation-circle" style="color: white; font-size: 0.9rem;"></i>
                            </div>
                            Políticas de Modificación
                        </h6>
                        <ul style="margin: 0; padding-left: 1.5rem; color: var(--charcoal); opacity: 0.85; line-height: 2;">
                            <li style="margin-bottom: 0.5rem;">
                                <i class="fas fa-clock" style="color: var(--gold); margin-right: 0.5rem;"></i>
                                Los cambios deben realizarse con al menos 24 horas de anticipación
                            </li>
                            <li style="margin-bottom: 0.5rem;">
                                <i class="fas fa-redo" style="color: var(--gold); margin-right: 0.5rem;"></i>
                                Solo puedes modificar una reserva hasta 3 veces
                            </li>
                            <li style="margin-bottom: 0.5rem;">
                                <i class="fas fa-ban" style="color: var(--gold); margin-right: 0.5rem;"></i>
                                Si necesitas cancelar, hazlo desde "Mis Reservas"
                            </li>
                            <li>
                                <i class="fas fa-phone" style="color: var(--gold); margin-right: 0.5rem;"></i>
                                Para cambios de última hora, contacta al restaurante directamente
                            </li>
                        </ul>
                    </div>

                    <!-- Información de Creación -->
                    <div class="feature-card" style="margin: 2rem 0; padding: 1.5rem; background: var(--white); border-radius: 12px; box-shadow: var(--shadow-sm);">
                        <label style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.7rem;">
                            <i class="fas fa-calendar-plus" style="color: var(--olive-green);"></i> Reserva Creada
                        </label>
                        <p style="margin: 0; color: var(--dark-green); font-weight: 600; font-size: 1.1rem;">@Model.FechaCreacionFormateada</p>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2.5rem;">
                        <button type="button" class="btn btn-secondary btn-3d" onclick="window.location.href='@Url.Action("MisReservas", "Cliente")'" style="flex: 1; padding: 1rem 2rem;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1; padding: 1rem 2rem;">
                            <span><i class="fas fa-check"></i> Guardar Cambios</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

<!-- Features Section -->
<section class="features" style="padding: 4rem 0;">
    <div class="container">
        <div class="features-grid">
            <div class="feature-card" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-sync-alt"></i>
                </div>
                <h3>Actualización Inmediata</h3>
                <p>Los cambios se reflejan al instante en tu reserva</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <h3>Notificación Automática</h3>
                <p>Te avisaremos cuando se confirme la modificación</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-shield-check"></i>
                </div>
                <h3>100% Seguro</h3>
                <p>Tus datos están siempre protegidos</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <h3>Soporte Disponible</h3>
                <p>Estamos aquí para ayudarte en todo momento</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Preseleccionar la hora actual
        document.addEventListener('DOMContentLoaded', function() {
            const horaActual = '@Model.HoraFormateada';
            const selectHora = document.querySelector('select[name="Hora"]');

            if (selectHora && horaActual) {
                for (let i = 0; i < selectHora.options.length; i++) {
                    if (selectHora.options[i].value === horaActual) {
                        selectHora.options[i].selected = true;
                        break;
                    }
                }
            }
        });
    </script>
}