<div class="modal fade" id="modalCancelarReserva" tabindex="-1" aria-labelledby="modalCancelarReservaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 25px; overflow: hidden; box-shadow: var(--shadow-xl);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: var(--white); border: none; padding: 2rem;">
                <h5 class="modal-title" id="modalCancelarReservaLabel" style="font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.3rem;">
                    <div style="width: 45px; height: 45px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    Cancelar Reserva
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="opacity: 1;"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2rem; background: var(--cream);">
                <div class="feature-card" style="background: linear-gradient(135deg, rgba(231, 76, 60, 0.1) 0%, rgba(192, 57, 43, 0.1) 100%); padding: 1.5rem; margin: 0 0 1.5rem; border-left: 4px solid #e74c3c;">
                    <p style="margin: 0; color: #c0392b; font-weight: 500; line-height: 1.6;">
                        <i class="fas fa-info-circle" style="margin-right: 0.5rem;"></i>
                        ¿Estás seguro que deseas <strong>CANCELAR</strong> esta reserva?
                    </p>
                </div>

                <div style="background: var(--white); padding: 1.5rem; border-radius: 15px;">
                    <h6 style="color: var(--dark-green); margin-bottom: 1rem; font-weight: 700;">Detalles de la reserva:</h6>
                    <div style="display: grid; gap: 0.7rem;">
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--charcoal); opacity: 0.7; font-weight: 600;">Reserva #:</span>
                            <span id="cancelar-id-display" style="color: var(--dark-green); font-weight: 700;"></span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--charcoal); opacity: 0.7; font-weight: 600;">Fecha:</span>
                            <span id="cancelar-fecha" style="color: var(--dark-green); font-weight: 700;"></span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--charcoal); opacity: 0.7; font-weight: 600;">Hora:</span>
                            <span id="cancelar-hora" style="color: var(--gold-bright); font-weight: 700;"></span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--charcoal); opacity: 0.7; font-weight: 600;">Personas:</span>
                            <span id="cancelar-personas" style="color: var(--dark-green); font-weight: 700;"></span>
                        </div>
                    </div>
                </div>

                <div style="background: var(--white); padding: 1rem; border-radius: 10px; margin-top: 1rem; border: 2px dashed var(--gold);">
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.85; font-size: 0.9rem; display: flex; align-items: start; gap: 0.5rem;">
                        <i class="fas fa-info-circle" style="color: var(--gold); margin-top: 0.2rem;"></i>
                        <span>Esta acción no se puede deshacer. La reserva será cancelada inmediatamente.</span>
                    </p>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--white); border: none; padding: 1.5rem 2rem;">
                <form id="formCancelarReserva" method="post" action="" style="display: flex; gap: 1rem; width: 100%; justify-content: flex-end;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="cancelar-id-reserva" name="IdReserva" />

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 0.8rem 2rem; border-radius: 50px;">
                        <span><i class="fas fa-times"></i> No, mantener</span>
                    </button>
                    <button type="submit" class="btn btn-primary btn-3d" style="background: linear-gradient(135deg, #e74c3c, #c0392b); padding: 0.8rem 2rem; border-radius: 50px;">
                        <span><i class="fas fa-check"></i> Sí, cancelar</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>