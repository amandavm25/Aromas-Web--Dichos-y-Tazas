@model List<AromasWeb.Abstracciones.ModeloUI.Cliente>

@{
    ViewBag.Title = "Gestión de Clientes";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-users"></i>
                Gestión de Clientes
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Clientes Registrados
            </h1>
            <p class="hero-subtitle">
                Administra la información de los clientes del negocio
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoClientes", "Cliente")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre, identificación o teléfono..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearCliente", "Cliente")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Agregar Cliente</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> cliente(s) encontrado(s)
                </p>
            </div>
        }

        <!-- Filtro por estado -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold-bright);"></i> Filtrar por estado:
                </span>
                <a href="@Url.Action("ListadoClientes", "Cliente")"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todos</span>
                </a>
                <a href="@Url.Action("ListadoClientes", "Cliente", new { filtroEstado = "activo" })"
                   class="btn @(ViewBag.FiltroEstado == "activo" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Activos</span>
                </a>
                <a href="@Url.Action("ListadoClientes", "Cliente", new { filtroEstado = "inactivo" })"
                   class="btn @(ViewBag.FiltroEstado == "inactivo" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> Inactivos</span>
                </a>
            </div>
        </div>

        <!-- Tabla Principal -->
        <div class="admin-table-container">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Nombre</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Identificación</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Correo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Teléfono</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha Registro</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var cliente in Model)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@cliente.IdCliente</td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; font-size: 1.05rem;">
                                        <i class="fas fa-user" style="color: var(--gold-bright); margin-right: 0.5rem;"></i>
                                        @cliente.Nombre
                                        @if (cliente.EsClienteFrecuente)
                                        {
                                            <i class="fas fa-star" style="color: var(--gold); margin-left: 0.5rem;" title="Cliente frecuente"></i>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@cliente.Apellidos</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@cliente.Identificacion</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@(cliente.Correo ?? "Sin correo")</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@cliente.Telefono</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); opacity: 0.7;">
                                        <i class="fas fa-calendar" style="margin-right: 0.3rem; color: var(--olive-green);"></i>
                                        @cliente.FechaRegistroFormateada
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        @if (cliente.Estado)
                                        {
                                            <span style="background: #27ae60; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Activo</span>
                                        }
                                        else
                                        {
                                            <span style="background: #e74c3c; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Inactivo</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarCliente", "Cliente", new { id = cliente.IdCliente })'"
                                                style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("HistorialReservas", "Cliente", new { id = cliente.IdCliente })'"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Ver historial">
                                            <i class="fas fa-history"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-detalles-cliente"
                                                data-id="@cliente.IdCliente"
                                                data-nombre="@cliente.Nombre"
                                                data-apellidos="@cliente.Apellidos"
                                                data-identificacion="@cliente.Identificacion"
                                                data-correo="@(cliente.Correo ?? "Sin correo")"
                                                data-telefono="@cliente.Telefono"
                                                data-estado="@(cliente.Estado ? "Activo" : "Inactivo")"
                                                data-fecha="@cliente.FechaRegistroFormateada"
                                                style="background: #9b59b6; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesCliente"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" style="padding: 3rem; text-align: center; color: var(--charcoal);">
                                    <i class="fas fa-inbox" style="font-size: 3rem; color: var(--olive-green); opacity: 0.5; margin-bottom: 1rem; display: block;"></i>
                                    <p style="margin: 0; font-size: 1.1rem;">No se encontraron clientes</p>
                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                                    {
                                        <p style="margin: 0.5rem 0 0 0; opacity: 0.7;">Intenta con otros términos de búsqueda</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                </div>

                <div class="pagination-buttons">
                    <button id="btnAnterior" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </button>
                    <button id="btnSiguiente" class="pagination-btn">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesCliente" />

@section Scripts {
    <script src="~/js/cliente.js"></script>
}