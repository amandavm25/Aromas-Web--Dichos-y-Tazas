<div class="modal fade" id="modalDetallesReserva" tabindex="-1" aria-labelledby="modalDetallesReservaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 25px; overflow: hidden; box-shadow: var(--shadow-xl);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); color: var(--white); border: none; padding: 2rem;">
                <h5 class="modal-title" id="modalDetallesReservaLabel" style="font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.5rem;">
                    <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    Detalles de la Reserva
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="opacity: 1;"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2.5rem; background: var(--cream);">
                <!-- Título de la Reserva -->
                <div class="feature-card" style="background: var(--white); padding: 1.5rem; border-radius: 20px; margin: 0 0 2rem; box-shadow: var(--shadow-sm); border-left: 5px solid var(--olive-green); display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <h5 id="detalles-cliente-reserva" style="color: var(--dark-green); margin: 0; font-size: 1.6rem; font-family: var(--font-primary); font-weight: 700;"></h5>
                        <p id="detalles-telefono-reserva" style="margin: 0.5rem 0 0; color: var(--charcoal); opacity: 0.7; font-weight: 500; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-phone"></i>
                            <span></span>
                        </p>
                    </div>
                    <div style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--olive-green), var(--dark-green)); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-md);">
                        <i class="fas fa-calendar-alt" style="font-size: 2rem; color: white;"></i>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <!-- Columna Izquierda -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- ID -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hashtag" style="color: var(--olive-green); font-size: 1.1rem;"></i> ID de Reserva
                            </label>
                            <p id="detalles-id-reserva" style="color: var(--dark-green); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Fecha -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar" style="color: var(--olive-green); font-size: 1.1rem;"></i> Fecha
                            </label>
                            <p id="detalles-fecha-reserva" style="color: var(--dark-green); font-size: 1.2rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Hora -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-clock" style="color: var(--olive-green); font-size: 1.1rem;"></i> Hora
                            </label>
                            <p id="detalles-hora-reserva" style="color: var(--gold-bright); font-size: 1.5rem; font-weight: 700; margin: 0;"></p>
                        </div>
                    </div>

                    <!-- Columna Derecha -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- Cantidad de Personas -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-users" style="color: var(--olive-green); font-size: 1.1rem;"></i> Cantidad de Personas
                            </label>
                            <p id="detalles-personas-reserva" style="color: var(--dark-green); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Estado -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-check-circle" style="color: var(--olive-green); font-size: 1.1rem;"></i> Estado
                            </label>
                            <span id="detalles-estado-badge-reserva" class="badge" style="font-size: 1rem; padding: 0.6rem 1.5rem; border-radius: 50px; display: inline-flex; align-items: center; gap: 0.5rem; font-weight: 600;">
                                <i id="detalles-estado-icono-reserva"></i>
                                <span id="detalles-estado-texto-reserva"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Observaciones -->
                <div id="detalles-observaciones-container" style="display: none; margin-top: 2rem;">
                    <div class="feature-card" style="padding: 1.5rem; margin: 0; background: linear-gradient(135deg, rgba(197, 179, 88, 0.08) 0%, rgba(184, 167, 106, 0.08) 100%); border-left: 4px solid var(--gold);">
                        <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                            <i class="fas fa-comment" style="color: var(--gold); font-size: 1.1rem;"></i> Observaciones
                        </label>
                        <p id="detalles-observaciones-reserva" style="color: var(--dark-green); font-size: 1rem; line-height: 1.6; margin: 0;"></p>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--white); border: none; padding: 1.5rem 2.5rem;">
                <button type="button" class="btn btn-secondary btn-3d" data-bs-dismiss="modal" style="padding: 0.9rem 2.5rem; border-radius: 50px;">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>