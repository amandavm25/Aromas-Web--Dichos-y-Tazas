@model AromasWeb.Abstracciones.ModeloUI.SolicitudVacaciones

@{
    ViewBag.Title = "Nueva Solicitud de Vacaciones";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-umbrella-beach"></i>
                Nueva Solicitud
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Solicitar
                <span class="hero-title-accent">Vacaciones</span>
            </h1>
            <p class="hero-subtitle">
                Registra una nueva solicitud de vacaciones para un empleado
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse"><div class="wheel"></div></div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("CrearSolicitud", "SolicitudVacaciones", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Sección Empleado -->
                <div class="admin-form-header">
                    <i class="fas fa-user-tie"></i>
                    <h5>Información del Empleado</h5>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-user"></i> Empleado</label>
                    @Html.DropDownListFor(model => model.IdEmpleado,
                    new SelectList(ViewBag.Empleados, "IdEmpleado", "NombreCompleto"),
                                "Seleccione un empleado",
                                new { @class = "form-control", id = "selectEmpleado" })
                @Html.ValidationMessageFor(model => model.IdEmpleado, "", new { @class = "text-danger" })
            </div>

            <!-- Info del empleado seleccionado -->
            <div id="infoEmpleado" style="display: none; margin: 0 0 1.5rem; padding: 1.5rem; background: var(--cream); border-radius: 20px; border-left: 5px solid var(--olive-green);">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 1.5rem;">
                    <div>
                        <small style="color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.3rem;">
                            <i class="fas fa-briefcase" style="color: var(--olive-green);"></i> Cargo
                        </small>
                        <strong id="empleadoCargo" style="color: var(--dark-green);"></strong>
                    </div>
                    <div>
                        <small style="color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.3rem;">
                            <i class="fas fa-calendar-plus" style="color: var(--olive-green);"></i> Contratación
                        </small>
                        <strong id="empleadoFechaContratacion" style="color: var(--dark-green);"></strong>
                    </div>
                    <div>
                        <small style="color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.3rem;">
                            <i class="fas fa-calendar-check" style="color: var(--gold-bright);"></i> Días Disponibles
                        </small>
                        <strong id="empleadoDiasDisponibles" style="color: var(--gold-bright); font-size: 1.3rem;"></strong>
                    </div>
                </div>
                @Html.HiddenFor(model => model.DiasDisponibles, new { id = "hiddenDiasDisponibles" })
            </div>

            <!-- Sección Solicitud -->
            <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin: 0 0 1.5rem;">
                <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                    <i class="fas fa-calendar-alt"></i> Información de la Solicitud
                </h5>
            </div>

            <div class="form-group">
                <label><i class="fas fa-calendar"></i> Fecha de Solicitud</label>
                @Html.EditorFor(model => model.FechaSolicitud, new { htmlAttributes = new { @class = "form-control", type = "date", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.FechaSolicitud, "", new { @class = "text-danger" })
                <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i> Fecha en que se registra la solicitud
                </small>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label><i class="fas fa-play"></i> Fecha de Inicio</label>
                    @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label><i class="fas fa-stop"></i> Fecha de Fin</label>
                    @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Días calculados — compacto -->
            <div class="form-group">
                <label><i class="fas fa-calculator"></i> Días Laborables</label>
                <div style="display: flex; align-items: center; gap: 1rem; background: var(--cream); border-radius: 15px; padding: 0.8rem 1.2rem;">
                    <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Calculados automáticamente:</span>
                    <span id="diasCalculados" style="background: var(--olive-green); color: white; font-size: 1.1rem; font-weight: 700; padding: 0.3rem 1rem; border-radius: 50px;">0</span>
                    <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">días</span>
                </div>
                @Html.HiddenFor(model => model.DiasSolicitados)
            </div>

            <!-- Alerta días insuficientes -->
            <div id="alertaDias" style="display: none; background: rgba(231,76,60,0.1); padding: 1rem 1.5rem; border-radius: 15px; margin: 0 0 1.5rem; border-left: 5px solid var(--red);">
                <p style="margin: 0; color: #c0392b; font-weight: 600; display: flex; align-items: center; gap: 0.7rem;">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span id="mensajeAlerta"></span>
                </p>
            </div>

            @Html.HiddenFor(model => model.Estado)

            <!-- Botones -->
            <div class="admin-form-footer">
                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoSolicitudes", "SolicitudVacaciones")'">
                    <span><i class="fas fa-times"></i> Cancelar</span>
                </button>
                <button type="submit" class="btn btn-primary btn-3d" id="btnGuardar">
                    <span><i class="fas fa-save"></i> Registrar Solicitud</span>
                </button>
            </div>
        </div>
                }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/solicitudvacaciones.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const selectEmpleado = document.getElementById('selectEmpleado');
            const infoEmpleado = document.getElementById('infoEmpleado');
            const empleadoCargo = document.getElementById('empleadoCargo');
            const empleadoFechaContratacion = document.getElementById('empleadoFechaContratacion');
            const empleadoDiasDisponibles = document.getElementById('empleadoDiasDisponibles');
            const hiddenDiasDisponibles = document.getElementById('hiddenDiasDisponibles');
            const empleados = @Html.Raw(Json.Serialize(ViewBag.Empleados));

            selectEmpleado.addEventListener('change', function () {
                const empleadoId = parseInt(this.value);
                if (!empleadoId) { infoEmpleado.style.display = 'none'; return; }
                const empleado = empleados.find(e => e.IdEmpleado === empleadoId);
                if (empleado) {
                    empleadoCargo.textContent = empleado.Cargo;
                    const fecha = new Date(empleado.FechaContratacion);
                    empleadoFechaContratacion.textContent = fecha.toLocaleDateString('es-CR', { year: 'numeric', month: '2-digit', day: '2-digit' });
                    empleadoDiasDisponibles.textContent = empleado.DiasDisponibles + ' días';
                    hiddenDiasDisponibles.value = empleado.DiasDisponibles;
                    infoEmpleado.style.display = 'block';
                    validarDias();
                }
            });

            function validarDias() {
                const solicitados = parseInt(document.getElementById('diasCalculados').textContent) || 0;
                const disponibles = parseFloat(hiddenDiasDisponibles.value || '0');
                const alerta = document.getElementById('alertaDias');
                const btn = document.getElementById('btnGuardar');
                if (solicitados > 0 && solicitados > disponibles) {
                    document.getElementById('mensajeAlerta').textContent = `Días insuficientes. Solicitados: ${solicitados}, Disponibles: ${disponibles}`;
                    alerta.style.display = 'block';
                    btn.disabled = true; btn.style.opacity = '0.5'; btn.style.cursor = 'not-allowed';
                } else {
                    alerta.style.display = 'none';
                    btn.disabled = false; btn.style.opacity = '1'; btn.style.cursor = 'pointer';
                }
            }

            new MutationObserver(validarDias).observe(
                document.getElementById('diasCalculados'),
                { childList: true, characterData: true, subtree: true }
            );
        });
    </script>
}