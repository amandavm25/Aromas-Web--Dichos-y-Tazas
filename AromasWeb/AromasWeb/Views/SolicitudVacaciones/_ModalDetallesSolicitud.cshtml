                    <div style="display: flex; gap: 2rem; flex-wrap: wrap;">
                        <div>
                            <small style="color: var(--charcoal); opacity: 0.7;">Identificación:</small>
                            <p id="detalles-identificacion-empleado" style="margin: 0; color: var(--dark-green); font-weight: 600;"></p>
                        </div>
                        <div>
                            <small style="color: var(--charcoal); opacity: 0.7;">Cargo:</small>
                            <p id="detalles-cargo-empleado" style="margin: 0; color: var(--dark-green); font-weight: 600;"></p>
                        </div>
                    </div>
                </div>

                <!-- Fecha de Solicitud, Estado, Antigüedad -->
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1.5rem; margin-bottom: 2rem;">
                    <div class="feature-card" style="padding: 1.2rem; margin: 0;">
                        <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem;">
