<div class="modal fade admin-modal modal-success" id="modalAprobarSolicitud">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalAprobarSolicitudLabel">
                    <div class="modal-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    Aprobar Solicitud
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">

                <!-- Aviso -->
                <div class="modal-alert alert-success">
                    <div class="modal-alert-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div>
                        <h6>Confirmación de Aprobación</h6>
                        <p>
                            Al aprobar esta solicitud, los días serán
                            <strong>descontados automáticamente</strong> del saldo disponible del empleado.
                        </p>
                    </div>
                </div>

                <!-- Detalles -->
                <div class="modal-section">
                    <h6 class="modal-section-title">
                        <i class="fas fa-umbrella-beach"></i> Detalles de la Solicitud
                    </h6>

                    <div class="modal-data-grid-2">

                        <div class="modal-data-cell">
                            <label class="modal-data-label">
                                <i class="fas fa-user"></i> Empleado
                            </label>
                            <p id="aprobar-nombre-empleado" class="modal-data-value"></p>
                        </div>

                        <div class="modal-data-cell cell-green">
                            <label class="modal-data-label">
                                <i class="fas fa-clock"></i> Días Solicitados
                            </label>
                            <p id="aprobar-diassolicitados" class="modal-data-value value-green"></p>
                        </div>

                        <div class="modal-data-cell cell-span">
                            <label class="modal-data-label">
                                <i class="fas fa-calendar-alt"></i> Período de Vacaciones
                            </label>
                            <p id="aprobar-periodo" class="modal-data-value"></p>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer footer-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <span><i class="fas fa-times"></i> Cancelar</span>
                </button>
                <form id="formAprobarSolicitud" method="post" action="" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="aprobar-id-solicitud" name="id" />
                    <button type="submit" class="btn btn-primary btn-3d">
                        <span><i class="fas fa-check"></i> Aprobar Solicitud</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>