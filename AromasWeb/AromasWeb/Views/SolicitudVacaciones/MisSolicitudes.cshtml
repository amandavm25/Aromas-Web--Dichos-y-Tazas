@model List<AromasWeb.Abstracciones.ModeloUI.SolicitudVacaciones>

@{
    ViewBag.Title = "Mis Solicitudes de Vacaciones";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 50vh; padding: 8rem 0 4rem; background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);"></div>

    <div class="container" style="position: relative; z-index: 2;">
        <div style="text-align: center; color: white;" data-aos="fade-up">
            <span style="display: inline-block; padding: 0.7rem 1.5rem; background: rgba(255, 255, 255, 0.2); border-radius: 50px; font-weight: 600; font-size: 0.9rem; margin-bottom: 2rem; backdrop-filter: blur(10px);">
                <i class="fas fa-umbrella-beach"></i> Mis Vacaciones
            </span>

            <h1 style="font-size: 3.5rem; margin-bottom: 1rem; font-family: var(--font-primary); font-weight: 700;">
                Hola, <span style="color: var(--gold-bright);">@ViewBag.NombreEmpleado</span>
            </h1>

            <p style="font-size: 1.2rem; opacity: 0.9; max-width: 600px; margin: 0 auto 2rem;">
                Consulta tus solicitudes de vacaciones y saldo disponible
            </p>

            <!-- Info rápida del empleado -->
            <div style="display: flex; justify-content: center; gap: 3rem; flex-wrap: wrap; margin-top: 2rem;">
                <div>
                    <i class="fas fa-briefcase" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@ViewBag.CargoEmpleado</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Cargo</span>
                </div>
                <div>
                    <i class="fas fa-calendar-alt" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@ViewBag.MesesTrabajados meses</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Antigüedad</span>
                </div>
                <div>
                    <i class="fas fa-calendar-check" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@ViewBag.DiasDisponibles días</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Disponibles</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1200px;">

        <!-- Resumen de Vacaciones -->
        <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); border-radius: 30px; padding: 3rem; box-shadow: var(--shadow-xl); margin-bottom: 3rem; color: white; position: relative; overflow: hidden;" data-aos="zoom-in">
            <div style="position: absolute; top: -50px; right: -50px; width: 200px; height: 200px; background: rgba(255, 255, 255, 0.1); border-radius: 50%; z-index: 0;"></div>
            <div style="position: absolute; bottom: -30px; left: -30px; width: 150px; height: 150px; background: rgba(255, 255, 255, 0.1); border-radius: 50%; z-index: 0;"></div>

            <div style="position: relative; z-index: 1;">
                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem;">
                    <div style="width: 70px; height: 70px; background: rgba(255, 255, 255, 0.2); border-radius: 20px; display: flex; align-items: center; justify-content: center; backdrop-filter: blur(10px);">
                        <i class="fas fa-calendar-check" style="font-size: 2rem;"></i>
                    </div>
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.95rem;">Tu Saldo de Vacaciones</p>
                        <h2 style="margin: 0; font-size: 3rem; font-weight: 700; font-family: var(--font-primary);">
                            @ViewBag.DiasDisponibles<span style="font-size: 1.5rem; opacity: 0.8;"> días</span>
                        </h2>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; background: rgba(255, 255, 255, 0.15); padding: 2rem; border-radius: 20px; backdrop-filter: blur(10px);">
                    <div>
                        <p style="margin: 0 0 0.5rem; opacity: 0.9; font-size: 0.9rem;">
                            <i class="fas fa-calendar-plus"></i> Días Acumulados
                        </p>
                        <strong style="font-size: 1.3rem;">@ViewBag.DiasAcumulados días</strong>
                    </div>
                    <div>
                        <p style="margin: 0 0 0.5rem; opacity: 0.9; font-size: 0.9rem;">
                            <i class="fas fa-umbrella-beach"></i> Días Tomados
                        </p>
                        <strong style="font-size: 1.3rem;">@ViewBag.DiasTomados días</strong>
                    </div>
                    <div>
                        <p style="margin: 0 0 0.5rem; opacity: 0.9; font-size: 0.9rem;">
                            <i class="fas fa-file-alt"></i> Total Solicitudes
                        </p>
                        <strong style="font-size: 1.3rem;">@Model.Count</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas de Solicitudes -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-clock" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count(s => s.Estado == "Pendiente")</h3>
                <p style="margin: 0; opacity: 0.9;">Pendientes</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, #27ae60 0%, #229954 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-check-circle" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count(s => s.Estado == "Aprobada")</h3>
                <p style="margin: 0; opacity: 0.9;">Aprobadas</p>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-times-circle" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count(s => s.Estado == "Rechazada")</h3>
                <p style="margin: 0; opacity: 0.9;">Rechazadas</p>
            </div>
        </div>

        <!-- Botón Nueva Solicitud -->
        <div style="margin-bottom: 3rem; text-align: center;" data-aos="fade-up">
            <a href="@Url.Action("CrearSolicitud", "SolicitudVacaciones")" class="btn btn-primary btn-3d" style="font-size: 1.1rem; padding: 1.2rem 3rem;">
                <span><i class="fas fa-plus-circle"></i> Solicitar Vacaciones</span>
            </a>
        </div>

        <!-- Timeline de Mis Solicitudes -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-green); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-history"></i> Mis Solicitudes
            </h4>

            @if (Model.Any())
            {
                <div style="position: relative; padding-left: 3rem;">
                    <!-- Línea vertical -->
                    <div style="position: absolute; left: 1rem; top: 0; bottom: 0; width: 3px; background: linear-gradient(180deg, var(--olive-green) 0%, var(--gold-bright) 100%);"></div>

                    @foreach (var solicitud in Model)
                    {
                        var esActual = solicitud.Estado == "Pendiente";
                        var estadoColor = solicitud.EstadoBadgeColor;
                        var iconoEstado = solicitud.Estado switch
                        {
                            "Aprobada" => "fa-check-circle",
                            "Rechazada" => "fa-times-circle",
                            "Pendiente" => "fa-clock",
                            _ => "fa-question-circle"
                        };

                        <div class="feature-card" style="position: relative; margin-bottom: 2rem; padding: 2rem; border-left: 5px solid @estadoColor; @(esActual ? "background: linear-gradient(135deg, rgba(243, 156, 18, 0.05) 0%, rgba(243, 156, 18, 0.02) 100%);" : "")">
                            <!-- Punto en la línea -->
                            <div style="position: absolute; left: -3rem; top: 2rem; width: 20px; height: 20px; background: @estadoColor; border-radius: 50%; border: 4px solid var(--white); box-shadow: 0 0 0 3px @estadoColor;"></div>

                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem;">
                                <div style="flex: 1;">
                                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.7rem; flex-wrap: wrap;">
                                        <h5 style="margin: 0; color: var(--dark-green); font-weight: 700; font-size: 1.5rem; font-family: var(--font-primary);">
                                            Solicitud #@solicitud.IdSolicitud
                                        </h5>
                                        <span style="background: @estadoColor; color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                            <i class="fas @iconoEstado"></i> @solicitud.Estado
                                        </span>
                                        @if (esActual)
                                        {
                                            <span style="background: linear-gradient(135deg, var(--gold-bright), var(--gold)); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;">
                                                <i class="fas fa-hourglass-half"></i> En revisión
                                            </span>
                                        }
                                    </div>
                                    <div style="color: var(--charcoal); opacity: 0.7; font-size: 0.95rem; line-height: 1.8;">
                                        <p style="margin: 0.3rem 0;">
                                            <i class="fas fa-calendar-alt" style="color: var(--olive-green); width: 20px;"></i>
                                            <strong>Período:</strong> @solicitud.PeriodoVacaciones
                                        </p>
                                        <p style="margin: 0.3rem 0;">
                                            <i class="fas fa-clock" style="color: var(--gold-bright); width: 20px;"></i>
                                            <strong>Días laborables:</strong> @solicitud.DiasSolicitados días
                                        </p>
                                        <p style="margin: 0.3rem 0;">
                                            <i class="fas fa-calendar-plus" style="color: var(--gold-bright); width: 20px;"></i>
                                            <strong>Días calendario:</strong> @solicitud.DuracionCalendario días
                                        </p>
                                        <p style="margin: 0.3rem 0;">
                                            <i class="fas fa-paper-plane" style="color: var(--olive-green); width: 20px;"></i>
                                            <strong>Solicitado:</strong> @solicitud.FechaSolicitudFormateada
                                        </p>
                                        @if (solicitud.FechaRespuesta.HasValue)
                                        {
                                            <p style="margin: 0.3rem 0;">
                                                <i class="fas fa-reply" style="color: #27ae60; width: 20px;"></i>
                                                <strong>Respondido:</strong> @solicitud.FechaRespuestaFormateada (@solicitud.TiempoRespuesta)
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (solicitud.Estado == "Pendiente")
                            {
                                <div style="background: linear-gradient(135deg, rgba(243, 156, 18, 0.1) 0%, rgba(230, 126, 34, 0.1) 100%); padding: 1.5rem; border-radius: 15px; margin-top: 1rem; border-left: 4px solid #f39c12;">
                                    <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.7rem;">
                                        <i class="fas fa-info-circle" style="font-size: 1.2rem; color: #f39c12;"></i>
                                        <span>Tu solicitud está en revisión. Recibirás una respuesta pronto.</span>
                                    </p>
                                </div>
                            }
                            else if (solicitud.Estado == "Aprobada")
                            {
                                <div style="background: linear-gradient(135deg, rgba(39, 174, 96, 0.1) 0%, rgba(34, 153, 84, 0.1) 100%); padding: 1.5rem; border-radius: 15px; margin-top: 1rem; border-left: 4px solid #27ae60;">
                                    <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.7rem;">
                                        <i class="fas fa-check-circle" style="font-size: 1.2rem; color: #27ae60;"></i>
                                        <span><strong>¡Aprobada!</strong> Disfruta tus vacaciones del @solicitud.FechaInicioFormateada al @solicitud.FechaFinFormateada</span>
                                    </p>
                                </div>
                            }
                            else if (solicitud.Estado == "Rechazada")
                            {
                                <div style="background: linear-gradient(135deg, rgba(231, 76, 60, 0.1) 0%, rgba(192, 57, 43, 0.1) 100%); padding: 1.5rem; border-radius: 15px; margin-top: 1rem; border-left: 4px solid #e74c3c;">
                                    <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.7rem;">
                                        <i class="fas fa-times-circle" style="font-size: 1.2rem; color: #e74c3c;"></i>
                                        <span>Tu solicitud fue rechazada. Consulta con Recursos Humanos para más información.</span>
                                    </p>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 3rem; color: var(--charcoal); opacity: 0.7;">
                    <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block; color: var(--olive-green);"></i>
                    <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">No tienes solicitudes registradas</p>
                    <p style="margin: 0.5rem 0 1.5rem; font-size: 0.95rem;">Aún no has solicitado vacaciones</p>
                    <a href="@Url.Action("CrearSolicitud", "SolicitudVacaciones")" class="btn btn-primary">
                        <span><i class="fas fa-plus"></i> Hacer mi Primera Solicitud</span>
                    </a>
                </div>
            }
        </div>

        <!-- Información Adicional -->
        <div style="margin-top: 3rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;" data-aos="fade-up">
            <div class="specialty-card card-3d" style="text-align: center;">
                <div class="specialty-content">
                    <div class="feature-icon" style="background: linear-gradient(135deg, var(--olive-green), var(--dark-green)); margin: 0 auto 1.5rem;">
                        <i class="fas fa-calculator" style="color: white;"></i>
                    </div>
                    <h5 style="margin-bottom: 1rem; color: var(--dark-green);">¿Cómo se calculan?</h5>
                    <p style="color: var(--charcoal); opacity: 0.7; line-height: 1.7; margin-bottom: 1rem;">
                        Acumulas <strong>1 día de vacaciones por cada mes trabajado</strong>. Los días se calculan excluyendo domingos.
                    </p>
                    <div style="background: var(--cream); padding: 1rem; border-radius: 10px; font-size: 0.9rem;">
                        <strong>Ejemplo:</strong><br>
                        12 meses = 12 días de vacaciones
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/solicitudvacaciones.js"></script>
}