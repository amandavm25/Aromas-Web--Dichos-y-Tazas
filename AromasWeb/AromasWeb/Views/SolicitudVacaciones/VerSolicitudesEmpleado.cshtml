@model List<AromasWeb.Abstracciones.ModeloUI.SolicitudVacaciones>

@{
    ViewBag.Title = "Solicitudes de Vacaciones del Empleado";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-umbrella-beach"></i>
                Historial de Vacaciones
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Solicitudes de Vacaciones
            </h1>
            <p class="hero-subtitle">
                @ViewBag.NombreEmpleado • @ViewBag.CargoEmpleado
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Información del Empleado -->
        <div class="feature-card" style="background: white; margin-bottom: 3rem; padding: 2.5rem; border-left: 5px solid var(--olive-green);" data-aos="fade-up">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-user" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Nombre Completo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@ViewBag.NombreEmpleado</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-id-card" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Identificación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@ViewBag.IdentificacionEmpleado</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-briefcase" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Cargo</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@ViewBag.CargoEmpleado</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-calendar" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Fecha de Contratación</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@ViewBag.FechaContratacion.ToString("dd/MM/yyyy")</h4>
                </div>
                <div>
                    <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-hourglass-half" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Antigüedad</p>
                    <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@ViewBag.MesesTrabajados meses</h4>
                </div>
            </div>
        </div>

        <!-- Estadísticas de Vacaciones -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@ViewBag.DiasAcumulados</h3>
                <p style="margin: 0.5rem 0;">Días Acumulados</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-umbrella-beach"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@ViewBag.DiasTomados</h3>
                <p style="margin: 0.5rem 0;">Días Tomados</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@ViewBag.DiasDisponibles</h3>
                <p style="margin: 0.5rem 0;">Días Disponibles</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count</h3>
                <p style="margin: 0.5rem 0;">Total Solicitudes</p>
            </div>
        </div>

        <!-- Botones de Acción -->
        <div style="display: flex; gap: 1rem; margin-bottom: 3rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("CrearSolicitud", "SolicitudVacaciones")" class="btn btn-primary">
                <span><i class="fas fa-plus"></i> Nueva Solicitud</span>
            </a>
            <a href="@Url.Action("ListadoSolicitudes", "SolicitudVacaciones")" class="btn btn-secondary">
                <span><i class="fas fa-arrow-left"></i> Volver al Listado</span>
            </a>
            <button onclick="window.print()" class="btn" style="background: #27ae60; color: white; border: none; margin-left: auto;">
                <span><i class="fas fa-print"></i> Imprimir Historial</span>
            </button>
        </div>

        <!-- Timeline de Solicitudes -->
        <div style="background: var(--cream); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 3rem;" data-aos="fade-up">
            <h4 style="color: var(--dark-green); margin-bottom: 2rem; font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-clock"></i> Historial de Solicitudes
            </h4>

            @if (Model.Any())
            {
                <div style="position: relative; padding-left: 3rem;">
                    <!-- Línea vertical -->
                    <div style="position: absolute; left: 1rem; top: 0; bottom: 0; width: 3px; background: linear-gradient(180deg, var(--olive-green) 0%, var(--gold) 100%);"></div>

                    @foreach (var solicitud in Model)
                    {
                        var estadoColor = solicitud.EstadoBadgeColor;
                        var estadoIcon = solicitud.Estado switch
                        {
                            "Aprobada" => "fa-check-circle",
                            "Rechazada" => "fa-times-circle",
                            "Pendiente" => "fa-clock",
                            _ => "fa-question-circle"
                        };

                        <div class="feature-card" style="position: relative; margin-bottom: 2rem; padding: 2rem; border-left: 5px solid @estadoColor; background: white;">
                            <!-- Punto en la línea -->
                            <div style="position: absolute; left: -3rem; top: 2rem; width: 20px; height: 20px; background: @estadoColor; border-radius: 50%; border: 4px solid var(--white); box-shadow: 0 0 0 3px @estadoColor;"></div>

                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem;">
                                <div style="flex: 1;">
                                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.7rem; flex-wrap: wrap;">
                                        <h5 style="margin: 0; color: var(--dark-green); font-weight: 700; font-size: 1.5rem; font-family: var(--font-primary);">
                                            Solicitud #@solicitud.IdSolicitud
                                        </h5>
                                        <span style="background: @estadoColor; color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                            <i class="fas @estadoIcon"></i> @solicitud.Estado
                                        </span>
                                    </div>
                                    <div style="display: flex; flex-direction: column; gap: 0.5rem; color: var(--charcoal); opacity: 0.7; font-size: 0.95rem;">
                                        <span>
                                            <i class="fas fa-calendar-alt" style="color: var(--olive-green);"></i>
                                            <strong>Período:</strong> @solicitud.PeriodoVacaciones
                                        </span>
                                        <span>
                                            <i class="fas fa-clock" style="color: var(--gold-bright);"></i>
                                            <strong>Días solicitados:</strong> @solicitud.DiasSolicitados días laborables
                                        </span>
                                        <span>
                                            <i class="fas fa-calendar-plus" style="color: var(--gold-bright);"></i>
                                            <strong>Solicitado el:</strong> @solicitud.FechaSolicitudFormateada
                                        </span>
                                        @if (solicitud.FechaRespuesta.HasValue)
                                        {
                                            <span>
                                                <i class="fas fa-reply" style="color: var(--olive-green);"></i>
                                                <strong>Respondido el:</strong> @solicitud.FechaRespuestaFormateada (@solicitud.TiempoRespuesta)
                                            </span>
                                        }
                                    </div>
                                </div>
                                <div style="text-align: right;">
                                    <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">Días Calendario</p>
                                    <strong style="color: var(--gold); font-size: 1.5rem; font-family: var(--font-primary);">
                                        @solicitud.DuracionCalendario
                                    </strong>
                                </div>
                            </div>

                            <div style="background: var(--cream); padding: 1.5rem; border-radius: 15px; margin-top: 1rem;">
                                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1.5rem;">
                                    <div>
                                        <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">
                                            <i class="fas fa-calendar-check" style="color: var(--gold-bright);"></i> Días disponibles (antes)
                                        </p>
                                        <strong style="color: var(--dark-green); font-size: 1.2rem;">@solicitud.DiasDisponibles</strong>
                                    </div>
                                    @if (solicitud.Estado == "Aprobada")
                                    {
                                        <div>
                                            <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">
                                                <i class="fas fa-arrow-right" style="color: var(--olive-green);"></i> Días después
                                            </p>
                                            <strong style="color: var(--olive-green); font-size: 1.2rem;">@solicitud.DiasTemporales</strong>
                                        </div>
                                    }
                                    else if (solicitud.Estado == "Pendiente")
                                    {
                                        <div>
                                            <p style="margin: 0 0 0.3rem; color: var(--charcoal); opacity: 0.7; font-size: 0.85rem;">
                                                <i class="fas fa-hourglass-half" style="color: var(--gold-bright);"></i> Días temporales
                                            </p>
                                            <strong style="color: var(--gold-bright); font-size: 1.2rem;">@solicitud.DiasTemporales</strong>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--cream); font-size: 0.85rem; color: var(--charcoal); opacity: 0.7;">
                                <i class="fas fa-calendar-plus"></i>
                                Registrado el @solicitud.FechaSolicitudFormateada
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 3rem; color: var(--charcoal); opacity: 0.7;">
                    <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block;"></i>
                    <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">No hay solicitudes registradas</p>
                    <p style="margin: 0.5rem 0 0; font-size: 0.95rem;">Este empleado aún no ha solicitado vacaciones</p>
                </div>
            }
        </div>
    </div>
</section>

<style>
    @@media print {
        .navbar, .footer, .scroll-to-top, .hero-leaves, .scroll-indicator, button, .btn {
            display: none !important;
        }

        .hero {
            min-height: auto !important;
            padding: 2rem 0 1rem !important;
        }

        section {
            padding: 1rem 0 !important;
        }

        body {
            background: white !important;
        }
    }
</style>

@section Scripts {
    <script src="~/js/solicitudvacaciones.js"></script>
}