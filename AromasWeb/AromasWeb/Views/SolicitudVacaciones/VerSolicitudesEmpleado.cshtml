@model List<AromasWeb.Abstracciones.ModeloUI.SolicitudVacaciones>

@{
    ViewBag.Title = "Solicitudes de Vacaciones del Empleado";
    var totalSolicitudes = Model?.Count ?? 0;
    var pendientes = Model?.Count(s => s.Estado == "Pendiente") ?? 0;
    var aprobadas = Model?.Count(s => s.Estado == "Aprobada") ?? 0;
    var rechazadas = Model?.Count(s => s.Estado == "Rechazada") ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-umbrella-beach"></i>
                Vacaciones del Empleado
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Solicitudes de Vacaciones del Empleado
            </h1>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse"><div class="wheel"></div></div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Información del Empleado -->
        @{
            var empleadoInfo = (AromasWeb.Abstracciones.ModeloUI.Empleado)ViewBag.Empleado;
        }
        @if (empleadoInfo != null)
        {
            <div class="feature-card" style="background: white; margin-bottom: 3rem; padding: 2.5rem; border-left: 5px solid var(--olive-green);" data-aos="fade-up">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
                    <div>
                        <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                            <i class="fas fa-user" style="font-size: 1.5rem; color: white;"></i>
                        </div>
                        <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Nombre Completo</p>
                        <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleadoInfo.Nombre @empleadoInfo.Apellidos</h4>
                    </div>
                    <div>
                        <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                            <i class="fas fa-id-card" style="font-size: 1.5rem; color: white;"></i>
                        </div>
                        <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Identificación</p>
                        <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleadoInfo.Identificacion</h4>
                    </div>
                    <div>
                        <div style="width: 60px; height: 60px; background: var(--olive-green); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                            <i class="fas fa-briefcase" style="font-size: 1.5rem; color: white;"></i>
                        </div>
                        <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Cargo</p>
                        <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleadoInfo.Cargo</h4>
                    </div>
                    <div>
                        <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                            <i class="fas fa-calendar" style="font-size: 1.5rem; color: white;"></i>
                        </div>
                        <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Fecha de Contratación</p>
                        <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleadoInfo.FechaContratacion.ToString("dd/MM/yyyy")</h4>
                    </div>
                    <div>
                        <div style="width: 60px; height: 60px; background: var(--gold); border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                            <i class="fas fa-hourglass-half" style="font-size: 1.5rem; color: white;"></i>
                        </div>
                        <p style="margin: 0; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">Antigüedad</p>
                        <h4 style="margin: 0.3rem 0 0; font-weight: 600; color: var(--dark-green);">@empleadoInfo.AnosTrabajados</h4>
                    </div>
                </div>
            </div>
        }

        <!-- Tarjetas de resumen -->
        <div class="features-grid" style="margin-bottom: 3rem; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon"><i class="fas fa-file-alt"></i></div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalSolicitudes</h3>
                <p style="margin: 0.5rem 0;">Total Solicitudes</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon"><i class="fas fa-clock"></i></div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@pendientes</h3>
                <p style="margin: 0.5rem 0;">Pendientes</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon"><i class="fas fa-check-circle"></i></div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@aprobadas</h3>
                <p style="margin: 0.5rem 0;">Aprobadas</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon"><i class="fas fa-times-circle"></i></div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@rechazadas</h3>
                <p style="margin: 0.5rem 0;">Rechazadas</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="400">
                <div class="feature-icon"><i class="fas fa-calendar-check"></i></div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem; color: var(--olive-green);">@ViewBag.DiasDisponibles</h3>
                <p style="margin: 0.5rem 0;">Días Disponibles</p>
            </div>
        </div>

        <!-- Botón volver + nueva solicitud -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("ListadoEmpleados", "Empleado")" class="btn btn-secondary">
                <span><i class="fas fa-arrow-left"></i> Volver a Empleados</span>
            </a>
            <a href="@Url.Action("CrearSolicitud", "SolicitudVacaciones", new { idEmpleado = ViewBag.IdEmpleado })" class="btn btn-primary btn-3d">
                <span><i class="fas fa-plus"></i> Nueva Solicitud</span>
            </a>
        </div>

        <!-- Tabla Principal -->
        <div class="admin-table-container" data-aos="fade-up">
            <div class="table-responsive">
                <table id="laTablaDeSolicitudes" class="admin-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Fecha Solicitud</th>
                            <th>Período</th>
                            <th>Días</th>
                            <th>Disponibles</th>
                            <th>Estado</th>
                            <th style="text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int contador = 1;
                            foreach (var solicitud in Model)
                            {
                                <tr>
                                    <td>
                                        <span style="color: var(--charcoal); font-weight: 600;">@contador</span>
                                    </td>
                                    <td>
                                        <span style="color: var(--dark-green); font-weight: 600;">
                                            <i class="fas fa-calendar" style="margin-right: 0.3rem; color: var(--olive-green);"></i>
                                            @solicitud.FechaSolicitudFormateada
                                        </span>
                                    </td>
                                    <td>
                                        <div style="display: flex; flex-direction: column; gap: 0.2rem;">
                                            <span><i class="fas fa-play" style="color: var(--green); margin-right: 0.3rem;"></i>@solicitud.FechaInicioFormateada</span>
                                            <span><i class="fas fa-stop" style="color: var(--red); margin-right: 0.3rem;"></i>@solicitud.FechaFinFormateada</span>
                                        </div>
                                    </td>
                                    <td style="text-align: center;">
                                        <span style="background: var(--gold-bright); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-weight: 700; font-size: 1rem; display: inline-block; min-width: 45px;">
                                            @solicitud.DiasSolicitados
                                        </span>
                                    </td>
                                    <td style="text-align: center;">
                                        <span style="color: @(solicitud.DiasDisponibles >= solicitud.DiasSolicitados ? "var(--green)" : "var(--red)"); font-weight: 600; font-size: 1.05rem;">
                                            @solicitud.DiasDisponibles.ToString("F0")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge" style="background: @solicitud.EstadoBadgeColor; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;">
                                            @solicitud.Estado
                                        </span>
                                    </td>
                                    <td style="text-align: center; white-space: nowrap;">
                                        @if (solicitud.Estado == "Pendiente")
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-aprobar-solicitud"
                                                    data-id="@solicitud.IdSolicitud"
                                                    data-empleado="@solicitud.NombreEmpleado"
                                                    data-periodo="@solicitud.PeriodoVacaciones"
                                                    data-dias-solicitados="@solicitud.DiasSolicitados"
                                                    style="background: var(--green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalAprobarSolicitud"
                                                    title="Aprobar">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn btn-sm btn-rechazar-solicitud"
                                                    data-id="@solicitud.IdSolicitud"
                                                    data-empleado="@solicitud.NombreEmpleado"
                                                    data-periodo="@solicitud.PeriodoVacaciones"
                                                    data-dias-solicitados="@solicitud.DiasSolicitados"
                                                    style="background: var(--red); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalRechazarSolicitud"
                                                    title="Rechazar">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn btn-sm"
                                                    onclick="window.location.href='@Url.Action("EditarSolicitud", "SolicitudVacaciones", new { id = solicitud.IdSolicitud })'"
                                                    style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }
                                        <button type="button"
                                                class="btn btn-sm btn-detalles-solicitud"
                                                data-id="@solicitud.IdSolicitud"
                                                data-empleado="@solicitud.NombreEmpleado"
                                                data-identificacion="@solicitud.IdentificacionEmpleado"
                                                data-cargo="@solicitud.CargoEmpleado"
                                                data-fecha-solicitud="@solicitud.FechaSolicitudFormateada"
                                                data-fecha-inicio="@solicitud.FechaInicioFormateada"
                                                data-fecha-fin="@solicitud.FechaFinFormateada"
                                                data-dias-solicitados="@solicitud.DiasSolicitados"
                                                data-dias-disponibles="@solicitud.DiasDisponibles.ToString("F0")"
                                                data-estado="@solicitud.Estado"
                                                data-antiguedad="@solicitud.AntiguedadTexto"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesSolicitud"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                contador++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="admin-table-empty">
                                    <i class="fas fa-inbox"></i>
                                    <p>Este empleado no tiene solicitudes registradas</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                </div>
                <div class="pagination-buttons">
                    <button id="btnAnterior" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </button>
                    <button id="btnSiguiente" class="pagination-btn">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesSolicitud" />
<partial name="_ModalAprobarSolicitud" />
<partial name="_ModalRechazarSolicitud" />

@section Scripts {
    <script src="~/js/solicitudvacaciones.js"></script>
}