@model List<AromasWeb.Abstracciones.ModeloUI.SolicitudVacaciones>

@{
    ViewBag.Title = "Gestión de Solicitudes de Vacaciones";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-umbrella-beach"></i>
                Gestión de Vacaciones
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Solicitudes de Vacaciones
            </h1>
            <p class="hero-subtitle">
                Administra las solicitudes de vacaciones del personal
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoSolicitudes", "SolicitudVacaciones")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por empleado, identificación o período..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearSolicitud", "SolicitudVacaciones")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Nueva Solicitud</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> solicitud(es) encontrada(s)
                </p>
            </div>
        }

        <!-- Filtro por estado -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold-bright);"></i> Filtrar por estado:
                </span>
                <a href="@Url.Action("ListadoSolicitudes", "SolicitudVacaciones")"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todas</span>
                </a>
                <a href="@Url.Action("ListadoSolicitudes", "SolicitudVacaciones", new { filtroEstado = "Pendiente" })"
                   class="btn @(ViewBag.FiltroEstado == "Pendiente" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-clock"></i> Pendientes</span>
                </a>
                <a href="@Url.Action("ListadoSolicitudes", "SolicitudVacaciones", new { filtroEstado = "Aprobada" })"
                   class="btn @(ViewBag.FiltroEstado == "Aprobada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Aprobadas</span>
                </a>
                <a href="@Url.Action("ListadoSolicitudes", "SolicitudVacaciones", new { filtroEstado = "Rechazada" })"
                   class="btn @(ViewBag.FiltroEstado == "Rechazada" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> Rechazadas</span>
                </a>
            </div>
        </div>

        <!-- Layout Principal: Tabla + Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDeSolicitudes" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Cargo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Período</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Días</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Disponibles</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var solicitud in Model)
                                {
                                    <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1); transition: all 0.3s;">
                                        <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@solicitud.IdSolicitud</td>
                                        <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 500;">
                                            <div style="display: flex; flex-direction: column;">
                                                <span style="font-weight: 600;">@solicitud.NombreEmpleado</span>
                                                <small style="color: var(--charcoal); opacity: 0.7;">@solicitud.IdentificacionEmpleado</small>
                                            </div>
                                        </td>
                                        <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">@solicitud.CargoEmpleado</td>
                                        <td style="padding: 1.2rem; color: var(--charcoal); font-size: 0.9rem;">
                                            <div style="display: flex; flex-direction: column;">
                                                <span style="font-weight: 600; color: var(--dark-green);">@solicitud.PeriodoVacaciones</span>
                                                <small style="color: var(--charcoal); opacity: 0.7;">Solicitado: @solicitud.FechaSolicitudFormateada</small>
                                            </div>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center;">
                                            <span style="background: var(--olive-green); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.9rem; font-weight: 600; display: inline-block;">
                                                @solicitud.DiasSolicitados días
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center;">
                                            <span style="background: var(--gold-bright); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.9rem; font-weight: 600; display: inline-block;">
                                                @solicitud.DiasDisponibles
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem;">
                                            <span style="background: @solicitud.EstadoBadgeColor; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                                                @solicitud.Estado
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                            @if (solicitud.Estado == "Pendiente")
                                            {
                                                <button type="button"
                                                        class="btn btn-sm"
                                                        onclick="window.location.href='@Url.Action("EditarSolicitud", "SolicitudVacaciones", new { id = solicitud.IdSolicitud })'"
                                                        style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                        title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            }
                                            <button type="button"
                                                    class="btn btn-sm btn-detalles"
                                                    data-id="@solicitud.IdSolicitud"
                                                    data-nombre="@solicitud.NombreEmpleado"
                                                    data-identificacion="@solicitud.IdentificacionEmpleado"
                                                    data-cargo="@solicitud.CargoEmpleado"
                                                    data-fechasolicitud="@solicitud.FechaSolicitudFormateada"
                                                    data-fechainicio="@solicitud.FechaInicioFormateada"
                                                    data-fechafin="@solicitud.FechaFinFormateada"
                                                    data-diassolicitados="@solicitud.DiasSolicitados"
                                                    data-diasdisponibles="@solicitud.DiasDisponibles"
                                                    data-diastemporales="@solicitud.DiasTemporales"
                                                    data-estado="@solicitud.Estado"
                                                    data-fecharespuesta="@solicitud.FechaRespuestaFormateada"
                                                    style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetallesSolicitud"
                                                    title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn btn-sm"
                                                    onclick="window.location.href='@Url.Action("VerSolicitudesEmpleado", "SolicitudVacaciones", new { idEmpleado = solicitud.IdEmpleado })'"
                                                    style="background: var(--gold-bright); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    title="Ver todas las solicitudes del empleado">
                                                <i class="fas fa-history"></i>
                                            </button>
                                            @if (solicitud.Estado == "Pendiente")
                                            {
                                                <button type="button"
                                                        class="btn btn-sm btn-aprobar"
                                                        data-id="@solicitud.IdSolicitud"
                                                        data-nombre="@solicitud.NombreEmpleado"
                                                        data-periodo="@solicitud.PeriodoVacaciones"
                                                        data-diassolicitados="@solicitud.DiasSolicitados"
                                                        style="background: #27ae60; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalAprobarSolicitud"
                                                        title="Aprobar">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button type="button"
                                                        class="btn btn-sm btn-rechazar"
                                                        data-id="@solicitud.IdSolicitud"
                                                        data-nombre="@solicitud.NombreEmpleado"
                                                        data-periodo="@solicitud.PeriodoVacaciones"
                                                        style="background: #e67e22; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalRechazarSolicitud"
                                                        title="Rechazar">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                <button type="button"
                                                        class="btn btn-sm btn-eliminar"
                                                        data-id="@solicitud.IdSolicitud"
                                                        data-nombre="@solicitud.NombreEmpleado"
                                                        data-periodo="@solicitud.PeriodoVacaciones"
                                                        data-diassolicitados="@solicitud.DiasSolicitados"
                                                        data-estado="@solicitud.Estado"
                                                        style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalEliminarSolicitud"
                                                        title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" style="padding: 3rem; text-align: center; color: var(--charcoal); opacity: 0.7;">
                                        <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block; color: var(--olive-green);"></i>
                                        <p style="margin: 0; font-size: 1.1rem;">No hay solicitudes de vacaciones registradas</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-green); font-size: 0.95rem;">
                        Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">@(Model?.Count ?? 0)</span></strong> de <strong id="totalRecords">@(Model?.Count ?? 0)</strong> solicitudes
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Estadísticas (Derecha) -->
            <div style="position: sticky; top: 100px;">
                <!-- Solicitudes Recientes -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-clock" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Solicitudes Recientes</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Últimas 3 solicitudes</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 400px; overflow-y: auto;">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var solicitud in Model.OrderByDescending(s => s.FechaSolicitud).Take(3))
                            {
                                <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid @solicitud.EstadoBadgeColor;">
                                    <strong style="color: var(--dark-green); font-size: 0.95rem; display: block;">@solicitud.NombreEmpleado</strong>
                                    <small style="color: var(--charcoal); opacity: 0.7; display: block; margin-top: 0.3rem;">
                                        @solicitud.DiasSolicitados días - @solicitud.FechaSolicitudFormateada
                                    </small>
                                    <span style="background: @solicitud.EstadoBadgeColor; color: white; padding: 0.2rem 0.6rem; border-radius: 10px; font-size: 0.75rem; display: inline-block; margin-top: 0.5rem;">
                                        @solicitud.Estado
                                    </span>
                                </div>
                            }
                        }
                        else
                        {
                            <p style="color: var(--charcoal); opacity: 0.7; text-align: center; padding: 1rem;">No hay solicitudes recientes</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesSolicitud" />
<partial name="_ModalEliminarSolicitud" />
<partial name="_ModalAprobarSolicitud" />
<partial name="_ModalRechazarSolicitud" />

@section Scripts {
    <script src="~/js/solicitudvacaciones.js"></script>
}