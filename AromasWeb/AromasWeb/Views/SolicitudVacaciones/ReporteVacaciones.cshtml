@model List<AromasWeb.Abstracciones.ModeloUI.SolicitudVacaciones>

@{
    ViewBag.Title = "Reporte de Vacaciones";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-chart-line"></i>
                Reporte de Vacaciones
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de
                <span class="hero-title-accent">Vacaciones</span>
            </h1>
            <p class="hero-subtitle">
                Detalle completo de vacaciones y saldos del empleado
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Información del Empleado -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); padding: 2.5rem; margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; justify-content: space-between; align-items: start; flex-wrap: wrap; gap: 2rem;">
                <div style="flex: 1; min-width: 300px;">
                    <div style="display: flex; align-items: center; gap: 1.5rem; margin-bottom: 1.5rem;">
                        <div style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--olive-green), var(--dark-green)); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-md);">
                            <i class="fas fa-user-tie" style="font-size: 2.5rem; color: white;"></i>
                        </div>
                        <div>
                            <h3 style="color: var(--dark-green); margin: 0; font-size: 1.8rem; font-family: var(--font-primary); font-weight: 700;">@ViewBag.NombreEmpleado</h3>
                            <p style="margin: 0.3rem 0 0; color: var(--charcoal); opacity: 0.7; font-size: 1rem;">@ViewBag.IdentificacionEmpleado</p>
                            <p style="margin: 0.3rem 0 0; color: var(--gold-bright); font-weight: 600; font-size: 1.1rem;">@ViewBag.CargoEmpleado</p>
                        </div>
                    </div>

                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem;">
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px;">
                            <label style="color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.5rem;">
                                <i class="fas fa-calendar-plus" style="color: var(--olive-green);"></i> Contratación
                            </label>
                            <p style="color: var(--dark-green); font-weight: 600; margin: 0;">@ViewBag.FechaContratacion.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px;">
                            <label style="color: var(--charcoal); opacity: 0.7; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; display: block; margin-bottom: 0.5rem;">
                                <i class="fas fa-clock" style="color: var(--olive-green);"></i> Antigüedad
                            </label>
                            <p style="color: var(--dark-green); font-weight: 600; margin: 0;">@ViewBag.MesesTrabajados meses</p>
                        </div>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem;">
                    <button onclick="window.location.href='@Url.Action("ListadoSolicitudes", "SolicitudVacaciones")'" class="btn btn-secondary" style="border-radius: 50px; padding: 1rem 2rem;">
                        <span><i class="fas fa-arrow-left"></i> Volver</span>
                    </button>
                    <button onclick="window.print()" class="btn btn-primary btn-3d" style="border-radius: 50px; padding: 1rem 2rem;">
                        <span><i class="fas fa-print"></i> Imprimir</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Estadísticas de Vacaciones -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-bottom: 3rem;" data-aos="fade-up">
            <!-- Días Acumulados -->
            <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); color: white; padding: 2rem; border-radius: 20px; box-shadow: var(--shadow-lg);">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem; font-weight: 500;">Días Acumulados</p>
                        <h2 style="margin: 0.5rem 0 0; font-size: 3rem; font-weight: 700;">@ViewBag.DiasAcumulados</h2>
                        <small style="opacity: 0.8;">días totales</small>
                    </div>
                    <div style="width: 60px; height: 60px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-calendar-plus" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>

            <!-- Días Tomados -->
            <div style="background: linear-gradient(135deg, var(--gold-bright) 0%, var(--gold) 100%); color: white; padding: 2rem; border-radius: 20px; box-shadow: var(--shadow-lg);">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem; font-weight: 500;">Días Tomados</p>
                        <h2 style="margin: 0.5rem 0 0; font-size: 3rem; font-weight: 700;">@ViewBag.DiasTomados</h2>
                        <small style="opacity: 0.8;">días utilizados</small>
                    </div>
                    <div style="width: 60px; height: 60px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-umbrella-beach" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>

            <!-- Días Disponibles -->
            <div style="background: linear-gradient(135deg, #27ae60 0%, #229954 100%); color: white; padding: 2rem; border-radius: 20px; box-shadow: var(--shadow-lg);">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem; font-weight: 500;">Días Disponibles</p>
                        <h2 style="margin: 0.5rem 0 0; font-size: 3rem; font-weight: 700;">@ViewBag.DiasDisponibles</h2>
                        <small style="opacity: 0.8;">días restantes</small>
                    </div>
                    <div style="width: 60px; height: 60px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-calendar-check" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Historial de Solicitudes -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;" data-aos="fade-up">
            <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); color: white; padding: 2rem;">
                <h4 style="margin: 0; font-weight: 700; display: flex; align-items: center; gap: 1rem;">
                    <i class="fas fa-history" style="font-size: 1.5rem;"></i>
                    Historial de Solicitudes de Vacaciones
                </h4>
            </div>

            <div class="table-responsive">
                <table style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                    <thead style="background: var(--cream);">
                        <tr>
                            <th style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; border-bottom: 2px solid var(--olive-green);">#</th>
                            <th style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; border-bottom: 2px solid var(--olive-green);">Fecha Solicitud</th>
                            <th style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; border-bottom: 2px solid var(--olive-green);">Período</th>
                            <th style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; border-bottom: 2px solid var(--olive-green);">Días</th>
                            <th style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; border-bottom: 2px solid var(--olive-green);">Estado</th>
                            <th style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; border-bottom: 2px solid var(--olive-green);">Fecha Respuesta</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var solicitud in Model)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1); transition: all 0.3s;">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@solicitud.IdSolicitud</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@solicitud.FechaSolicitudFormateada</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">
                                        <div style="display: flex; flex-direction: column;">
                                            <span style="font-weight: 600; color: var(--dark-green);">@solicitud.PeriodoVacaciones</span>
                                            <small style="color: var(--charcoal); opacity: 0.7;">@solicitud.DuracionCalendario días calendario</small>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center;">
                                        <span style="background: var(--olive-green); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.9rem; font-weight: 600; display: inline-block;">
                                            @solicitud.DiasSolicitados
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span style="background: @solicitud.EstadoBadgeColor; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                                            @solicitud.Estado
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">
                                        <div style="display: flex; flex-direction: column;">
                                            <span style="font-weight: 600;">@solicitud.FechaRespuestaFormateada</span>
                                            @if (solicitud.FechaRespuesta.HasValue)
                                            {
                                                <small style="color: var(--charcoal); opacity: 0.7;">@solicitud.TiempoRespuesta</small>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" style="padding: 3rem; text-align: center; color: var(--charcoal); opacity: 0.7;">
                                    <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; display: block; color: var(--olive-green);"></i>
                                    <p style="margin: 0; font-size: 1.1rem;">No hay solicitudes de vacaciones registradas</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model != null && Model.Any())
            {
                <div style="padding: 1.5rem; background: var(--cream); border-top: 1px solid rgba(143, 142, 106, 0.1);">
                    <div style="color: var(--dark-green); font-size: 0.95rem;">
                        Total de solicitudes: <strong>@Model.Count</strong>
                    </div>
                </div>
            }
        </div>

        <!-- Información adicional -->
        <div style="margin-top: 2rem; background: var(--white); padding: 2rem; border-radius: 20px; box-shadow: var(--shadow-sm);" data-aos="fade-up">
            <h5 style="color: var(--dark-green); margin-bottom: 1rem; font-weight: 700; display: flex; align-items: center; gap: 0.7rem;">
                <i class="fas fa-info-circle" style="color: var(--olive-green);"></i> Notas Importantes
            </h5>
            <ul style="margin: 0; padding-left: 1.5rem; color: var(--charcoal); opacity: 0.7; line-height: 1.8;">
                <li>Los días de vacaciones se acumulan a razón de <strong>1 día por mes trabajado</strong>.</li>
                <li>Los días se calculan excluyendo los domingos (días laborables: lunes a sábado).</li>
                <li>El saldo de días disponibles se actualiza automáticamente al aprobar una solicitud.</li>
                <li>Las solicitudes rechazadas no afectan el saldo de días disponibles.</li>
            </ul>
        </div>
    </div>
</section>

<style>
    @@media print {
        .navbar, .footer, .scroll-to-top, .hero-leaves, .scroll-indicator, button {
            display: none !important;
        }

        .hero {
            min-height: auto !important;
            padding: 2rem 0 1rem !important;
        }

        section {
            padding: 1rem 0 !important;
        }

        body {
            background: white !important;
        }
    }
</style>

@section Scripts {
    <script>
        console.log('%c✓ Reporte de vacaciones cargado correctamente', 'color: #27ae60; font-weight: bold;');
    </script>
}