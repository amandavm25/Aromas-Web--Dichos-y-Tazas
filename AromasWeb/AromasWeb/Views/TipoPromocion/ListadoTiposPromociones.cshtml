@model List<AromasWeb.Abstracciones.ModeloUI.TipoPromocion>

@{
    ViewBag.Title = "Tipos de Promociones";
    var totalTipos = Model?.Count ?? 0;
    var totalActivos = Model?.Count(t => t.Estado) ?? 0;
    var totalInactivos = Model?.Count(t => !t.Estado) ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-list-alt"></i>
                Gestión de Tipos
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Tipos de Promociones
            </h1>
            <p class="hero-subtitle">
                Administra y organiza los tipos de promociones
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Tarjetas de resumen -->
        <div class="features-grid" style="margin-bottom: 3rem; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-list-alt"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalTipos</h3>
                <p style="margin: 0.5rem 0;">Total de Tipos</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalActivos</h3>
                <p style="margin: 0.5rem 0;">Tipos Activos</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-times-circle"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalInactivos</h3>
                <p style="margin: 0.5rem 0;">Tipos Inactivos</p>
            </div>
        </div>

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoTiposPromociones", "TipoPromocion")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre o descripción..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearTipoPromocion", "TipoPromocion")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Agregar Tipo</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> tipo(s) encontrado(s)
                </p>
            </div>
        }

        <!-- Tabla Principal -->
        <div class="admin-table-container">
            <div class="table-responsive">
                <table class="admin-table" id="laTablaDeTipos">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th style="text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int contador = 1;
                            foreach (var tipo in Model)
                            {
                                <tr>
                                    <td class="td-id">@contador</td>
                                    <td class="td-nombre">
                                        @tipo.Nombre
                                    </td>
                                    <td>@(tipo.Descripcion ?? "Sin descripción")</td>
                                    <td>
                                        @if (tipo.Estado)
                                        {
                                            <span class="badge-estado activo">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge-estado inactivo">Inactivo</span>
                                        }
                                    </td>
                                    <td style="text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn-table-action btn-table-edit"
                                                onclick="window.location.href='@Url.Action("EditarTipoPromocion", "TipoPromocion", new { id = tipo.IdTipoPromocion })'"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn-table-action btn-table-view btn-detalles-tipo"
                                                data-id="@tipo.IdTipoPromocion"
                                                data-nombre="@tipo.Nombre"
                                                data-descripcion="@(tipo.Descripcion ?? "")"
                                                data-estado="@tipo.EstadoTexto"
                                                data-cantidad="@tipo.CantidadPromociones"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesTipo"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                contador++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="admin-table-empty">
                                    <i class="fas fa-inbox"></i>
                                    <p>No se encontraron tipos de promociones</p>
                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                                    {
                                        <p class="empty-subtitle">Intenta con otros términos de búsqueda</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                </div>
                <div class="pagination-buttons">
                    <button id="btnAnterior" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </button>
                    <button id="btnSiguiente" class="pagination-btn">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>

    </div>
</section>

<partial name="_ModalDetallesTipoPromocion" />

@section Scripts {
    <script src="~/js/tipopromocion.js" asp-append-version="true"></script>
}