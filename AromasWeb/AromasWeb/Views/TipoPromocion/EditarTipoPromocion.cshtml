@model AromasWeb.Abstracciones.ModeloUI.TipoPromocion

@{
    ViewBag.Title = "Editar Tipo de Promoción";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar
                <span class="hero-title-accent">Tipo de Promoción</span>
            </h1>
            <p class="hero-subtitle">
                Modifica la información del tipo de promoción
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("EditarTipoPromocion", "TipoPromocion", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdTipoPromocion)

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Encabezado -->
                <div class="admin-form-header">
                    <i class="fas fa-list-alt"></i>
                    <h5>Información del Tipo de Promoción</h5>
                </div>

                <!-- Nombre -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-tag"></i>
                        Nombre del Tipo
                    </label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Descuento por Temporada" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-align-left"></i>
                        Descripción
                    </label>
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = "4", placeholder = "Describe las características de este tipo de promoción..." })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    <small class="admin-form-hint">
                        <i class="fas fa-info-circle"></i>
                        Máximo 300 caracteres
                    </small>
                </div>

                <!-- Estado -->
                <div class="form-group">
                    <label for="estadoCheckbox" style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; cursor: pointer;">
                        <input type="checkbox" name="Estado" id="estadoCheckbox" value="true"
                               class="form-check-input" style="width:20px;height:20px;flex-shrink:0;cursor:pointer;"
                               @(Model.Estado ? "checked" : "") />
                        <input type="hidden" name="Estado" value="false" />
                        <span style="flex: 1;">
                            <i class="fas fa-toggle-on"></i>
                            Estado del Tipo (Activo/Inactivo)
                        </span>
                    </label>
                    <small class="admin-form-hint">
                        <i class="fas fa-exclamation-triangle"></i>
                        Al desactivar un tipo, las promociones existentes no se verán afectadas
                    </small>
                </div>

                <!-- Botones -->
                <div class="admin-form-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoTiposPromociones", "TipoPromocion")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <span>Guardar Cambios</span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/tipopromocion.js" asp-append-version="true"></script>
}