@model List<AromasWeb.Abstracciones.ModeloUI.Receta>

@{
    ViewBag.Title = "Gestión de Recetas";
    var categorias = ViewBag.TodasCategorias as List<AromasWeb.Abstracciones.ModeloUI.CategoriaReceta> ?? new List<AromasWeb.Abstracciones.ModeloUI.CategoriaReceta>();
    var totalRecetas = Model?.Count ?? 0;
    var totalDisponibles = Model?.Count(r => r.Disponibilidad) ?? 0;
    var margenPromedio = totalRecetas > 0 ? Model.Average(r => r.PorcentajeMargen) : 0;
    var gananciaTotal = Model?.Sum(r => r.GananciaNeta) ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-tags"></i>
                Gestión de Recetas
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Libro de Recetas
            </h1>
            <p class="hero-subtitle">
                Administra las recetas de productos del menú
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Resumen de Recetas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalRecetas</h3>
                <p style="margin: 0.5rem 0;">Total de Recetas</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 id="totalDisponibles" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalDisponibles</h3>
                <p style="margin: 0.5rem 0;">Disponibles</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3 id="margenPromedio" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@margenPromedio.ToString("N2")%</h3>
                <p style="margin: 0.5rem 0;">Margen Promedio</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <h3 id="gananciaTotalPotencial" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@gananciaTotal.ToString("C2")</h3>
                <p style="margin: 0.5rem 0;">Ganancia Total Potencial</p>
            </div>
        </div>

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoRecetas", "Receta")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearReceta", "Receta")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Nueva Receta</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold);"></i>
                    Mostrando resultados para <strong style="color: var(--gold);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> receta(s) encontrada(s)
                </p>
            </div>
        }

        <!-- Filtro por categoría -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold);"></i> Filtrar por categoría:
                </span>
                <a href="@Url.Action("ListadoRecetas", "Receta")"
                   class="btn @(ViewBag.Categoria == null && string.IsNullOrWhiteSpace(ViewBag.Disponibilidad as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todas</span>
                </a>

                @foreach (var categoria in categorias)
                {
                    <a href="@Url.Action("ListadoRecetas", "Receta", new { categoria = categoria.IdCategoriaReceta })"
                       class="btn @(ViewBag.Categoria == categoria.IdCategoriaReceta ? "btn-primary" : "btn-secondary")"
                       style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span>@categoria.Nombre</span>
                    </a>
                }
            </div>
        </div>

        <!-- Filtro por disponibilidad -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-toggle-on" style="color: var(--gold);"></i> Disponibilidad:
                </span>
                <a href="@Url.Action("ListadoRecetas", "Receta", new { categoria = ViewBag.Categoria })"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.Disponibilidad as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todas</span>
                </a>
                <a href="@Url.Action("ListadoRecetas", "Receta", new { categoria = ViewBag.Categoria, disponibilidad = "disponible" })"
                   class="btn @(ViewBag.Disponibilidad == "disponible" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Disponibles</span>
                </a>
                <a href="@Url.Action("ListadoRecetas", "Receta", new { categoria = ViewBag.Categoria, disponibilidad = "no-disponible" })"
                   class="btn @(ViewBag.Disponibilidad == "no-disponible" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> No Disponibles</span>
                </a>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem; align-items: start;">
            <!-- Tabla de Recetas (Izquierda) -->
            <div class="admin-table-container">
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th style="padding: 1.2rem; text-align: left; font-weight: 600; white-space: nowrap;">Nombre</th>
                                <th style="padding: 1.2rem; text-align: left; font-weight: 600; white-space: nowrap;">Categoría</th>
                                <th style="padding: 1.2rem; text-align: center; font-weight: 600; white-space: nowrap;">Porciones</th>
                                <th style="padding: 1.2rem; text-align: right; font-weight: 600; white-space: nowrap;">Costo Total</th>
                                <th style="padding: 1.2rem; text-align: right; font-weight: 600; white-space: nowrap;">Precio Venta</th>
                                <th style="padding: 1.2rem; text-align: right; font-weight: 600; white-space: nowrap;">Ganancia</th>
                                <th style="padding: 1.2rem; text-align: right; font-weight: 600; white-space: nowrap;">Margen %</th>
                                <th style="padding: 1.2rem; text-align: center; font-weight: 600; white-space: nowrap;">Disponibilidad</th>
                                <th style="padding: 1.2rem; text-align: center; font-weight: 600; white-space: nowrap;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int contador = 1;
                                foreach (var receta in Model)
                                {
                                    <tr style="border-bottom: 1px solid var(--cream); transition: background 0.3s;">
                                        <td style="padding: 1.2rem; text-align: center;">
                                            <span style="color: var(--charcoal); font-weight: 600;">@contador</span>
                                        </td>
                                        <td style="padding: 1.2rem;">
                                            <strong style="color: var(--dark-green); font-size: 1rem;">@receta.Nombre</strong>
                                        </td>
                                        <td style="padding: 1.2rem;">
                                            <span style="background: var(--cream); color: var(--dark-green); padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                @receta.NombreCategoria
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center;">
                                            <span style="color: var(--charcoal);">@receta.CantidadPorciones</span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: right;">
                                            <span style="color: var(--gold); font-weight: 600;">@receta.CostoTotal</span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: right;">
                                            <span style="color: #28a745; font-weight: 600;">@receta.PrecioVenta</span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: right;">
                                            <span style="color: var(--olive-green); font-weight: 600;">@receta.GananciaNeta.ToString("C2")</span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: right;">
                                            @{
                                                var colorMargen = receta.PorcentajeMargen >= 50 ? "#28a745" : (receta.PorcentajeMargen >= 30 ? "#ffc107" : "#dc3545");
                                            }
                                            <span style="color: @colorMargen; font-weight: 700; font-size: 1.1rem;">@receta.PorcentajeMargen.ToString("N2")%</span>
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center;">
                                            @if (receta.Disponibilidad)
                                            {
                                                <span class="badge" style="background: #28a745; color: white; padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                    <i class="fas fa-check-circle"></i> Disponible
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge" style="background: #dc3545; color: white; padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                    <i class="fas fa-times-circle"></i> No disponible
                                                </span>
                                            }
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                            <button type="button"
                                                    class="btn btn-sm"
                                                    onclick="window.location.href='@Url.Action("EditarReceta", "Receta", new { id = receta.IdReceta })'"
                                                    style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn btn-sm btn-detalles-receta"
                                                    data-id="@receta.IdReceta"
                                                    data-nombre="@receta.Nombre"
                                                    data-categoria="@receta.NombreCategoria"
                                                    data-porciones="@receta.CantidadPorciones"
                                                    data-costo="@receta.CostoTotal.ToString("N2")"
                                                    data-precio="@receta.PrecioVenta"
                                                    data-ganancia="@receta.GananciaNeta.ToString("N2")"
                                                    data-margen="@receta.PorcentajeMargen"
                                                    style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetallesReceta"
                                                    title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    contador++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" style="padding: 3rem; text-align: center; color: var(--charcoal);">
                                        <i class="fas fa-inbox" style="font-size: 3rem; color: var(--olive-green); opacity: 0.5; margin-bottom: 1rem; display: block;"></i>
                                        <p style="margin: 0; font-size: 1.1rem;">No se encontraron recetas</p>
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || ViewBag.Categoria != null || !string.IsNullOrWhiteSpace(ViewBag.Disponibilidad as string))
                                        {
                                            <p style="margin: 0.5rem 0 0 0; opacity: 0.7;">Intenta con otros filtros o términos de búsqueda</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div class="admin-table-footer">
                    <div class="admin-table-footer-text">
                        Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                    </div>

                    <div class="pagination-buttons">
                        <button id="btnAnterior" class="pagination-btn">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </button>
                        <button id="btnSiguiente" class="pagination-btn">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Rentabilidad (Derecha) -->
            @if (Model != null && Model.Any())
            {
                <div style="position: sticky; top: 100px;">
                    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                        <!-- Top 3 Más Rentables -->
                        <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                            <div style="background: linear-gradient(135deg, #28a745 0%, #20873a 100%); color: white; padding: 1.5rem;">
                                <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                    <i class="fas fa-trophy" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Top 3 Más Rentables</h5>
                                        <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Mayor margen de ganancia</p>
                                    </div>
                                </div>
                            </div>
                            <div style="padding: 1rem; display: grid; gap: 0.7rem;">
                                @{
                                    var topRentables = Model.OrderByDescending(r => r.PorcentajeMargen).Take(3).ToList();
                                    var medallas = new[] { "#FFD700", "#C0C0C0", "#CD7F32" };
                                    for (int i = 0; i < topRentables.Count; i++)
                                    {
                                        var receta = topRentables[i];
                                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid @medallas[i];">
                                            <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
                                                <i class="fas fa-medal" style="color: @medallas[i]; font-size: 1.2rem;"></i>
                                                <strong style="color: var(--dark-green); font-size: 0.95rem;">@receta.Nombre</strong>
                                            </div>
                                            <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.85rem; color: var(--charcoal); margin-bottom: 0.5rem;">
                                                <span>@receta.NombreCategoria</span>
                                                <span style="font-weight: 600; color: #28a745; font-size: 1rem;">@receta.PorcentajeMargen.ToString("N2")%</span>
                                            </div>
                                            <div style="font-size: 0.85rem; color: var(--charcoal);">
                                                Ganancia: <strong style="color: var(--olive-green);">@receta.GananciaNeta.ToString("C2")</strong>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <!-- Alertas de Margen Bajo -->
                        <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                            <div style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white; padding: 1.5rem;">
                                <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                    <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Margen Bajo</h5>
                                        <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Requieren atención</p>
                                    </div>
                                </div>
                            </div>
                            <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 400px; overflow-y: auto;">
                                @{
                                    var margenBajo = Model.Where(r => r.PorcentajeMargen < 45).OrderBy(r => r.PorcentajeMargen).ToList();
                                    if (margenBajo.Any())
                                    {
                                        foreach (var receta in margenBajo)
                                        {
                                            var porcentajeObjetivo = (receta.PorcentajeMargen / 50 * 100);
                                            var colorBarra = receta.PorcentajeMargen < 30 ? "#dc3545" : "#ffc107";
                                            <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid #dc3545;">
                                                <div style="margin-bottom: 0.5rem;">
                                                    <strong style="color: var(--dark-green); font-size: 0.95rem;">@receta.Nombre</strong>
                                                </div>
                                                <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.85rem; color: var(--charcoal); margin-bottom: 0.5rem;">
                                                    <span>Margen: @receta.PorcentajeMargen.ToString("N2")%</span>
                                                    <span style="font-weight: 600; color: #dc3545;">Objetivo: 50%</span>
                                                </div>
                                                <div style="background: #f5f5f5; height: 6px; border-radius: 3px; overflow: hidden;">
                                                    <div style="width: @porcentajeObjetivo.ToString("N0")%; height: 100%; background: @colorBarra; transition: width 0.3s;"></div>
                                                </div>
                                                <div style="margin-top: 0.5rem; font-size: 0.85rem; color: var(--charcoal);">
                                                    Ganancia: <strong style="color: var(--gold);">@receta.GananciaNeta.ToString("C2")</strong>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div style="text-align: center; padding: 2rem; color: var(--charcoal);">
                                            <i class="fas fa-check-circle" style="font-size: 2rem; color: #27ae60; margin-bottom: 0.5rem; display: block;"></i>
                                            <p style="margin: 0;">Todas las recetas tienen buen margen</p>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<partial name="_ModalDetallesReceta" />
<partial name="_ModalEliminarReceta" />

@section Scripts {
    <script src="~/js/receta.js"></script>
}