@model List<AromasWeb.Abstracciones.ModeloUI.MovimientoInsumo>

@{
    ViewBag.Title = "Historial de Movimientos";
    
    // Calcular estadísticas
    var totalMovimientos = Model?.Count ?? 0;
    var totalEntradas = Model?.Count(m => m.TipoMovimiento == "E") ?? 0;
    var totalSalidas = Model?.Count(m => m.TipoMovimiento == "S") ?? 0;
    var valorEntradas = Model?.Where(m => m.TipoMovimiento == "E").Sum(m => m.ValorMovimiento) ?? 0;
    var promedioDiario = totalMovimientos / (DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month) > 0 ? 
        DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month) : 1);
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-history"></i>
                Registro Completo
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de Movimientos
            </h1>
            <p class="hero-subtitle">
                Consulta todos los movimientos de entradas y salidas de insumos
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Estadísticas Rápidas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-exchange-alt"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalMovimientos</h3>
                <p style="margin: 0.5rem 0;">Total Movimientos</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-calendar"></i> Este mes
                </small>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-arrow-down"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalEntradas</h3>
                <p style="margin: 0.5rem 0;">Entradas</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-dollar-sign"></i> @valorEntradas.ToString("C2") invertido
                </small>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-arrow-up"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalSalidas</h3>
                <p style="margin: 0.5rem 0;">Salidas</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-box"></i> Consumo en producción
                </small>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@promedioDiario.ToString("N1")</h3>
                <p style="margin: 0.5rem 0;">Promedio Diario</p>
                <small style="opacity: 0.7; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-chart-bar"></i> Movimientos por día
                </small>
            </div>
        </div>

        <!-- Filtros y Búsqueda -->
        <div class="contact-form-wrapper" style="margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("HistorialMovimientos", "MovimientoInsumo")">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 1.5rem;">
                    <div class="form-group">
                        <label>
                            <i class="fas fa-search"></i> Buscar por Insumo
                        </label>
                        <input type="text"
                               name="buscar"
                               value="@ViewBag.Buscar"
                               placeholder="Nombre del insumo..."
                               class="form-control">
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-filter"></i> Tipo de Movimiento
                        </label>
                        <select name="tipo" class="form-control">
                            <option value="">Todos los movimientos</option>
                            <option value="E" @@(ViewBag.Tipo == "E" ? "selected" : "")>Entradas</option>
                            <option value="S" @@(ViewBag.Tipo == "S" ? "selected" : "")>Salidas</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-calendar"></i> Fecha Desde
                        </label>
                        <input type="date" 
                               name="fechaDesde" 
                               value="@ViewBag.FechaDesde" 
                               class="form-control">
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-calendar"></i> Fecha Hasta
                        </label>
                        <input type="date" 
                               name="fechaHasta" 
                               value="@ViewBag.FechaHasta" 
                               class="form-control">
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                    <button type="submit" class="btn btn-primary btn-3d">
                        <span><i class="fas fa-search"></i> Aplicar Filtros</span>
                    </button>
                    <a href="@Url.Action("HistorialMovimientos", "MovimientoInsumo")" class="btn btn-secondary">
                        <span><i class="fas fa-times"></i> Limpiar</span>
                    </a>
                    <a href="@Url.Action("RegistrarEntrada", "MovimientoInsumo")" class="btn" style="background: #27ae60; color: white; border: none;">
                        <span><i class="fas fa-arrow-down"></i> Registrar Entrada</span>
                    </a>
                    <a href="@Url.Action("RegistrarSalida", "MovimientoInsumo")" class="btn" style="background: #e74c3c; color: white; border: none;">
                        <span><i class="fas fa-arrow-up"></i> Registrar Salida</span>
                    </a>
                </div>
            </form>
        </div>

        <!-- Información de filtros activos -->
        @if (!string.IsNullOrEmpty(ViewBag.Buscar as string) || !string.IsNullOrEmpty(ViewBag.Tipo as string) || 
             !string.IsNullOrEmpty(ViewBag.FechaDesde as string) || !string.IsNullOrEmpty(ViewBag.FechaHasta as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                    <i class="fas fa-filter" style="color: var(--gold);"></i>
                    <strong>Filtros activos:</strong>
                    @if (!string.IsNullOrEmpty(ViewBag.Buscar as string))
                    {
                        <span style="background: var(--cream); padding: 0.3rem 0.8rem; border-radius: 15px;">
                            Insumo: <strong>@ViewBag.Buscar</strong>
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.Tipo as string))
                    {
                        <span style="background: var(--cream); padding: 0.3rem 0.8rem; border-radius: 15px;">
                            Tipo: <strong>@(ViewBag.Tipo == "E" ? "Entradas" : "Salidas")</strong>
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.FechaDesde as string))
                    {
                        <span style="background: var(--cream); padding: 0.3rem 0.8rem; border-radius: 15px;">
                            Desde: <strong>@DateTime.Parse(ViewBag.FechaDesde).ToString("dd/MM/yyyy")</strong>
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.FechaHasta as string))
                    {
                        <span style="background: var(--cream); padding: 0.3rem 0.8rem; border-radius: 15px;">
                            Hasta: <strong>@DateTime.Parse(ViewBag.FechaHasta).ToString("dd/MM/yyyy")</strong>
                        </span>
                    }
                    - <strong>@totalMovimientos</strong> movimiento(s) encontrado(s)
                </p>
            </div>
        }

        <!-- Tabla de Historial -->
        <div class="admin-table-container">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha y Hora</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Insumo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tipo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Cantidad</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Unidad</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Valor Total</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Motivo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var mov in Model)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1); transition: all 0.3s;">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@mov.IdMovimiento</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">
                                        <div style="display: flex; flex-direction: column;">
                                            <span style="font-weight: 600; color: var(--dark-green);">@mov.SoloFecha</span>
                                            <span style="font-size: 0.85rem; color: var(--charcoal); opacity: 0.7;">@mov.SoloHora</span>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 500;">@mov.NombreInsumo</td>
                                    <td style="padding: 1.2rem;">
                                        <span style="background: @mov.ColorMovimiento; color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                            <i class="fas @mov.IconoMovimiento"></i> @mov.TipoMovimientoTexto
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: @mov.ColorMovimiento; font-weight: 700; font-size: 1.1rem;">
                                        @mov.SimboloMovimiento@mov.Cantidad.ToString("N2")
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@mov.UnidadMedida</td>
                                    <td style="padding: 1.2rem; color: var(--gold); font-weight: 600;">
                                        @if (mov.EsEntrada)
                                        {
                                            <span>@mov.ValorMovimiento.ToString("C2")</span>
                                        }
                                        else
                                        {
                                            <span style="opacity: 0.5;">-</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); max-width: 300px;">@mov.Motivo</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" style="padding: 3rem; text-align: center; color: var(--charcoal); opacity: 0.7;">
                                    <i class="fas fa-inbox" style="font-size: 3rem; display: block; margin-bottom: 1rem; color: var(--gold-bright);"></i>
                                    <p style="font-size: 1.1rem; margin: 0;">
                                        @if (!string.IsNullOrEmpty(ViewBag.Buscar as string) || !string.IsNullOrEmpty(ViewBag.Tipo as string))
                                        {
                                            <span>No se encontraron movimientos con los filtros aplicados</span>
                                        }
                                        else
                                        {
                                            <span>No hay movimientos registrados</span>
                                        }
                                    </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                </div>

                <div class="pagination-buttons">
                    <button id="btnAnterior" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </button>
                    <button id="btnSiguiente" class="pagination-btn">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/insumo.js"></script>
}