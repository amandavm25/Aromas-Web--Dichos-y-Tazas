@model List<AromasWeb.Abstracciones.ModeloUI.Asistencia>

@{
    ViewBag.Title = "Gestión de Asistencia";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-clock"></i>
                Control de Asistencia
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Registro de Asistencias
            </h1>
            <p class="hero-subtitle">
                Control de entradas y salidas del personal
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoAsistencias", "Asistencia")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por empleado, identificación o cargo..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("RegistrarEntrada", "Asistencia")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-sign-in-alt"></i> Registrar Entrada</span>
                </a>
            </div>
        </div>

        <!-- Filtros de fecha -->
        <div style="margin-bottom: 2rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoAsistencias", "Asistencia")" style="display: contents;">
                <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                    <span style="color: var(--dark-green); font-weight: 600; font-family: var(--font-primary);">
                        <i class="fas fa-calendar-alt" style="color: var(--gold);"></i> Rango de fechas:
                    </span>

                    <div style="position: relative; flex: 1; min-width: 200px; max-width: 300px;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="date"
                               name="fechaInicio"
                               value="@ViewBag.FechaInicio"
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white);">
                    </div>

                    <span style="color: var(--dark-green);">→</span>

                    <div style="position: relative; flex: 1; min-width: 200px; max-width: 300px;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="date"
                               name="fechaFin"
                               value="@ViewBag.FechaFin"
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white);">
                    </div>
                </div>
            </form>
        </div>

        <!-- Filtros de estado -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoAsistencias", "Asistencia")" style="display: contents;">
                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                    <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                        <i class="fas fa-filter" style="color: var(--gold);"></i> Filtrar:
                    </span>
                    <button type="submit" name="filtroEstado" value="" class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span><i class="fas fa-th"></i> Todos</span>
                    </button>
                    <button type="submit" name="filtroEstado" value="completo" class="btn @(ViewBag.FiltroEstado == "completo" ? "btn-primary" : "btn-secondary")" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span><i class="fas fa-check-circle"></i> Completos</span>
                    </button>
                    <button type="submit" name="filtroEstado" value="encurso" class="btn @(ViewBag.FiltroEstado == "encurso" ? "btn-primary" : "btn-secondary")" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span><i class="fas fa-clock"></i> En Curso</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- Layout Principal: Tabla + Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDeAsistencias" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Entrada</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Salida</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Almuerzo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Horas</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asistencia in Model)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@asistencia.IdAsistencia</td>
                                    <td style="padding: 1.2rem; color: var(--dark-green);">
                                        <div>
                                            <strong style="display: block;">@asistencia.NombreEmpleado</strong>
                                            <small style="color: var(--charcoal); opacity: 0.7;">@asistencia.CargoEmpleado</small>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">
                                        <div>
                                            <strong style="display: block;">@asistencia.FechaFormateada</strong>
                                            <small style="color: var(--charcoal); opacity: 0.7;">@asistencia.DiaSemana</small>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">@asistencia.HoraEntradaFormateada</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">
                                        @if (asistencia.HoraSalida.HasValue)
                                        {
                                            <span>@asistencia.HoraSalidaFormateada</span>
                                        }
                                        else
                                        {
                                            <span style="color: var(--gold); font-style: italic;">Pendiente</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); opacity: 0.7; font-size: 0.9rem;">@asistencia.TiempoAlmuerzoFormateado</td>
                                    <td style="padding: 1.2rem;">
                                        <div style="display: flex; flex-direction: column;">
                                            <strong style="color: var(--dark-green);">@asistencia.HorasTrabajadasTexto</strong>
                                            @if (asistencia.HoraSalida.HasValue)
                                            {
                                                <small style="color: var(--charcoal); opacity: 0.7; font-size: 0.75rem;">@asistencia.DesgloseHoras</small>
                                                @if (asistencia.TieneHorasExtras)
                                                {
                                                    <span style="background: var(--gold); color: white; padding: 0.2rem 0.5rem; border-radius: 10px; font-size: 0.7rem; margin-top: 0.3rem; display: inline-block; width: fit-content;">
                                                        <i class="fas fa-star"></i> Extras
                                                    </span>
                                                }
                                            }
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        @if (asistencia.HoraSalida.HasValue)
                                        {
                                            <span style="background: #27ae60; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">Completo</span>
                                        }
                                        else
                                        {
                                            <span style="background: var(--gold); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">En curso</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        @if (!asistencia.HoraSalida.HasValue)
                                        {
                                            <button type="button"
                                                    class="btn btn-sm"
                                                    onclick="window.location.href='@Url.Action("RegistrarSalida", "Asistencia", new { id = asistencia.IdAsistencia })'"
                                                    style="background: #27ae60; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    title="Registrar Salida">
                                                <i class="fas fa-sign-out-alt"></i>
                                            </button>
                                        }
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarAsistencia", "Asistencia", new { id = asistencia.IdAsistencia })'"
                                                style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-detalles"
                                                data-id="@asistencia.IdAsistencia"
                                                data-nombre="@asistencia.NombreEmpleado"
                                                data-identificacion="@asistencia.IdentificacionEmpleado"
                                                data-cargo="@asistencia.CargoEmpleado"
                                                data-fecha="@asistencia.FechaFormateada"
                                                data-dia="@asistencia.DiaSemana"
                                                data-entrada="@asistencia.HoraEntradaFormateada"
                                                data-salida="@asistencia.HoraSalidaFormateada"
                                                data-almuerzo="@asistencia.TiempoAlmuerzoFormateado"
                                                data-horastotales="@asistencia.HorasTrabajadasTexto"
                                                data-horasregulares="@asistencia.HorasRegulares.ToString("F2")"
                                                data-horasextras="@asistencia.HorasExtras.ToString("F2")"
                                                data-estado="@asistencia.EstadoRegistro"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesAsistencia"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-eliminar"
                                                data-id="@asistencia.IdAsistencia"
                                                data-nombre="@asistencia.NombreEmpleado"
                                                data-fecha="@asistencia.FechaFormateada"
                                                data-entrada="@asistencia.HoraEntradaFormateada"
                                                data-salida="@asistencia.HoraSalidaFormateada"
                                                style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEliminarAsistencia"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-green); font-size: 0.95rem;">
                        Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">@Model.Count</span></strong> de <strong id="totalRecords">@Model.Count</strong> registros
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Estadísticas (Derecha) -->
            <div style="position: sticky; top: 100px;">
                <!-- Horas Extras -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, var(--gold) 0%, var(--gold-bright) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-star" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Horas Extras Hoy</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Empleados destacados</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 300px; overflow-y: auto;">
                        @foreach (var asistencia in Model.Where(a => a.TieneHorasExtras && a.Fecha.Date == DateTime.Now.Date))
                        {
                            <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                                <strong style="color: var(--dark-green); font-size: 0.95rem; display: flex; align-items: center; gap: 0.5rem;">
                                    <i class="fas fa-user" style="color: var(--gold);"></i>
                                    @asistencia.NombreEmpleado
                                </strong>
                                <small style="color: var(--charcoal); opacity: 0.7; display: block; margin-top: 0.3rem;">
                                    @asistencia.HorasExtras.ToString("F2")h extras - @asistencia.CargoEmpleado
                                </small>
                            </div>
                        }
                        @if (!Model.Any(a => a.TieneHorasExtras && a.Fecha.Date == DateTime.Now.Date))
                        {
                            <div style="text-align: center; padding: 2rem; color: var(--charcoal); opacity: 0.7;">
                                <i class="fas fa-info-circle" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.5;"></i>
                                <p style="margin: 0;">No hay horas extras registradas hoy</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesAsistencia" />
<partial name="_ModalEliminarAsistencia" />

@section Scripts {
    <script src="~/js/asistencia.js"></script>
}