@model List<AromasWeb.Abstracciones.ModeloUI.Asistencia>

@{
    ViewBag.Title = "Gestión de Asistencia";
    var totalAsistencias = Model?.Count ?? 0;
    var horasTotales = Model?.Sum(a => a.HorasTotales) ?? 0;
    var horasExtras = Model?.Sum(a => a.HorasExtras) ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-clock"></i>
                Control de Asistencia
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Registro de Asistencias
            </h1>
            <p class="hero-subtitle">
                Control de entradas y salidas del personal
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Resumen de Asistencias -->
        <div class="features-grid" style="margin-bottom: 3rem; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalAsistencias</h3>
                <p style="margin: 0.5rem 0;">Total Registros</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@horasTotales.ToString("N2")</h3>
                <p style="margin: 0.5rem 0;">Horas Trabajadas</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@horasExtras.ToString("N2")</h3>
                <p style="margin: 0.5rem 0;">Horas Extras</p>
            </div>
        </div>

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoAsistencias", "Asistencia")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por empleado, identificación o cargo..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("RegistrarEntrada", "Asistencia")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-sign-in-alt"></i> Registrar Entrada</span>
                </a>
            </div>
        </div>

        <!-- Filtros de fecha -->
        <div style="margin-bottom: 2rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoAsistencias", "Asistencia")" style="display: contents;">
                <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                    <span style="color: var(--dark-green); font-weight: 600; font-family: var(--font-primary);">
                        <i class="fas fa-calendar-alt" style="color: var(--gold);"></i> Rango de fechas:
                    </span>

                    <div style="position: relative; flex: 1; min-width: 200px; max-width: 300px;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="date"
                               name="fechaInicio"
                               value="@ViewBag.FechaInicio"
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white);">
                    </div>

                    <span style="color: var(--dark-green);">→</span>

                    <div style="position: relative; flex: 1; min-width: 200px; max-width: 300px;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="date"
                               name="fechaFin"
                               value="@ViewBag.FechaFin"
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white);">
                    </div>

                    <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0.75rem 2rem;">
                        <span><i class="fas fa-filter"></i> Filtrar</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || !string.IsNullOrWhiteSpace(ViewBag.FechaInicio as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                    {
                        <span>Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong></span>
                    }
                    @if (!string.IsNullOrWhiteSpace(ViewBag.FechaInicio as string) && !string.IsNullOrWhiteSpace(ViewBag.FechaFin as string))
                    {
                        <span>- Rango: <strong style="color: var(--gold-bright);">@ViewBag.FechaInicio al @ViewBag.FechaFin</strong></span>
                    }
                    - <strong>@(Model?.Count ?? 0)</strong> asistencia(s) encontrada(s)
                </p>
            </div>
        }

        <!-- Tabla Principal -->
        <div class="admin-table-container">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Entrada</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Salida</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Almuerzo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Horas</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var asistencia in Model)
                            {
                                var estado = asistencia.HoraSalida.HasValue ? "Completo" : "Pendiente";
                                var estadoColor = estado == "Completo" ? "#27ae60" : "var(--gold-bright)";
                                var diaSemana = asistencia.Fecha.ToString("dddd", new System.Globalization.CultureInfo("es-ES"));

                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1); transition: background 0.3s;">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600;">@asistencia.IdAsistencia</td>
                                    <td style="padding: 1.2rem;">
                                        <strong style="color: var(--dark-green); font-size: 1rem; display: block;">@asistencia.NombreEmpleado</strong>
                                        <small style="color: var(--charcoal); opacity: 0.7;">@asistencia.CargoEmpleado</small>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span style="color: var(--dark-green); font-weight: 600;">@asistencia.Fecha.ToString("dd/MM/yyyy")</span>
                                        <br />
                                        <small style="color: var(--charcoal); opacity: 0.7;">@diaSemana</small>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">@asistencia.HoraEntrada.ToString(@"hh\:mm")</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">
                                        @if (asistencia.HoraSalida.HasValue)
                                        {
                                            @asistencia.HoraSalida.Value.ToString(@"hh\:mm")
                                        }
                                        else
                                        {
                                            <span style="color: var(--gold-bright);">-</span>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal);">@asistencia.TiempoAlmuerzo min</td>
                                    <td style="padding: 1.2rem;">
                                        <span style="color: var(--olive-green); font-weight: 700;">@asistencia.HorasTotales.ToString("F2")h</span>
                                        @if (asistencia.HorasExtras > 0)
                                        {
                                            <br />
                                            <small style="color: var(--gold-bright); font-weight: 600;">+@asistencia.HorasExtras.ToString("F2")h extras</small>
                                        }
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span class="badge" style="background: @estadoColor; color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;">
                                            @estado
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        @if (!asistencia.HoraSalida.HasValue)
                                        {
                                            <button type="button"
                                                    class="btn btn-sm"
                                                    onclick="window.location.href='@Url.Action("RegistrarSalida", "Asistencia", new { id = asistencia.IdAsistencia })'"
                                                    style="background: var(--gold); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    title="Registrar Salida">
                                                <i class="fas fa-sign-out-alt"></i>
                                            </button>
                                        }
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarAsistencia", "Asistencia", new { id = asistencia.IdAsistencia })'"
                                                style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-detalles-asistencia"
                                                data-nombre="@asistencia.NombreEmpleado"
                                                data-identificacion="@asistencia.IdentificacionEmpleado"
                                                data-cargo="@asistencia.CargoEmpleado"
                                                data-fecha="@asistencia.Fecha.ToString("dd/MM/yyyy")"
                                                data-dia="@diaSemana"
                                                data-entrada="@asistencia.HoraEntrada.ToString(@"hh\:mm")"
                                                data-salida="@(asistencia.HoraSalida.HasValue? asistencia.HoraSalida.Value.ToString(@"hh\:mm") : "Pendiente")"
                                                data-almuerzo="@asistencia.TiempoAlmuerzo minutos"
                                                data-horastotales="@asistencia.HorasTotales.ToString("F2") horas"
                                                data-horasregulares="@asistencia.HorasRegulares.ToString("F2")"
                                                data-horasextras="@asistencia.HorasExtras.ToString("F2")"
                                                data-estado="@estado"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesAsistencia"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-eliminar-asistencia"
                                                data-id="@asistencia.IdAsistencia"
                                                data-nombre="@asistencia.NombreEmpleado"
                                                data-fecha="@asistencia.Fecha.ToString("dd/MM/yyyy")"
                                                data-entrada="@asistencia.HoraEntrada.ToString(@"hh\:mm")"
                                                data-salida="@(asistencia.HoraSalida.HasValue? asistencia.HoraSalida.Value.ToString(@"hh\:mm") : "Pendiente")"
                                                style="background: #e74c3c; color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEliminarAsistencia"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" style="padding: 3rem; text-align: center; color: var(--charcoal);">
                                    <i class="fas fa-inbox" style="font-size: 3rem; color: var(--olive-green); opacity: 0.5; margin-bottom: 1rem; display: block;"></i>
                                    <p style="margin: 0; font-size: 1.1rem;">No se encontraron registros de asistencia</p>
                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || !string.IsNullOrWhiteSpace(ViewBag.FechaInicio as string))
                                    {
                                        <p style="margin: 0.5rem 0 0 0; opacity: 0.7;">Intenta con otros filtros o términos de búsqueda</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong>@(Model?.Count ?? 0)</strong> registro(s) de asistencia
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesAsistencia" />
<partial name="_ModalEliminarAsistencia" />

@section Scripts {
    <script src="~/js/asistencia.js"></script>
}