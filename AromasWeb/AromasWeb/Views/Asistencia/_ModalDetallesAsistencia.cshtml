<div class="modal fade" id="modalDetallesAsistencia" tabindex="-1" aria-labelledby="modalDetallesAsistenciaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 25px; overflow: hidden; box-shadow: var(--shadow-xl);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); color: var(--white); border: none; padding: 2rem;">
                <h5 class="modal-title" id="modalDetallesAsistenciaLabel" style="font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.5rem;">
                    <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-clock"></i>
                    </div>
                    Detalles de Asistencia
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="opacity: 1;"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2.5rem; background: var(--cream);">
                <!-- Información del Empleado -->
                <div style="background: var(--white); padding: 1.5rem; border-radius: 20px; margin-bottom: 2rem; box-shadow: var(--shadow-sm); border-left: 5px solid var(--teal); display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <h5 id="detalles-nombre-empleado" style="color: var(--dark-teal); margin: 0; font-size: 1.6rem; font-family: var(--font-primary); font-weight: 700;"></h5>
                        <p style="margin: 0.5rem 0 0; color: var(--gray); display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-id-card"></i>
                            <span id="detalles-identificacion-empleado"></span>
                        </p>
                        <p style="margin: 0.5rem 0 0; color: var(--coral); font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-briefcase"></i>
                            <span id="detalles-cargo-empleado"></span>
                        </p>
                    </div>
                    <div style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--teal), var(--dark-teal)); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-md);">
                        <i class="fas fa-user-clock" style="font-size: 2rem; color: white;"></i>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <!-- Columna Izquierda -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- ID -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hashtag" style="color: var(--teal); font-size: 1.1rem;"></i> ID de Registro
                            </label>
                            <p id="detalles-id-asistencia" style="color: var(--dark-teal); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Fecha -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar-day" style="color: var(--teal); font-size: 1.1rem;"></i> Fecha
                            </label>
                            <p id="detalles-fecha-asistencia" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 700; margin: 0;"></p>
                            <small id="detalles-dia-asistencia" style="color: var(--gray); margin-top: 0.3rem; display: block;"></small>
                        </div>

                        <!-- Hora de Entrada -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-sign-in-alt" style="color: var(--teal); font-size: 1.1rem;"></i> Hora de Entrada
                            </label>
                            <p id="detalles-entrada-asistencia" style="color: var(--dark-teal); font-size: 1.5rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Hora de Salida -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-sign-out-alt" style="color: var(--teal); font-size: 1.1rem;"></i> Hora de Salida
                            </label>
                            <p id="detalles-salida-asistencia" style="color: var(--dark-teal); font-size: 1.5rem; font-weight: 700; margin: 0;"></p>
                        </div>
                    </div>

                    <!-- Columna Derecha -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- Tiempo de Almuerzo -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-utensils" style="color: var(--teal); font-size: 1.1rem;"></i> Tiempo de Almuerzo
                            </label>
                            <p id="detalles-almuerzo-asistencia" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Horas Totales -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0; background: linear-gradient(135deg, rgba(32, 116, 118, 0.1), rgba(32, 116, 118, 0.05));">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hourglass-half" style="color: var(--teal); font-size: 1.1rem;"></i> Horas Totales Trabajadas
                            </label>
                            <p id="detalles-horastotales-asistencia" style="color: var(--teal); font-size: 1.8rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Horas Regulares -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-clock" style="color: var(--teal); font-size: 1.1rem;"></i> Horas Regulares
                            </label>
                            <p id="detalles-horasregulares-asistencia" style="color: var(--dark-teal); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Horas Extras -->
                        <div id="detalles-horasextras-section" class="feature-card" style="padding: 1.5rem; margin: 0; background: linear-gradient(135deg, rgba(231, 164, 51, 0.1), rgba(224, 110, 73, 0.05)); border-left: 3px solid var(--amber);">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--amber); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-star" style="font-size: 1.1rem;"></i> Horas Extras
                            </label>
                            <p id="detalles-horasextras-asistencia" style="color: var(--amber); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Estado -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-info-circle" style="color: var(--teal); font-size: 1.1rem;"></i> Estado
                            </label>
                            <span id="detalles-estado-badge-asistencia" class="badge" style="font-size: 1rem; padding: 0.6rem 1.5rem; border-radius: 50px; display: inline-block; font-weight: 600;"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--white); border: none; padding: 1.5rem 2.5rem;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 0.9rem 2.5rem; border-radius: 50px;">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>