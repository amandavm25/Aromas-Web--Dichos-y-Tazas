@model List<AromasWeb.Abstracciones.ModeloUI.Asistencia>

@{
    ViewBag.Title = "Mi Historial de Asistencias";
    var empleado = ViewBag.Empleado as AromasWeb.Abstracciones.ModeloUI.Empleado;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-clock"></i>
                Mi Control de Asistencias
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Hola, <span class="hero-title-accent">
                    @(empleado != null ? $"{empleado.Nombre} {empleado.Apellidos}" : "Empleado")
                </span>
            </h1>
            <p class="hero-subtitle">
                Consulta tu historial de entradas y salidas
            </p>

            <!-- Info rápida del empleado -->
            <div style="display: flex; justify-content: center; gap: 3rem; flex-wrap: wrap; margin-top: 2rem; margin-bottom: 3rem; color: var(--charcoal);">
                <div>
                    <i class="fas fa-briefcase" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@empleado.Cargo</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Puesto Actual</span>
                </div>
                <div>
                    <i class="fas fa-calendar-alt" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@empleado.AnosTrabajados</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Tiempo en la Empresa</span>
                </div>
                <div>
                    <i class="fas fa-id-card" style="font-size: 1.5rem; margin-bottom: 0.5rem; display: block; opacity: 0.9;"></i>
                    <strong style="display: block; font-size: 1.1rem;">@empleado.Identificacion</strong>
                    <span style="font-size: 0.9rem; opacity: 0.8;">Identificación</span>
                </div>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1200px;">

        <!-- Botones de Acción Rápida -->
        <div style="display: flex; gap: 1.5rem; margin-bottom: 3rem; flex-wrap: wrap;" data-aos="fade-up">
            <a href="@Url.Action("MiEntrada", "Asistencia")" class="btn btn-primary btn-3d" style="flex: 1; min-width: 250px; padding: 1.5rem;">
                <i class="fas fa-sign-in-alt"></i>
                <span>Registrar Mi Entrada</span>
            </a>
            <a href="@Url.Action("MiSalida", "Asistencia")" class="btn btn-secondary btn-3d" style="flex: 1; min-width: 250px; padding: 1.5rem;">
                <i class="fas fa-sign-out-alt"></i>
                <span>Registrar Mi Salida</span>
            </a>
        </div>

        <!-- Filtros de Fecha -->
        <div class="feature-card" style="margin-bottom: 3rem; padding: 2rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("MiHistorialAsistencias", "Asistencia")" style="display: flex; gap: 1rem; align-items: end; flex-wrap: wrap;">
                <div class="form-group" style="flex: 1; min-width: 200px; margin: 0;">
                    <label style="color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-calendar-alt"></i>
                        Fecha Inicio
                    </label>
                    <input type="date" name="fechaInicio" value="@ViewBag.FechaInicio" class="form-control" />
                </div>
                <div class="form-group" style="flex: 1; min-width: 200px; margin: 0;">
                    <label style="color: var(--dark-green); font-weight: 600; margin-bottom: 0.5rem; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-calendar-alt"></i>
                        Fecha Fin
                    </label>
                    <input type="date" name="fechaFin" value="@ViewBag.FechaFin" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary" style="margin: 0;">
                    <i class="fas fa-search"></i> Filtrar
                </button>
            </form>
        </div>

        <!-- Estadísticas del Período -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@Model.Count</h3>
                <p style="margin: 0.5rem 0;">Días Trabajados</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @{
                        var totalHoras = Model.Sum(a => a.HorasRegulares + a.HorasExtras);
                    }
                    @totalHoras.ToString("N1")h
                </h3>
                <p style="margin: 0.5rem 0;">Horas Totales</p>
            </div>
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-business-time"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @{
                        var totalExtras = Model.Sum(a => a.HorasExtras);
                    }
                    @totalExtras.ToString("N1")h
                </h3>
                <p style="margin: 0.5rem 0;">Horas Extra</p>
            </div>
        </div>

        <!-- Timeline de Mi Historial -->
        <div class="timeline-container" data-aos="fade-up">
            @if (Model != null && Model.Any())
            {
                <div class="timeline-header">
                    <h2>
                        <i class="fas fa-history" style="color: var(--gold);"></i>
                        Mi Historial de Asistencias
                    </h2>
                    <p>Visualiza el detalle de tus registros de asistencia</p>
                </div>

                <div id="historial-timeline">
                    @foreach (var asistencia in Model.OrderByDescending(a => a.Fecha))
                    {
                        var diaSemana = asistencia.Fecha.ToString("dddd", new System.Globalization.CultureInfo("es-ES"));
                        var tieneSalida = asistencia.HoraSalida.HasValue;
                        var estadoClass = tieneSalida ? "complete" : "in-progress";

                        <div class="timeline-card">
                            <!-- Contenido del card -->
                            <div class="timeline-card-content">
                                <div class="timeline-card-header">
                                    <!-- Fecha y día -->
                                    <div>
                                        <div class="timeline-date-wrapper">
                                            <div class="timeline-date-badge">
                                                <div class="timeline-date-day">
                                                    @asistencia.Fecha.ToString("dd")
                                                </div>
                                                <div class="timeline-date-month">
                                                    @asistencia.Fecha.ToString("MMM", new System.Globalization.CultureInfo("es-ES"))
                                                </div>
                                            </div>
                                            <div class="timeline-date-info">
                                                <h3>@diaSemana</h3>
                                                <p>@asistencia.Fecha.ToString("dd/MM/yyyy")</p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Estado -->
                                    <div style="text-align: right;">
                                        <span class="timeline-status-badge @estadoClass">
                                            @if (tieneSalida)
                                            {
                                                <i class="fas fa-check-circle"></i>
                                                <span>Completo</span>
                                            }
                                            else
                                            {
                                                <i class="fas fa-hourglass-half"></i>
                                                <span>En curso</span>
                                            }
                                        </span>
                                    </div>
                                </div>

                                <!-- Detalles de Horario -->
                                <div class="timeline-details-grid">
                                    <div class="timeline-detail-item">
                                        <label class="timeline-detail-label">
                                            <i class="fas fa-sign-in-alt" style="color: var(--olive-green);"></i> Entrada
                                        </label>
                                        <p class="timeline-detail-value">
                                            @asistencia.HoraEntrada.ToString(@"hh\:mm")
                                        </p>
                                    </div>

                                    @if (tieneSalida)
                                    {
                                        <div class="timeline-detail-item">
                                            <label class="timeline-detail-label">
                                                <i class="fas fa-sign-out-alt" style="color: var(--gold);"></i> Salida
                                            </label>
                                            <p class="timeline-detail-value">
                                                @asistencia.HoraSalida?.ToString(@"hh\:mm")
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="timeline-detail-item pending">
                                            <label class="timeline-detail-label">
                                                <i class="fas fa-sign-out-alt" style="color: var(--gold);"></i> Salida
                                            </label>
                                            <p class="timeline-detail-value pending">
                                                Pendiente
                                            </p>
                                        </div>
                                    }

                                    <div class="timeline-detail-item">
                                        <label class="timeline-detail-label">
                                            <i class="fas fa-utensils" style="color: var(--gold-bright);"></i> Almuerzo
                                        </label>
                                        <p class="timeline-detail-value">
                                            @asistencia.TiempoAlmuerzo min
                                        </p>
                                    </div>
                                </div>

                                @if (tieneSalida)
                                {
                                    <!-- Estadísticas de Horas -->
                                    <div class="timeline-stats">
                                        <div class="timeline-stats-grid">
                                            <div class="timeline-stat-item">
                                                <p class="timeline-stat-label">
                                                    <i class="fas fa-clock"></i> Horas Regulares
                                                </p>
                                                <strong class="timeline-stat-value">
                                                    @asistencia.HorasRegulares.ToString("N2")h
                                                </strong>
                                            </div>
                                            <div class="timeline-stat-item">
                                                <p class="timeline-stat-label">
                                                    <i class="fas fa-business-time"></i> Horas Extra
                                                </p>
                                                <strong class="timeline-stat-value extra">
                                                    @asistencia.HorasExtras.ToString("N2")h
                                                </strong>
                                            </div>
                                            <div class="timeline-stat-item">
                                                <p class="timeline-stat-label">
                                                    <i class="fas fa-hourglass-half"></i> Horas Totales
                                                </p>
                                                <strong class="timeline-stat-value total">
                                                    @asistencia.HorasTotales.ToString("N2")h
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="timeline-info-message">
                                        <p>
                                            <i class="fas fa-info-circle" style="color: var(--gold);"></i>
                                            <span>Esta jornada está en progreso. Registra tu salida para calcular las horas trabajadas.</span>
                                        </p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Footer de paginación de cards -->
                <div class="timeline-pagination-footer">
                    <div class="timeline-pagination-info">
                        Mostrando <strong id="startCard">0</strong> - <strong id="endCard">0</strong> de <strong id="totalCards">0</strong> registros
                    </div>
                    <div class="timeline-pagination-buttons">
                        <button id="btnAnteriorCards" class="timeline-pagination-btn">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </button>
                        <button id="btnSiguienteCards" class="timeline-pagination-btn">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="feature-card timeline-empty">
                    <i class="fas fa-calendar-times"></i>
                    <h5>No hay registros de asistencia</h5>
                    <p>
                        Aún no tienes registros de asistencia en el período seleccionado.
                    </p>
                    <a href="@Url.Action("MiEntrada", "Asistencia")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Registrar Mi Primera Entrada
                    </a>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/asistencia.js"></script>
}