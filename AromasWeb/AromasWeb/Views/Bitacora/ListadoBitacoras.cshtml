@model List<AromasWeb.Abstracciones.ModeloUI.Bitacora>

@{
    ViewBag.Title = "Gestión de Bitácora";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-history"></i>
                Registro de Auditoría
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Bitácora del Sistema
            </h1>
            <p class="hero-subtitle">
                Consulta el historial de acciones realizadas en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoBitacoras", "Bitacora")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por empleado, módulo o acción..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>
        </div>

        <!-- Filtros -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoBitacoras", "Bitacora")" id="formFiltros">
                <input type="hidden" name="buscar" value="@ViewBag.Buscar" />
                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                    <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                        <i class="fas fa-filter" style="color: var(--gold);"></i> Filtrar:
                    </span>

                    <div style="position: relative;">
                        <i class="fas fa-th-large" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <select name="filtroModulo" style="border-radius: 50px; padding: 0.6rem 1.5rem 0.6rem 50px; font-size: 0.9rem; border: 2px solid var(--cream); background: var(--white); min-width: 180px; color: var(--dark-green); font-weight: 600;">
                            <option value="">Todos los módulos</option>
                            <option value="Empleados" @@(ViewBag.FiltroModulo == "Empleados" ? "selected" : "")>Empleados</option>
                            <option value="Roles" @@(ViewBag.FiltroModulo == "Roles" ? "selected" : "")>Roles</option>
                            <option value="Asistencia" @@(ViewBag.FiltroModulo == "Asistencia" ? "selected" : "")>Asistencia</option>
                            <option value="Planilla" @@(ViewBag.FiltroModulo == "Planilla" ? "selected" : "")>Planilla</option>
                            <option value="Vacaciones" @@(ViewBag.FiltroModulo == "Vacaciones" ? "selected" : "")>Vacaciones</option>
                            <option value="Insumos" @@(ViewBag.FiltroModulo == "Insumos" ? "selected" : "")>Insumos</option>
                            <option value="Recetas" @@(ViewBag.FiltroModulo == "Recetas" ? "selected" : "")>Recetas</option>
                            <option value="Promociones" @@(ViewBag.FiltroModulo == "Promociones" ? "selected" : "")>Promociones</option>
                        </select>
                    </div>

                    <div style="position: relative;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <input type="date"
                               name="fechaInicio"
                               value="@ViewBag.FechaInicio"
                               placeholder="Fecha inicio"
                               style="padding: 0.6rem 1.5rem 0.6rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 0.9rem; background: var(--white); color: var(--dark-green); font-weight: 600;">
                    </div>

                    <div style="position: relative;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                        <input type="date"
                               name="fechaFin"
                               value="@ViewBag.FechaFin"
                               placeholder="Fecha fin"
                               style="padding: 0.6rem 1.5rem 0.6rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 0.9rem; background: var(--white); color: var(--dark-green); font-weight: 600;">
                    </div>

                    <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span><i class="fas fa-filter"></i> Aplicar</span>
                    </button>

                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || !string.IsNullOrWhiteSpace(ViewBag.FiltroModulo as string) || !string.IsNullOrWhiteSpace(ViewBag.FechaInicio as string) || !string.IsNullOrWhiteSpace(ViewBag.FechaFin as string))
                    {
                        <a href="@Url.Action("ListadoBitacoras", "Bitacora")" class="btn btn-secondary" style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                            <span><i class="fas fa-times"></i> Limpiar</span>
                        </a>
                    }
                </div>
            </form>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || !string.IsNullOrWhiteSpace(ViewBag.FiltroModulo as string) || !string.IsNullOrWhiteSpace(ViewBag.FechaInicio as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                    {
                        <span>Buscando: <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong></span>
                    }
                    @if (!string.IsNullOrWhiteSpace(ViewBag.FiltroModulo as string))
                    {
                        <span> - Módulo: <strong style="color: var(--gold-bright);">@ViewBag.FiltroModulo</strong></span>
                    }
                    @if (!string.IsNullOrWhiteSpace(ViewBag.FechaInicio as string))
                    {
                        <span> - Desde: <strong style="color: var(--gold-bright);">@ViewBag.FechaInicio</strong></span>
                    }
                    @if (!string.IsNullOrWhiteSpace(ViewBag.FechaFin as string))
                    {
                        <span> - Hasta: <strong style="color: var(--gold-bright);">@ViewBag.FechaFin</strong></span>
                    }
                    <span> | <strong>@(Model?.Count ?? 0)</strong> registro(s) encontrado(s)</span>
                </p>
            </div>
        }

        <!-- Layout Principal: Tabla + Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDeBitacoras" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha y Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Módulo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Acción</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Descripción</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var bitacora in Model)
                                {
                                    <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                        <td style="padding: 1.2rem; color: var(--dark-green);">
                                            <div>
                                                <strong style="display: block;">@bitacora.Fecha.ToString("dd/MM/yyyy")</strong>
                                                <small style="color: var(--charcoal); opacity: 0.7;">@bitacora.Fecha.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td style="padding: 1.2rem; color: var(--dark-green);">
                                            <strong>@bitacora.NombreEmpleado</strong>
                                        </td>
                                        <td style="padding: 1.2rem;">
                                            <span style="background: var(--olive-green); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                                                @bitacora.NombreModulo
                                            </span>
                                        </td>
                                        <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">@bitacora.Accion</td>
                                        <td style="padding: 1.2rem; color: var(--charcoal); opacity: 0.85; max-width: 300px;">
                                            @(bitacora.Descripcion ?? "Sin descripción")
                                        </td>
                                        <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                            <button type="button"
                                                    class="btn btn-sm btn-detalles"
                                                    data-id="@bitacora.IdBitacora"
                                                    data-empleado="@bitacora.NombreEmpleado"
                                                    data-modulo="@bitacora.NombreModulo"
                                                    data-accion="@bitacora.Accion"
                                                    data-tabla="@(bitacora.TablaAfectada ?? "N/A")"
                                                    data-descripcion="@(bitacora.Descripcion ?? "Sin descripción")"
                                                    data-datos-anteriores="@(bitacora.DatosAnteriores ?? "")"
                                                    data-datos-nuevos="@(bitacora.DatosNuevos ?? "")"
                                                    data-fecha="@bitacora.FechaFormateada"
                                                    style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetallesBitacora"
                                                    title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" style="padding: 3rem; text-align: center; color: var(--charcoal);">
                                        <i class="fas fa-inbox" style="font-size: 3rem; color: var(--olive-green); opacity: 0.5; margin-bottom: 1rem; display: block;"></i>
                                        <p style="margin: 0; font-size: 1.1rem;">No se encontraron registros en la bitácora</p>
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || !string.IsNullOrWhiteSpace(ViewBag.FiltroModulo as string))
                                        {
                                            <p style="margin: 0.5rem 0 0 0; opacity: 0.7;">Intenta con otros criterios de búsqueda</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div class="admin-table-footer">
                    <div class="admin-table-footer-text">
                        Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                    </div>

                    <div class="pagination-buttons">
                        <button id="btnAnterior" class="pagination-btn">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </button>
                        <button id="btnSiguiente" class="pagination-btn">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Estadísticas (Derecha) -->
            <div style="position: sticky; top: 100px;">
                <!-- Resumen -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, var(--gold) 0%, var(--gold-bright) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-chart-pie" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Resumen de Actividad</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Estadísticas generales</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1.5rem; display: grid; gap: 1.2rem;">
                        <!-- Total Registros -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--olive-green);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-history" style="color: var(--olive-green);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">TOTAL REGISTROS</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">@(Model?.Count ?? 0)</strong>
                        </div>

                        <!-- Acciones Hoy -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-calendar-day" style="color: var(--gold);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">ACCIONES HOY</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">@(Model?.Count(b => b.Fecha.Date == DateTime.Now.Date) ?? 0)</strong>
                        </div>

                        <!-- Usuarios Activos -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--olive-green);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-users" style="color: var(--olive-green);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">EMPLEADOS ÚNICOS</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">@(Model?.Select(b => b.IdEmpleado).Distinct().Count() ?? 0)</strong>
                        </div>

                        <!-- Módulos Activos -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-th-large" style="color: var(--gold);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">MÓDULOS ACTIVOS</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">@(Model?.Select(b => b.IdModulo).Distinct().Count() ?? 0)</strong>
                        </div>
                    </div>
                </div>

                <!-- Últimas Acciones -->
                @if (Model != null && Model.Any())
                {
                    <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden; margin-top: 1.5rem;">
                        <div style="background: var(--olive-green); color: white; padding: 1rem 1.5rem;">
                            <h5 style="margin: 0; font-weight: 600; font-size: 1rem;">
                                <i class="fas fa-clock" style="margin-right: 0.5rem;"></i>
                                Acciones Recientes
                            </h5>
                        </div>
                        <div style="padding: 1rem; max-height: 300px; overflow-y: auto;">
                            @foreach (var bitacora in Model.Take(5))
                            {
                                <div style="padding: 0.8rem; border-bottom: 1px solid var(--cream); display: flex; align-items: center; gap: 0.8rem;">
                                    <div style="width: 40px; height: 40px; border-radius: 50%; background: var(--cream); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                        <i class="fas fa-history" style="color: var(--olive-green);"></i>
                                    </div>
                                    <div style="flex: 1; min-width: 0;">
                                        <div style="font-weight: 600; color: var(--dark-green); font-size: 0.85rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            @bitacora.Accion
                                        </div>
                                        <div style="font-size: 0.75rem; color: var(--charcoal); opacity: 0.7;">
                                            @bitacora.NombreEmpleado
                                        </div>
                                        <div style="font-size: 0.7rem; color: var(--charcoal); opacity: 0.6;">
                                            @bitacora.Fecha.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesBitacora" />

@section Scripts {
    <script src="~/js/bitacora.js"></script>
}