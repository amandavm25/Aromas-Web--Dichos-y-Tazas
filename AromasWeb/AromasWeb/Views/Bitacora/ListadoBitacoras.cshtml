@model List<AromasWeb.Abstracciones.ModeloUI.Bitacora>

@{
    ViewBag.Title = "Gestión de Bitácora";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-history"></i>
                Registro de Auditoría
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Bitácora del Sistema
            </h1>
            <p class="hero-subtitle">
                Consulta el historial de acciones realizadas en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y filtros -->
        <div style="background: var(--white); padding: 2rem; border-radius: 25px; box-shadow: var(--shadow-lg); margin-bottom: 3rem;" data-aos="fade-up">
            <form method="get" action="@Url.Action("ListadoBitacoras", "Bitacora")">
                <div style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 1rem; margin-bottom: 1.5rem;">
                    <!-- Búsqueda -->
                    <div style="position: relative;">
                        <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="text"
                               name="buscar"
                               value="@ViewBag.Buscar"
                               placeholder="Buscar por empleado, módulo o acción..."
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 15px; font-size: 1rem; background: var(--cream);">
                    </div>

                    <!-- Módulo -->
                    <div style="position: relative;">
                        <i class="fas fa-th-large" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <select name="filtroModulo"
                                style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 15px; font-size: 1rem; background: var(--cream);">
                            <option value="">Todos los módulos</option>
                            <option value="Empleados">Empleados</option>
                            <option value="Roles">Roles</option>
                            <option value="Asistencia">Asistencia</option>
                            <option value="Planilla">Planilla</option>
                            <option value="Vacaciones">Vacaciones</option>
                        </select>
                    </div>

                    <!-- Fecha Inicio -->
                    <div style="position: relative;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="date"
                               name="fechaInicio"
                               value="@ViewBag.FechaInicio"
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 15px; font-size: 1rem; background: var(--cream);">
                    </div>

                    <!-- Fecha Fin -->
                    <div style="position: relative;">
                        <i class="fas fa-calendar-alt" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                        <input type="date"
                               name="fechaFin"
                               value="@ViewBag.FechaFin"
                               style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 15px; font-size: 1rem; background: var(--cream);">
                    </div>
                </div>

                <!-- Botón de búsqueda -->
                <div style="display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary btn-3d" style="border-radius: 50px; padding: 0.8rem 2.5rem;">
                        <span><i class="fas fa-search"></i> Buscar</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- Layout Principal: Tabla + Estadísticas -->
        <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;">
                <div class="table-responsive">
                    <table id="laTablaDeBitacoras" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                        <thead style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%);">
                            <tr>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha y Hora</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Empleado</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Módulo</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Acción</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Descripción</th>
                                <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var bitacorasDemo = new List<dynamic>
                                                        {
                                                        new { Id = 1, Empleado = "Juan Pérez", Modulo = "Empleados", Accion = "Crear", TablaAfectada = "Empleado", Descripcion = "Se registró un nuevo empleado", DatosAnteriores = "", DatosNuevos = "{\"Nombre\":\"María López\",\"Identificacion\":\"123456789\"}", Fecha = DateTime.Now.AddHours(-2).ToString("dd/MM/yyyy HH:mm:ss") },
                                                        new { Id = 2, Empleado = "Juan Pérez", Modulo = "Roles", Accion = "Actualizar", TablaAfectada = "Rol", Descripcion = "Se actualizó el rol Administrador", DatosAnteriores = "{\"Nombre\":\"Admin\",\"Estado\":true}", DatosNuevos = "{\"Nombre\":\"Administrador\",\"Estado\":true}", Fecha = DateTime.Now.AddHours(-5).ToString("dd/MM/yyyy HH:mm:ss") },
                                                        new { Id = 3, Empleado = "Ana García", Modulo = "Asistencia", Accion = "Registrar Entrada", TablaAfectada = "Asistencia", Descripcion = "Registro de entrada de jornada", DatosAnteriores = "", DatosNuevos = "{\"HoraEntrada\":\"08:00:00\"}", Fecha = DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy HH:mm:ss") }
                                                        };
                            }

                            @foreach (var bitacora in bitacorasDemo)
                            {
                                <tr style="border-bottom: 1px solid rgba(143, 142, 106, 0.1);">
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; white-space: nowrap;">
                                        <div>
                                            <strong style="display: block;">@bitacora.Fecha.Split(' ')[0]</strong>
                                            <small style="color: var(--charcoal); opacity: 0.7;">@bitacora.Fecha.Split(' ')[1]</small>
                                        </div>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--dark-green);">
                                        <strong>@bitacora.Empleado</strong>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span style="background: var(--olive-green); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                                            @bitacora.Modulo
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); font-weight: 600;">@bitacora.Accion</td>
                                    <td style="padding: 1.2rem; color: var(--charcoal); opacity: 0.85;">@bitacora.Descripcion</td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm btn-detalles"
                                                data-id="@bitacora.Id"
                                                data-empleado="@bitacora.Empleado"
                                                data-modulo="@bitacora.Modulo"
                                                data-accion="@bitacora.Accion"
                                                data-tabla="@bitacora.TablaAfectada"
                                                data-descripcion="@bitacora.Descripcion"
                                                data-datos-anteriores="@bitacora.DatosAnteriores"
                                                data-datos-nuevos="@bitacora.DatosNuevos"
                                                data-fecha="@bitacora.Fecha"
                                                style="background: #3498db; color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesBitacora"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(143, 142, 106, 0.1); flex-wrap: wrap; gap: 1rem;">
                    <div style="color: var(--dark-green); font-size: 0.95rem;">
                        Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">3</span></strong> de <strong id="totalRecords">3</strong> registros
                    </div>
                    <div style="display: flex; gap: 0.5rem;">
                        <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            &lt; Anterior
                        </button>
                        <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                            Siguiente &gt;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Estadísticas (Derecha) -->
            <div style="position: sticky; top: 100px;">
                <!-- Resumen -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, var(--gold) 0%, var(--gold-bright) 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-chart-pie" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Resumen de Hoy</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Actividad del sistema</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1.5rem; display: grid; gap: 1.2rem;">
                        <!-- Total Registros -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--olive-green);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-history" style="color: var(--olive-green);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">TOTAL REGISTROS</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">3</strong>
                        </div>

                        <!-- Acciones Hoy -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-calendar-day" style="color: var(--gold);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">ACCIONES HOY</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">2</strong>
                        </div>

                        <!-- Usuarios Activos -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--olive-green);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-users" style="color: var(--olive-green);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">USUARIOS ACTIVOS</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">2</strong>
                        </div>

                        <!-- Módulos Activos -->
                        <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid var(--gold);">
                            <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                                <i class="fas fa-th-large" style="color: var(--gold);"></i>
                                <span style="color: var(--charcoal); opacity: 0.7; font-size: 0.85rem; font-weight: 600;">MÓDULOS ACTIVOS</span>
                            </div>
                            <strong style="color: var(--dark-green); font-size: 1.8rem; font-weight: 700; display: block;">3</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesBitacora" />

@section Scripts {
    <script src="~/js/bitacora.js"></script>
}