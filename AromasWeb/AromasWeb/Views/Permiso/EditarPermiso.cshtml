@model AromasWeb.Abstracciones.ModeloUI.Permiso

@{
    ViewBag.Title = "Editar Permiso";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar un
                <span class="hero-title-accent">Permiso</span>
            </h1>
            <p class="hero-subtitle">
                Modifica la información del permiso en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("EditarPermiso", "Permiso", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdPermiso)

            <div class="contact-form-wrapper" data-aos="fade-up">
                <form class="contact-form">
                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <!-- Información del Permiso -->
                    <div style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-shield-alt"></i> Información del Permiso
                        </h5>
                    </div>

                    <!-- Módulo -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-cube"></i>
                            Módulo
                        </label>
                        @Html.DropDownListFor(model => model.IdModulo, (SelectList)ViewBag.Modulos, "-- Seleccione un módulo --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdModulo, "", new { @class = "text-danger" })
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                            <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                            Selecciona el módulo al que pertenece este permiso
                        </small>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-tag"></i>
                            Nombre del Permiso
                        </label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Ver Empleados, Crear Empleados" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                            <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                            Usa nombres descriptivos como "Ver", "Crear", "Editar", "Eliminar"
                        </small>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoPermisos", "Permiso")'" style="flex: 1;">
                            <span><i class="fas fa-times"></i> Cancelar</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 1;">
                            <span><i class="fas fa-check"></i> Guardar Cambios</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="~/js/permiso.js"></script>
}