<div class="modal fade admin-modal modal-olive" id="modalDetallesPermiso" tabindex="-1" aria-labelledby="modalDetallesPermisoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalDetallesPermisoLabel">
                    <div class="modal-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    Detalles del Permiso
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">

                <!-- Nombre del Permiso -->
                <div class="modal-entity-header entity-block">
                    <h5 id="detalles-nombre-permiso" class="modal-entity-name"></h5>
                </div>

                <!-- ID y Módulo en 2 columnas -->
                <div class="modal-data-grid-2">
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-hashtag"></i> ID del Permiso
                        </label>
                        <p id="detalles-id-permiso" class="modal-data-value"></p>
                    </div>
                    <div class="modal-data-cell">
                        <label class="modal-data-label">
                            <i class="fas fa-cube"></i> Módulo
                        </label>
                        <p id="detalles-modulo-permiso" class="modal-data-value"></p>
                    </div>
                </div>

            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.btn-detalles-permiso').forEach(btn => {
            btn.addEventListener('click', function () {
                document.getElementById('detalles-id-permiso').textContent = '#' + this.dataset.id;
                document.getElementById('detalles-nombre-permiso').textContent = this.dataset.nombre;
                document.getElementById('detalles-modulo-permiso').textContent = this.dataset.modulo || '—';
            });
        });
    });
</script>