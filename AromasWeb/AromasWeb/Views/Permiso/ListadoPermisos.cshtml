@model List<AromasWeb.Abstracciones.ModeloUI.Permiso>

@{
    ViewBag.Title = "Gestión de Permisos";
    var totalPermisos = Model?.Count ?? 0;
    var modulosUnicos = Model?.Select(p => p.NombreModulo).Distinct().Count() ?? 0;
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-shield-alt"></i>
                Gestión de Permisos
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Permisos del Sistema
            </h1>
            <p class="hero-subtitle">
                Administra los permisos y accesos de la aplicación
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Resumen de Permisos -->
        <div class="features-grid" style="margin-bottom: 3rem; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@totalPermisos</h3>
                <p style="margin: 0.5rem 0;">Total de Permisos</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-puzzle-piece"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@modulosUnicos</h3>
                <p style="margin: 0.5rem 0;">Módulos con Permisos</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-calculator"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @(modulosUnicos > 0 ? (totalPermisos / modulosUnicos).ToString() : "0")
                </h3>
                <p style="margin: 0.5rem 0;">Promedio por Módulo</p>
            </div>
        </div>

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoPermisos", "Permiso")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre de permiso..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>

                <div style="position: relative;">
                    <i class="fas fa-puzzle-piece" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1; pointer-events: none;"></i>
                    <select name="filtroModulo"
                            style="padding: 1rem 1.5rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); color: var(--dark-green); font-weight: 600; min-width: 200px;">
                        <option value="">Todos los módulos</option>
                        @if (ViewBag.Modulos != null)
                        {
                            foreach (var mod in ViewBag.Modulos)
                            {
                                <option value="@mod.IdModulo"
                                        @@(ViewBag.FiltroModulo != null && ViewBag.FiltroModulo == mod.IdModulo ? "selected" : "")>
                                    @mod.Nombre
                                </option>
                            }
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>

                @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || ViewBag.FiltroModulo != null)
                {
                    <a href="@Url.Action("ListadoPermisos", "Permiso")" class="btn btn-secondary" style="border-radius: 50px; padding: 0 1.5rem; white-space: nowrap;">
                        <span><i class="fas fa-times"></i> Limpiar</span>
                    </a>
                }
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearPermiso", "Permiso")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Agregar Permiso</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || ViewBag.FiltroModulo != null)
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Filtros activos
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                    {
                        <span>· Buscando: <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong></span>
                    }
                    - <strong>@(Model?.Count ?? 0)</strong> permiso(s) encontrado(s)
                </p>
            </div>
        }

        <!-- Tabla Principal -->
        <div class="admin-table-container" data-aos="fade-up">
            <div class="table-responsive">
                <table class="admin-table" id="laTablaDePermisos">
                    <thead>
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Módulo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Permiso</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int contador = 1;
                            foreach (var permiso in Model)
                            {
                                <tr>
                                    <td style="padding: 1.2rem; text-align: center;">
                                        <span style="color: var(--charcoal); font-weight: 600;">@contador</span>
                                    </td>
                                    <td style="padding: 1.2rem;">
                                        <span class="badge" style="background: var(--gold); color: var(--white); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;">
                                            @permiso.NombreModulo
                                        </span>
                                    </td>
                                    <td style="padding: 1.2rem; color: var(--dark-green); font-weight: 600; font-size: 1.05rem;">
                                        @permiso.Nombre
                                    </td>
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <button type="button"
                                                class="btn btn-sm"
                                                onclick="window.location.href='@Url.Action("EditarPermiso", "Permiso", new { id = permiso.IdPermiso })'"
                                                style="background: var(--olive-green); color: var(--white); border: none; margin: 0 0.25rem; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-detalles-permiso"
                                                data-id="@permiso.IdPermiso"
                                                data-nombre="@permiso.Nombre"
                                                data-modulo="@permiso.NombreModulo"
                                                style="background: var(--gold); color: var(--white); border: none; margin: 0 0.25rem; cursor: pointer; padding: 0.5rem 0.8rem; border-radius: 8px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalDetallesPermiso"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                contador++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="admin-table-empty">
                                    <i class="fas fa-inbox"></i>
                                    <p>No se encontraron permisos</p>
                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
                                    {
                                        <p class="empty-subtitle">Intenta con otros términos de búsqueda</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                </div>
                <div class="pagination-buttons">
                    <button id="btnAnterior" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </button>
                    <button id="btnSiguiente" class="pagination-btn">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>

    </div>
</section>

<partial name="_ModalDetallesPermiso" />

@section Scripts {
    <script src="~/js/permiso.js"></script>
}