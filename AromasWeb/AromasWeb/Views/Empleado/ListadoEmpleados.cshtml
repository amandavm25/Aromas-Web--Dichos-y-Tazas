@model List<AromasWeb.Abstracciones.ModeloUI.Empleado>

@{
    ViewBag.Title = "Gestión de Empleados";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-tie"></i>
                Gestión de Empleados
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Empleados Registrados
            </h1>
            <p class="hero-subtitle">
                Administra la información del personal del negocio
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoEmpleados", "Empleado")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre, identificación, correo o cargo..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("CrearEmpleado", "Empleado")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Agregar Empleado</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> empleado(s) encontrado(s)
                </p>
            </div>
        }

        <!-- Filtros -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold);"></i> Filtrar por estado:
                </span>
                <a href="@Url.Action("ListadoEmpleados", "Empleado")"
                   class="btn @(string.IsNullOrWhiteSpace(ViewBag.FiltroEstado as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todos</span>
                </a>
                <a href="@Url.Action("ListadoEmpleados", "Empleado", new { filtroEstado = "activo" })"
                   class="btn @(ViewBag.FiltroEstado == "activo" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-check-circle"></i> Activos</span>
                </a>
                <a href="@Url.Action("ListadoEmpleados", "Empleado", new { filtroEstado = "inactivo" })"
                   class="btn @(ViewBag.FiltroEstado == "inactivo" ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-times-circle"></i> Inactivos</span>
                </a>
            </div>
        </div>

        <!-- Tabla Principal -->
        <div class="admin-table-container">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Nombre</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Identificación</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Celular</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Correo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Cargo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Rol</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Antigüedad</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Estado</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int contador = 1;
                            foreach (var empleado in Model)
                            {
                                <tr>
                                    <!-- Número consecutivo -->
                                    <td style="padding: 1.2rem; text-align: center;">
                                        <span style="color: var(--charcoal); font-weight: 600;">@contador</span>
                                    </td>

                                    <!-- Nombre completo -->
                                    <td style="padding: 1.2rem;">
                                        <strong style="color: var(--dark-green); font-size: 1rem;">@empleado.Nombre @empleado.Apellidos</strong>
                                    </td>

                                    <!-- Identificación -->
                                    <td style="padding: 1.2rem;">
                                        <span style="color: var(--charcoal);">@empleado.Identificacion</span>
                                    </td>

                                    <!-- Correo -->
                                    <td style="padding: 1.2rem;">
                                        <span style="color: var(--charcoal);">@empleado.Correo</span>
                                    </td>

                                    <!-- Cargo -->
                                    <td style="padding: 1.2rem;">
                                        <span style="background: var(--cream); color: var(--dark-green); padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                            @empleado.Cargo
                                        </span>
                                    </td>

                                    <!-- Rol -->
                                    <td style="padding: 1.2rem; text-align: center;">
                                        @if (empleado.NombreRol == "Administrador")
                                        {
                                            <span class="badge" style="background: var(--gold); color: white; padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                <i class="fas fa-crown"></i> @empleado.NombreRol
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background: var(--olive-green); color: white; padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                <i class="fas fa-user"></i> @empleado.NombreRol
                                            </span>
                                        }
                                    </td>

                                    <!-- Estado -->
                                    <td style="padding: 1.2rem; text-align: center;">
                                        @if (empleado.Estado)
                                        {
                                            <span class="badge" style="background: #27ae60; color: white; padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                <i class="fas fa-check-circle"></i> Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background: #e74c3c; color: white; padding: 0.4rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 500;">
                                                <i class="fas fa-times-circle"></i> Inactivo
                                            </span>
                                        }
                                    </td>

                                    <!-- Acciones -->
                                    <td style="padding: 1.2rem; text-align: center; white-space: nowrap;">
                                        <!-- Botones de acción aquí -->
                                    </td>
                                </tr>
                                contador++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" style="padding: 3rem; text-align: center; color: var(--charcoal);">
                                    <i class="fas fa-inbox" style="font-size: 3rem; color: var(--olive-green); opacity: 0.5; margin-bottom: 1rem; display: block;"></i>
                                    <p style="margin: 0; font-size: 1.1rem;">No se encontraron empleados</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div class="admin-table-footer">
                <div class="admin-table-footer-text">
                    Mostrando <strong>@(Model?.Count ?? 0)</strong> de <strong>@(Model?.Count ?? 0)</strong> empleados
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesEmpleado" />
<partial name="_ModalEliminarEmpleado" />

@section Scripts {
    <script src="~/js/empleado.js"></script>
}