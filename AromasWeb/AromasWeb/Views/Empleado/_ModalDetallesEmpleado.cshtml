<div class="modal fade" id="modalDetallesEmpleado" tabindex="-1" aria-labelledby="modalDetallesEmpleadoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 25px; overflow: hidden; box-shadow: var(--shadow-xl);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); color: var(--white); border: none; padding: 2rem;">
                <h5 class="modal-title" id="modalDetallesEmpleadoLabel" style="font-family: var(--font-primary); font-weight: 700; display: flex; align-items: center; gap: 0.7rem; font-size: 1.5rem;">
                    <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    Detalles del Empleado
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="opacity: 1;"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2.5rem; background: var(--cream);">
                <!-- Título del Empleado -->
                <div style="background: var(--white); padding: 1.5rem; border-radius: 20px; margin-bottom: 2rem; box-shadow: var(--shadow-sm); border-left: 5px solid var(--teal); display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <h5 id="detalles-nombre-empleado" style="color: var(--dark-teal); margin: 0; font-size: 1.6rem; font-family: var(--font-primary); font-weight: 700;"></h5>
                        <p id="detalles-cargo-empleado" style="margin: 0.5rem 0 0; color: var(--coral); font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-briefcase"></i>
                            <span></span>
                        </p>
                        <p id="detalles-empleado-antiguo" style="margin: 0.5rem 0 0; color: var(--amber); font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-award"></i>
                            <span>Empleado Antiguo</span>
                        </p>
                    </div>
                    <div style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--teal), var(--dark-teal)); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-md);">
                        <i class="fas fa-user-tie" style="font-size: 2rem; color: white;"></i>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <!-- Columna Izquierda -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- ID -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hashtag" style="color: var(--teal); font-size: 1.1rem;"></i> ID del Empleado
                            </label>
                            <p id="detalles-id-empleado" style="color: var(--dark-teal); font-size: 1.3rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Identificación -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-id-card" style="color: var(--teal); font-size: 1.1rem;"></i> Identificación
                            </label>
                            <p id="detalles-identificacion-empleado" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 600; margin: 0;"></p>
                        </div>

                        <!-- Correo -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-envelope" style="color: var(--teal); font-size: 1.1rem;"></i> Correo Electrónico
                            </label>
                            <p id="detalles-correo-empleado" style="color: var(--dark-teal); font-size: 1rem; font-weight: 600; margin: 0; word-break: break-all;"></p>
                        </div>

                        <!-- Teléfono -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-phone" style="color: var(--teal); font-size: 1.1rem;"></i> Teléfono
                            </label>
                            <p id="detalles-telefono-empleado" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 600; margin: 0;"></p>
                        </div>
                    </div>

                    <!-- Columna Derecha -->
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- Rol -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-user-tag" style="color: var(--teal); font-size: 1.1rem;"></i> Rol
                            </label>
                            <span id="detalles-rol-empleado" class="badge" style="font-size: 1rem; padding: 0.6rem 1.5rem; border-radius: 50px; display: inline-block; font-weight: 600;"></span>
                        </div>

                        <!-- Fecha de Contratación -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-calendar-plus" style="color: var(--teal); font-size: 1.1rem;"></i> Fecha de Contratación
                            </label>
                            <p id="detalles-fechacontratacion-empleado" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Antigüedad -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-briefcase" style="color: var(--teal); font-size: 1.1rem;"></i> Antigüedad
                            </label>
                            <p id="detalles-antiguedad-empleado" style="color: var(--dark-teal); font-size: 1.2rem; font-weight: 700; margin: 0;"></p>
                        </div>

                        <!-- Estado -->
                        <div class="feature-card" style="padding: 1.5rem; margin: 0;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.7rem; letter-spacing: 0.5px;">
                                <i class="fas fa-toggle-on" style="color: var(--teal); font-size: 1.1rem;"></i> Estado
                            </label>
                            <span id="detalles-estado-badge-empleado" class="badge" style="font-size: 1rem; padding: 0.6rem 1.5rem; border-radius: 50px; display: inline-block; font-weight: 600;"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--white); border: none; padding: 1.5rem 2.5rem;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="padding: 0.9rem 2.5rem; border-radius: 50px;">
                    <span><i class="fas fa-times"></i> Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>