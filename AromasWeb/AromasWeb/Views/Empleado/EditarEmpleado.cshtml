@model AromasWeb.Abstracciones.ModeloUI.Empleado

@{
    ViewBag.Title = "Editar Empleado";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar un
                <span class="hero-title-accent">Empleado</span>
            </h1>
            <p class="hero-subtitle">
                Modifica la información del empleado en el sistema
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("EditarEmpleado", "Empleado", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdEmpleado)

            <div class="contact-form-wrapper" data-aos="fade-up">
                <form class="contact-form">
                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <!-- Información Personal -->
                    <div style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-user"></i> Información Personal
                        </h5>
                    </div>

                    <!-- Nombre Completo -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user"></i>
                            Nombre Completo
                        </label>
                        @Html.EditorFor(model => model.NombreCompleto, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Juan Pérez Rodríguez" } })
                        @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger" })
                    </div>

                    <!-- Identificación y Teléfono -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-id-card"></i>
                                Identificación
                            </label>
                            @Html.EditorFor(model => model.Identificacion, new { htmlAttributes = new { @class = "form-control", placeholder = "1-1234-5678" } })
                            @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-phone"></i>
                                Teléfono
                            </label>
                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "8888-1234" } })
                            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Correo Electrónico -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-envelope"></i>
                            Correo Electrónico
                        </label>
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "correo@ejemplo.com" } })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                    </div>

                    <!-- Información Laboral -->
                    <div style="background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin: 2rem 0;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-briefcase"></i> Información Laboral
                        </h5>
                    </div>

                    <!-- Cargo -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user-tie"></i>
                            Cargo
                        </label>
                        @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Barista" } })
                        @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                    </div>

                    <!-- Rol -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user-tag"></i>
                            Rol
                        </label>
                        @Html.DropDownListFor(model => model.IdRol,
                        new SelectList(ViewBag.Roles, "IdRol", "Nombre", Model.IdRol),
                                        "Seleccione un rol",
                                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdRol, "", new { @class = "text-danger" })
                </div>

                <!-- Fecha de Contratación -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-calendar-plus"></i>
                        Fecha de Contratación
                    </label>
                    @Html.EditorFor(model => model.FechaContratacion, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.FechaContratacion, "", new { @class = "text-danger" })
                </div>

                <!-- Cambiar Contraseña -->
                <div style="background: linear-gradient(135deg, var(--green) 0%, var(--teal) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin: 2rem 0;">
                    <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                        <i class="fas fa-lock"></i> Cambiar Contraseña (Opcional)
                    </h5>
                </div>

                <!-- Contraseña Actual -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-key"></i>
                        Contraseña Actual
                    </label>
                    <input type="password" name="ContrasenaActual" class="form-control" placeholder="Ingresa la contraseña actual" />
                    <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                        <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                        Solo completa si deseas cambiar la contraseña
                    </small>
                </div>

                <!-- Nueva Contraseña y Confirmar -->
                <div class="form-row">
                    <div class="form-group">
                        <label>
                            <i class="fas fa-key"></i>
                            Nueva Contraseña
                        </label>
                        <input type="password" name="ContrasenaNueva" class="form-control" placeholder="Nueva contraseña" />
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-key"></i>
                            Confirmar Nueva Contraseña
                        </label>
                        <input type="password" name="ConfirmarContrasenaNueva" class="form-control" placeholder="Confirmar contraseña" />
                    </div>
                </div>

                <!-- Información de Registro -->
                <div class="feature-card" style="margin: 2rem 0; padding: 1.5rem;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div>
                            <label style="color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-calendar-plus" style="color: var(--teal);"></i> Fecha de Contratación
                            </label>
                            <p style="margin: 0.5rem 0 0; color: var(--dark-teal); font-weight: 600;">@Model.FechaContratacionFormateada</p>
                        </div>
                        <div>
                            <label style="color: var(--gray); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; display: flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-briefcase" style="color: var(--teal);"></i> Antigüedad
                            </label>
                            <p style="margin: 0.5rem 0 0; color: var(--dark-teal); font-weight: 600;">@Model.AnosTrabajados</p>
                        </div>
                    </div>
                </div>

                <!-- Estado del Empleado -->
                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--gray-light); border-radius: 15px; cursor: pointer;">
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input", id = "estadoCheckbox" } })
                        <span style="flex: 1;">
                            <i class="fas fa-toggle-on"></i>
                            Estado del Empleado (Activo/Inactivo)
                        </span>
                    </label>
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                        <i class="fas fa-toggle-on" style="color: var(--coral);"></i>
                        Activa o desactiva el acceso del empleado
                    </small>
                </div>

                <!-- Botones -->
                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoEmpleados", "Empleado")'" style="flex: 1;">
                        <span><i class="fas fa-times"></i> Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary btn-3d" style="flex: 1;">
                        <span><i class="fas fa-check"></i> Guardar Cambios</span>
                    </button>
                </div>
            </form>
        </div>
                }
    </div>
</section>

@section Scripts {
    <script src="~/js/empleado.js"></script>
}