@model AromasWeb.Abstracciones.ModeloUI.Cliente

@{
    ViewBag.Title = "Iniciar Sesión";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-sign-in-alt"></i>
                Acceso al Sistema
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Bienvenido de
                <span class="hero-title-accent">Nuevo</span>
            </h1>
            <p class="hero-subtitle">
                Ingresa tus credenciales para continuar
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 600px;">
        <div class="contact-form-wrapper" data-aos="fade-up">
            <form method="post" action="/Auth/Login">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Mensaje de error personalizado -->
                @if (TempData["Error"] != null)
                {
                    <div style="background: linear-gradient(135deg, rgba(231, 76, 60, 0.1) 0%, rgba(192, 57, 43, 0.1) 100%); padding: 1.5rem; border-radius: 15px; margin-bottom: 2rem; border-left: 4px solid #e74c3c;">
                        <div style="display: flex; align-items: start; gap: 1rem;">
                            <i class="fas fa-exclamation-circle" style="color: #e74c3c; font-size: 1.5rem; margin-top: 0.2rem;"></i>
                            <div>
                                <h6 style="color: #c0392b; margin: 0 0 0.5rem; font-weight: 700;">Error de autenticación</h6>
                                <p style="margin: 0; color: #c0392b; line-height: 1.6;">@TempData["Error"]</p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Información de Login -->
                <div style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                    <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                        <i class="fas fa-user-circle"></i> Iniciar Sesión
                    </h5>
                </div>

                <!-- Usuarios de prueba -->
                <div style="background: linear-gradient(135deg, rgba(52, 152, 219, 0.1) 0%, rgba(41, 128, 185, 0.1) 100%); padding: 1.5rem; border-radius: 15px; margin-bottom: 2rem; border-left: 4px solid #3498db;">
                    <div style="display: flex; align-items: start; gap: 1rem;">
                        <i class="fas fa-info-circle" style="color: #3498db; font-size: 1.5rem; margin-top: 0.2rem;"></i>
                        <div>
                            <h6 style="color: #2980b9; margin: 0 0 0.5rem; font-weight: 700;">Usuarios de Prueba</h6>
                            <p style="margin: 0 0 0.75rem; color: #2c3e50; line-height: 1.6; font-size: 0.9rem;">
                                Puedes usar estas credenciales para probar:
                            </p>
                            <div style="display: grid; gap: 0.75rem;">
                                <div style="background: white; padding: 0.75rem; border-radius: 10px;">
                                    <strong style="color: #27ae60; display: block; margin-bottom: 0.25rem;">
                                        <i class="fas fa-user"></i> Cliente:
                                    </strong>
                                    <code style="display: block; color: #2c3e50; font-size: 0.85rem;">
                                        <strong>Email:</strong> cliente@gmail.com<br>
                                        <strong>Pass:</strong> cliente123
                                    </code>
                                </div>
                                <div style="background: white; padding: 0.75rem; border-radius: 10px;">
                                    <strong style="color: #e74c3c; display: block; margin-bottom: 0.25rem;">
                                        <i class="fas fa-user-shield"></i> Administrador:
                                    </strong>
                                    <code style="display: block; color: #2c3e50; font-size: 0.85rem;">
                                        <strong>Email:</strong> admin@gmail.com<br>
                                        <strong>Pass:</strong> admin123
                                    </code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Correo Electrónico -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-envelope"></i>
                        Correo Electrónico
                    </label>
                    <input type="email" name="Correo" class="form-control" placeholder="correo@ejemplo.com" required />
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>

                <!-- Contraseña -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-lock"></i>
                        Contraseña
                    </label>
                    <div style="position: relative;">
                        <input type="password" name="Contrasena" id="password-input" class="form-control" placeholder="Ingresa tu contraseña" required />
                        <button type="button" id="toggle-password" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); background: none; border: none; color: var(--gray); cursor: pointer; font-size: 1.2rem;">
                            <i class="fas fa-eye" id="eye-icon"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>

                <!-- Recordarme y Olvidé Contraseña -->
                <div style="display: flex; justify-content: space-between; align-items: center; margin: 1.5rem 0;">
                    <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                        <input type="checkbox" name="RecordarMe" style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="color: var(--dark-teal); font-weight: 500;">Recordarme</span>
                    </label>
                    <a href="/Auth/OlvideContrasenna" style="color: var(--coral); font-weight: 600; text-decoration: none; transition: all 0.3s;">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

                <!-- Botón de Login -->
                <button type="submit" class="btn btn-primary btn-3d btn-block" style="margin-top: 2rem;">
                    <span><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</span>
                </button>

                <!-- Separador -->
                <div style="display: flex; align-items: center; gap: 1rem; margin: 2rem 0;">
                    <div style="flex: 1; height: 1px; background: var(--gray-light);"></div>
                    <span style="color: var(--gray); font-size: 0.9rem;">O</span>
                    <div style="flex: 1; height: 1px; background: var(--gray-light);"></div>
                </div>

                <!-- Registro -->
                <div style="text-align: center;">
                    <p style="color: var(--gray); margin-bottom: 1rem;">¿No tienes una cuenta?</p>
                    <a href="/Auth/Registro" class="btn btn-secondary" style="width: 100%;">
                        <span><i class="fas fa-user-plus"></i> Crear Cuenta Nueva</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features" style="padding: 4rem 0;">
    <div class="container">
        <div class="features-grid">
            <div class="feature-card" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3>Gestiona tus Reservas</h3>
                <p>Accede a tu historial y administra tus reservaciones</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <h3>Notificaciones</h3>
                <p>Recibe recordatorios de tus próximas visitas</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3>Beneficios Exclusivos</h3>
                <p>Accede a promociones y descuentos especiales</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Seguridad</h3>
                <p>Tus datos están protegidos con encriptación</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Toggle password visibility
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('toggle-password');
            const passwordInput = document.getElementById('password-input');
            const eyeIcon = document.getElementById('eye-icon');

            if (togglePassword) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    if (type === 'password') {
                        eyeIcon.classList.remove('fa-eye-slash');
                        eyeIcon.classList.add('fa-eye');
                    } else {
                        eyeIcon.classList.remove('fa-eye');
                        eyeIcon.classList.add('fa-eye-slash');
                    }
                });
            }

            // Animación en inputs al escribir
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.transform = 'scale(1.02)';
                    this.style.boxShadow = '0 0 0 4px rgba(32, 116, 118, 0.1)';
                });

                input.addEventListener('blur', function() {
                    this.style.transform = '';
                    this.style.boxShadow = '';
                });
            });
        });
    </script>
}