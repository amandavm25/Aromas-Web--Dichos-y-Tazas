@model AromasWeb.Abstracciones.ModeloUI.Cliente

@{
    ViewBag.Title = "Crear Cuenta";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-particles" id="heroParticles"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-user-plus"></i>
                Nueva Cuenta
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Únete a
                <span class="hero-title-accent">Nosotros</span>
            </h1>
            <p class="hero-subtitle">
                Crea tu cuenta y disfruta de todos los beneficios
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("Registro", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="contact-form-wrapper" data-aos="fade-up">
                <form class="contact-form">
                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <!-- Información Personal -->
                    <div style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-user"></i> Información Personal
                        </h5>
                    </div>

                    <!-- Nombre Completo -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-user"></i>
                            Nombre Completo
                        </label>
                        @Html.EditorFor(model => model.NombreCompleto, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Juan Pérez Rodríguez", required = "required" } })
                        @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger" })
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                            <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                            Ingresa tu nombre completo tal como aparece en tu identificación
                        </small>
                    </div>

                    <!-- Identificación y Teléfono -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>
                                <i class="fas fa-id-card"></i>
                                Identificación
                            </label>
                            @Html.EditorFor(model => model.Identificacion, new { htmlAttributes = new { @class = "form-control", placeholder = "1-1234-5678", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-phone"></i>
                                Teléfono
                            </label>
                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "8888-1234", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Correo Electrónico -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-envelope"></i>
                            Correo Electrónico
                        </label>
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "correo@ejemplo.com", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                            <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                            Usaremos este correo para enviarte confirmaciones de tus reservas
                        </small>
                    </div>

                    <!-- Información de Seguridad -->
                    <div style="background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin: 2rem 0;">
                        <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                            <i class="fas fa-lock"></i> Información de Seguridad
                        </h5>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-key"></i>
                            Contraseña
                        </label>
                        <div style="position: relative;">
                            @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Mínimo 8 caracteres", id = "password-input", required = "required" } })
                            <button type="button" id="toggle-password" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); background: none; border: none; color: var(--gray); cursor: pointer; font-size: 1.2rem;">
                                <i class="fas fa-eye" id="eye-icon"></i>
                            </button>
                        </div>
                        @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })

                        <!-- Indicador de fortaleza -->
                        <div style="margin-top: 0.7rem;">
                            <div style="display: flex; gap: 0.3rem; height: 4px; margin-bottom: 0.5rem;">
                                <div id="strength-1" style="flex: 1; background: var(--gray-light); border-radius: 2px; transition: all 0.3s;"></div>
                                <div id="strength-2" style="flex: 1; background: var(--gray-light); border-radius: 2px; transition: all 0.3s;"></div>
                                <div id="strength-3" style="flex: 1; background: var(--gray-light); border-radius: 2px; transition: all 0.3s;"></div>
                                <div id="strength-4" style="flex: 1; background: var(--gray-light); border-radius: 2px; transition: all 0.3s;"></div>
                            </div>
                            <small id="strength-text" style="color: var(--gray); font-size: 0.85rem;"></small>
                        </div>

                        <small style="display: block; margin-top: 0.7rem; color: var(--gray);">
                            <i class="fas fa-info-circle" style="color: var(--coral);"></i>
                            La contraseña debe tener al menos 8 caracteres
                        </small>
                    </div>

                    <!-- Confirmar Contraseña -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-key"></i>
                            Confirmar Contraseña
                        </label>
                        <div style="position: relative;">
                            <input type="password" name="ConfirmarContrasena" id="confirm-password-input" class="form-control" placeholder="Repite la contraseña" required />
                            <button type="button" id="toggle-confirm-password" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); background: none; border: none; color: var(--gray); cursor: pointer; font-size: 1.2rem;">
                                <i class="fas fa-eye" id="eye-icon-confirm"></i>
                            </button>
                        </div>
                        <div id="password-match-message" style="margin-top: 0.5rem;"></div>
                    </div>

                    <!-- Términos y Condiciones -->
                    <div class="form-group">
                        <label style="display: flex; align-items: start; gap: 1rem; padding: 1.5rem; background: var(--gray-light); border-radius: 15px; cursor: pointer;">
                            <input type="checkbox" name="AceptoTerminos" id="terminos-checkbox" required style="margin-top: 0.2rem; width: 20px; height: 20px; cursor: pointer;">
                            <span style="flex: 1; line-height: 1.6;">
                                Acepto los <a href="#" style="color: var(--coral); font-weight: 600; text-decoration: underline;">Términos y Condiciones</a> y la <a href="#" style="color: var(--coral); font-weight: 600; text-decoration: underline;">Política de Privacidad</a>
                            </span>
                        </label>
                    </div>

                    <!-- Botones -->
                    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Login", "Auth")'" style="flex: 1;">
                            <span><i class="fas fa-arrow-left"></i> Ya tengo cuenta</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-3d" style="flex: 2;">
                            <span><i class="fas fa-user-plus"></i> Crear Mi Cuenta</span>
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</section>

<!-- Features Section -->
<section class="features" style="padding: 4rem 0;">
    <div class="container">
        <div class="section-header">
            <span class="section-badge">¿Por qué registrarte?</span>
            <h2 class="section-title">
                Beneficios <span class="title-accent">Exclusivos</span>
            </h2>
        </div>

        <div class="features-grid">
            <div class="feature-card" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>Reservas Rápidas</h3>
                <p>Realiza reservaciones en segundos sin llenar formularios repetidamente</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-history"></i>
                </div>
                <h3>Historial Completo</h3>
                <p>Consulta todas tus visitas anteriores y repetir tus favoritas</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-gift"></i>
                </div>
                <h3>Recompensas</h3>
                <p>Gana puntos por cada visita y canjéalos por beneficios</p>
            </div>
            <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3>Acceso Multiplataforma</h3>
                <p>Usa tu cuenta desde cualquier dispositivo, en cualquier momento</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/registro.js"></script>
}