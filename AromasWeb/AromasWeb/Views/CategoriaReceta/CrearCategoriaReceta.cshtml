@model AromasWeb.Abstracciones.ModeloUI.CategoriaReceta

@{
    ViewBag.Title = "Agregar Categoría de Receta";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-plus-circle"></i>
                Nueva Categoría
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Agregar una
                <span class="hero-title-accent">Categoría de Receta</span>
            </h1>
            <p class="hero-subtitle">
                Registra una nueva categoría para organizar las recetas
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 900px;">
        @using (Html.BeginForm("CrearCategoriaReceta", "CategoriaReceta", FormMethod.Post, new { @class = "contact-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="contact-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Información del Registro -->
                <div style="background: linear-gradient(135deg, var(--olive-green) 0%, var(--dark-green) 100%); padding: 1rem 1.5rem; border-radius: 15px; margin-bottom: 2rem;">
                    <h5 style="color: white; margin: 0; display: flex; align-items: center; gap: 0.7rem;">
                        <i class="fas fa-book"></i> Información de la Categoría
                    </h5>
                </div>

                <!-- Nombre de la Categoría -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-book"></i>
                        Nombre de la Categoría
                    </label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Postres" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-align-left"></i>
                        Descripción
                    </label>
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = "4", placeholder = "Describe el tipo de recetas que incluirá esta categoría..." })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    <small style="display: block; margin-top: 0.5rem; color: var(--charcoal); opacity: 0.7;">
                        <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                        Máximo 500 caracteres
                    </small>
                </div>

                <!-- Información adicional -->
                <div class="feature-card" style="margin: 2rem 0; padding: 1.5rem;">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <i class="fas fa-info-circle" style="color: var(--olive-green); font-size: 2rem;"></i>
                        <div>
                            <strong style="color: var(--dark-green); display: block; margin-bottom: 0.3rem;">Organización de Recetas</strong>
                            <p style="margin: 0; color: var(--charcoal); opacity: 0.85; font-size: 0.95rem;">
                                Esta categoría te ayudará a clasificar y organizar mejor tus recetas en el sistema.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoCategoriasRecetas", "CategoriaReceta")'" style="flex: 1;">
                        <span><i class="fas fa-times"></i> Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary btn-3d" style="flex: 1;">
                        <span><i class="fas fa-save"></i> Agregar Categoría</span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/categoriaReceta.js"></script>
}