@model AromasWeb.Abstracciones.ModeloUI.CategoriaReceta

@{
    ViewBag.Title = "Editar Categoría de Receta";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-edit"></i>
                Actualizar Información
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Editar
                <span class="hero-title-accent">Categoría de Receta</span>
            </h1>
            <p class="hero-subtitle">
                Modifica la información de la categoría
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Formulario Section -->
<section class="admin-form-section">
    <div class="container" style="max-width: 80%;">
        @using (Html.BeginForm("EditarCategoriaReceta", "CategoriaReceta", FormMethod.Post, new { @class = "contact-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdCategoriaReceta)

            <div class="admin-form-wrapper" data-aos="fade-up">
                @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                <!-- Información del Registro -->
                <div class="admin-form-header">
                    <i class="fas fa-box"></i>
                    <h5>Información de la Categoría</h5>
                </div>

                <!-- Nombre de la Categoría -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-book"></i>
                        Nombre de la Categoría
                    </label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Postres" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label>
                        <i class="fas fa-align-left"></i>
                        Descripción
                    </label>
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = "4", placeholder = "Describe el tipo de recetas que incluirá esta categoría..." })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    <small class="admin-form-hint">
                        <i class="fas fa-info-circle"></i>
                        Máximo 500 caracteres.
                    </small>
                </div>

                <!-- Estado de la Categoría -->
                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--cream); border-radius: 15px; cursor: pointer;">
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input", id = "estadoCheckbox" } })
                        <span style="flex: 1;">
                            <i class="fas fa-toggle-on"></i>
                            Estado de la Categoría (Activa/Inactiva)
                        </span>
                    </label>
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    <small class="admin-form-hint">
                        <i class="fas fa-info-circle"></i>
                        Al desactivar una categoría, las recetas asociadas no se eliminarán pero quedarán sin categoría activa
                    </small>                   
                </div>

                <!-- Botones -->
                <div class="admin-form-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ListadoCategoriasRecetas", "CategoriaReceta")'">
                        <i class="fas fa-times"></i>
                        <span> Cancelar</span>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <span> Guardar Cambios </span>
                    </button>
                </div>
               </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/categoriaReceta.js"></script>
}