@model List<AromasWeb.Abstracciones.ModeloUI.MovimientoInsumo>

@{
    ViewBag.Title = "Historial de Movimientos";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-history"></i>
                Registro Completo
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Historial de Movimientos
            </h1>
            <p class="hero-subtitle">
                Consulta todos los movimientos de entradas y salidas de insumos
            </p>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1400px;">

        <!-- Estadísticas Rápidas -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-exchange-alt" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">48</h3>
                <p style="margin: 0; opacity: 0.9;">Total Movimientos</p>
                <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-calendar"></i> Este mes
                </small>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--green) 0%, #4d9160 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-arrow-down" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">28</h3>
                <p style="margin: 0; opacity: 0.9;">Entradas</p>
                <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-dollar-sign"></i> ₡1,250,000 invertido
                </small>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--coral) 0%, #c75a3a 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-arrow-up" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">20</h3>
                <p style="margin: 0; opacity: 0.9;">Salidas</p>
                <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-box"></i> Consumo en producción
                </small>
            </div>

            <div class="feature-card" style="background: linear-gradient(135deg, var(--amber) 0%, var(--coral) 100%); color: white;">
                <div class="feature-icon" style="background: rgba(255,255,255,0.2); margin: 0 auto 1.5rem;">
                    <i class="fas fa-chart-line" style="color: white;"></i>
                </div>
                <h3 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">2.4</h3>
                <p style="margin: 0; opacity: 0.9;">Promedio Diario</p>
                <small style="opacity: 0.8; display: block; margin-top: 0.5rem;">
                    <i class="fas fa-arrow-up"></i> +15% vs mes anterior
                </small>
            </div>
        </div>

        <!-- Filtros y Búsqueda -->
        <div class="contact-form-wrapper" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 1.5rem;">
                <div class="form-group">
                    <label>
                        <i class="fas fa-search"></i> Buscar por Insumo
                    </label>
                    <input type="text"
                           id="buscarInsumo"
                           placeholder="Nombre del insumo..."
                           class="form-control">
                </div>

                <div class="form-group">
                    <label>
                        <i class="fas fa-filter"></i> Tipo de Movimiento
                    </label>
                    <select id="filtroTipo" class="form-control">
                        <option value="">Todos los movimientos</option>
                        <option value="Entrada">Entradas</option>
                        <option value="Salida">Salidas</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>
                        <i class="fas fa-calendar"></i> Fecha Desde
                    </label>
                    <input type="date" id="fechaDesde" class="form-control">
                </div>

                <div class="form-group">
                    <label>
                        <i class="fas fa-calendar"></i> Fecha Hasta
                    </label>
                    <input type="date" id="fechaHasta" class="form-control">
                </div>
            </div>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <button onclick="aplicarFiltros()" class="btn btn-primary btn-3d">
                    <span><i class="fas fa-search"></i> Aplicar Filtros</span>
                </button>
                <button onclick="limpiarFiltros()" class="btn btn-secondary">
                    <span><i class="fas fa-times"></i> Limpiar</span>
                </button>
                <button onclick="exportarExcel()" class="btn" style="background: var(--green); color: white; border: none;">
                    <span><i class="fas fa-file-excel"></i> Exportar a Excel</span>
                </button>
            </div>
        </div>

        <!-- Tabla de Historial -->
        <div style="background: var(--white); border-radius: 25px; box-shadow: var(--shadow-lg); overflow: hidden;" data-aos="fade-up">
            <div class="table-responsive">
                <table id="tablaHistorial" style="margin-bottom: 0; width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, var(--teal) 0%, var(--dark-teal) 100%);">
                        <tr>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">#</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Fecha y Hora</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Insumo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Tipo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Cantidad</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Unidad</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Costo Total</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none;">Motivo</th>
                            <th style="padding: 1.2rem; color: var(--white); font-weight: 600; border: none; text-align: center;">Usuario</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var movimientosDemo = new List<dynamic>
                                                {
                                                new { Id = 48, Fecha = "25/11/2025 14:30", Insumo = "Harina de Trigo", Tipo = "Salida", Cantidad = 5.00m, Unidad = "kg", Costo = 12500.00m, Motivo = "Preparación de pasteles", Usuario = "Admin" },
                                                new { Id = 47, Fecha = "25/11/2025 10:15", Insumo = "Azúcar Blanca", Tipo = "Entrada", Cantidad = 20.00m, Unidad = "kg", Costo = 24000.00m, Motivo = "Compra a proveedor ABC", Usuario = "Admin" },
                                                new { Id = 46, Fecha = "25/11/2025 09:00", Insumo = "Mantequilla", Tipo = "Salida", Cantidad = 2.00m, Unidad = "kg", Costo = 9000.00m, Motivo = "Producción de galletas", Usuario = "Chef David" },
                                                new { Id = 45, Fecha = "24/11/2025 16:45", Insumo = "Chocolate en Polvo", Tipo = "Entrada", Cantidad = 5.00m, Unidad = "kg", Costo = 40000.00m, Motivo = "Reposición de inventario", Usuario = "Admin" },
                                                new { Id = 44, Fecha = "24/11/2025 15:20", Insumo = "Leche Entera", Tipo = "Salida", Cantidad = 3.00m, Unidad = "L", Costo = 4500.00m, Motivo = "Elaboración de cremas", Usuario = "Chef Kenneth" }
                                                };
                        }

                        @foreach (var mov in movimientosDemo)
                        {
                            var esEntrada = mov.Tipo == "Entrada";
                            var colorTipo = esEntrada ? "var(--green)" : "var(--coral)";
                            var iconoTipo = esEntrada ? "fa-arrow-down" : "fa-arrow-up";
                            var signo = esEntrada ? "+" : "-";

                            <tr class="fila-movimiento" data-tipo="@mov.Tipo" data-insumo="@mov.Insumo.ToLower()" data-fecha="@mov.Fecha"
                                style="border-bottom: 1px solid rgba(32, 116, 118, 0.1); transition: all 0.3s;">
                                <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 600;">@mov.Id</td>
                                <td style="padding: 1.2rem; color: var(--black);">
                                    <div style="display: flex; flex-direction: column;">
                                        <span style="font-weight: 600; color: var(--dark-teal);">@mov.Fecha.Split(' ')[0]</span>
                                        <span style="font-size: 0.85rem; color: var(--gray);">@mov.Fecha.Split(' ')[1]</span>
                                    </div>
                                </td>
                                <td style="padding: 1.2rem; color: var(--dark-teal); font-weight: 500;">@mov.Insumo</td>
                                <td style="padding: 1.2rem;">
                                    <span style="background: @colorTipo; color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.3rem;">
                                        <i class="fas @iconoTipo"></i> @mov.Tipo
                                    </span>
                                </td>
                                <td style="padding: 1.2rem; color: @colorTipo; font-weight: 700; font-size: 1.1rem;">@signo@mov.Cantidad.ToString("N2")</td>
                                <td style="padding: 1.2rem; color: var(--black);">@mov.Unidad</td>
                                <td style="padding: 1.2rem; color: var(--coral); font-weight: 600;">
                                    @if (esEntrada)
                                    {
                                        <span>₡@mov.Costo.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span style="opacity: 0.5;">-</span>
                                    }
                                </td>
                                <td style="padding: 1.2rem; color: var(--black); max-width: 300px;">@mov.Motivo</td>
                                <td style="padding: 1.2rem; text-align: center;">
                                    <div style="display: inline-flex; align-items: center; gap: 0.5rem; background: var(--cream); padding: 0.5rem 1rem; border-radius: 20px;">
                                        <i class="fas fa-user-circle" style="color: var(--teal);"></i>
                                        <span style="color: var(--dark-teal); font-size: 0.9rem; font-weight: 500;">@mov.Usuario</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer de paginación -->
            <div style="padding: 1.5rem; background: var(--cream); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid rgba(32, 116, 118, 0.1); flex-wrap: wrap; gap: 1rem;">
                <div style="color: var(--dark-teal); font-size: 0.95rem;">
                    Mostrando <strong><span id="startRecord">1</span>-<span id="endRecord">5</span></strong> de <strong id="totalRecords">5</strong> movimientos
                </div>
                <div style="display: flex; gap: 0.5rem;">
                    <button id="btnAnterior" class="btn btn-secondary" onclick="paginaAnterior()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                        &lt; Anterior
                    </button>
                    <button id="btnSiguiente" class="btn btn-primary" onclick="paginaSiguiente()" style="border-radius: 50px; padding: 0.8rem 2rem;">
                        Siguiente &gt;
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/insumo.js"></script>
}