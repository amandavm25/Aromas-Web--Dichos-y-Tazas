@model List<AromasWeb.Abstracciones.ModeloUI.Insumo>

@{
    ViewBag.Title = "Inventario de Insumos";
    var categorias = ViewBag.TodasCategorias as List<AromasWeb.Abstracciones.ModeloUI.CategoriaInsumo> ?? new List<AromasWeb.Abstracciones.ModeloUI.CategoriaInsumo>();
}

<!-- Hero Section -->
<section class="hero" style="min-height: 40vh; padding: 8rem 0 4rem;">
    <div class="hero-bg-overlay"></div>
    <div class="hero-leaves"></div>
    <div class="container hero-container" style="display: block;">
        <div class="hero-content" data-aos="fade-up" style="text-align: center;">
            <span class="hero-badge">
                <i class="fas fa-warehouse"></i>
                Gestión de Inventario
            </span>
            <h1 class="hero-title" style="font-size: 3.5rem;">
                Inventario de Insumos
            </h1>
            <p class="hero-subtitle">
                Administra y visualiza todos los insumos del negocio
            </p>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section style="padding: 4rem 0; background: var(--cream);">
    <div class="container" style="max-width: 1600px;">

        <!-- Resumen del Inventario -->
        <div class="features-grid" style="margin-bottom: 3rem;" data-aos="fade-up">
            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3 id="valorTotal" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @if (Model != null && Model.Any())
                    {
                        @:₡@(Model.Sum(i => i.ValorTotal).ToString("N2"))
                    }
                    else
                    {
                        @:₡0.00
                    }
                </h3>
                <p style="margin: 0.5rem 0;">Valor Total del Inventario</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-icon">
                    <i class="fas fa-boxes"></i>
                </div>
                <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">@(Model?.Count ?? 0)</h3>
                <p style="margin: 0.5rem 0;">Total de Insumos</p>
            </div>

            <div class="feature-card" style="background: white;" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h3 id="stockBajoCount" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem;">
                    @(Model?.Count(i => i.RequiereAlerta) ?? 0)
                </h3>
                <p style="margin: 0.5rem 0;">Alertas de Stock Bajo</p>
            </div>
        </div>

        <!-- Barra de búsqueda y botones -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; gap: 1rem; flex-wrap: wrap;">
            <form method="get" action="@Url.Action("ListadoInsumos", "Insumo")" style="position: relative; flex: 1; min-width: 300px; display: flex; gap: 0.5rem;">
                <div style="position: relative; flex: 1;">
                    <i class="fas fa-search" style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); color: var(--olive-green); z-index: 1;"></i>
                    <input type="text"
                           name="buscar"
                           value="@ViewBag.Buscar"
                           placeholder="Buscar por nombre, unidad de medida..."
                           style="width: 100%; padding: 1rem 1rem 1rem 50px; border: 2px solid var(--cream); border-radius: 50px; font-size: 1rem; background: var(--white); transition: all 0.3s; box-shadow: var(--shadow-sm);">
                </div>
                <button type="submit" class="btn btn-primary" style="border-radius: 50px; padding: 0 2rem; white-space: nowrap;">
                    <span><i class="fas fa-search"></i> Buscar</span>
                </button>
            </form>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="@Url.Action("HistorialMovimientos", "MovimientoInsumo")" class="btn btn-secondary" style="white-space: nowrap;">
                    <span><i class="fas fa-history"></i> Historial</span>
                </a>
                <a href="@Url.Action("CrearInsumo", "Insumo")" class="btn btn-primary btn-3d" style="white-space: nowrap;">
                    <span><i class="fas fa-plus"></i> Agregar Insumo</span>
                </a>
            </div>
        </div>

        <!-- Información de búsqueda -->
        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string))
        {
            <div class="feature-card" style="margin-bottom: 2rem; text-align: left;" data-aos="fade-up">
                <p style="margin: 0; color: var(--dark-green); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-info-circle" style="color: var(--gold-bright);"></i>
                    Mostrando resultados para <strong style="color: var(--gold-bright);">"@ViewBag.Buscar"</strong>
                    - <strong>@(Model?.Count ?? 0)</strong> insumo(s) encontrado(s)
                </p>
            </div>
        }

        <!-- Filtro por categoría -->
        <div style="margin-bottom: 3rem;" data-aos="fade-up">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                <span style="color: var(--dark-green); font-weight: 600; margin-right: 0.5rem; font-family: var(--font-primary);">
                    <i class="fas fa-filter" style="color: var(--gold-bright);"></i> Filtrar por categoría:
                </span>
                <a href="@Url.Action("ListadoInsumos", "Insumo")"
                   class="btn @(ViewBag.Categoria == null && string.IsNullOrWhiteSpace(ViewBag.Buscar as string) ? "btn-primary" : "btn-secondary")"
                   style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                    <span><i class="fas fa-th"></i> Todas</span>
                </a>

                @foreach (var categoria in categorias)
                {
                    <a href="@Url.Action("ListadoInsumos", "Insumo", new { categoria = categoria.IdCategoria })"
                       class="btn @(ViewBag.Categoria == categoria.IdCategoria ? "btn-primary" : "btn-secondary")"
                       style="border-radius: 50px; padding: 0.6rem 1.5rem; font-size: 0.9rem;">
                        <span>@categoria.NombreCategoria</span>
                    </a>
                }
            </div>
        </div>

        <!-- Layout Principal: Tabla + Alertas -->
        <div style="display: grid; grid-template-columns: 1fr 320px; gap: 2rem; align-items: start;" data-aos="fade-up">

            <!-- Tabla Principal -->
            <div class="admin-table-container">
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Unidad</th>
                                <th>Costo</th>
                                <th>Cantidad</th>
                                <th>Stock</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int contador = 1;
                                @foreach (var insumo in Model)
                                {
                                    <tr>
                                        <td style="padding: 1.2rem; text-align: center;">
                                            <span style="color: var(--charcoal); font-weight: 600;">@contador</span>
                                        </td>
                                        <td class="td-nombre">
                                            <i class="fas fa-box"></i>
                                            @insumo.NombreInsumo
                                        </td>
                                        <td>@insumo.UnidadMedida</td>
                                        <td style="font-weight: 600;">@insumo.CostoUnitario.ToString("C2")</td>
                                        <td>
                                            <span class="badge-cantidad">
                                                @insumo.CantidadDisponible.ToString("N2")
                                            </span>
                                        </td>
                                        <td>
                                            @if (insumo.EstadoStock == "Bajo")
                                            {
                                                <span class="badge-stock bajo">
                                                    <i class="fas fa-exclamation-triangle"></i> Bajo
                                                </span>
                                            }
                                            else if (insumo.EstadoStock == "Medio")
                                            {
                                                <span class="badge-stock medio">
                                                    <i class="fas fa-exclamation-circle"></i> Medio
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge-stock normal">
                                                    <i class="fas fa-check-circle"></i> Normal
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (insumo.Estado)
                                            {
                                                <span class="badge-estado activo">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge-estado inactivo">Inactivo</span>
                                            }
                                        </td>
                                        <td style="text-align: center; white-space: nowrap;">
                                            <button type="button"
                                                    class="btn-table-action btn-table-edit"
                                                    onclick="window.location.href='@Url.Action("EditarInsumo", "Insumo", new { id = insumo.IdInsumo })'"
                                                    title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn-table-action btn-table-view btn-detalles"
                                                    data-id="@insumo.IdInsumo"
                                                    data-nombre="@insumo.NombreInsumo"
                                                    data-unidad="@insumo.UnidadMedida"
                                                    data-categoria="@(categorias.FirstOrDefault(c => c.IdCategoria == insumo.IdCategoria)?.NombreCategoria ?? "Sin categoría")"
                                                    data-costo="@insumo.CostoUnitario.ToString("C2")"
                                                    data-cantidad="@insumo.CantidadDisponible.ToString("N2")"
                                                    data-stockminimo="@insumo.StockMinimo.ToString("N2")"
                                                    data-estado="@(insumo.Estado ? "Activo" : "Inactivo")"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetallesInsumo"
                                                    title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    contador++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="admin-table-empty">
                                        <i class="fas fa-inbox"></i>
                                        <p>No se encontraron insumos</p>
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Buscar as string) || ViewBag.Categoria != null)
                                        {
                                            <p class="empty-subtitle">Intenta con otros filtros o términos de búsqueda</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Footer de paginación -->
                <div class="admin-table-footer">
                    <div class="admin-table-footer-text">
                        Mostrando <strong id="startRecord">0</strong> - <strong id="endRecord">0</strong> de <strong id="totalRecords">0</strong> registros
                    </div>

                    <div class="pagination-buttons">
                        <button id="btnAnterior" class="pagination-btn">
                            <i class="fas fa-chevron-left"></i> Anterior
                        </button>
                        <button id="btnSiguiente" class="pagination-btn">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Panel de Alertas (Derecha) -->
            <div style="position: sticky; top: 100px;">
                <!-- Alertas de Stock Bajo -->
                <div style="background: var(--white); border-radius: 20px; box-shadow: var(--shadow-lg); overflow: hidden;">
                    <div style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white; padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 0.7rem; margin-bottom: 0.5rem;">
                            <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem;"></i>
                            <div>
                                <h5 style="margin: 0; font-weight: 600; color: white; font-size: 1.1rem;">Stock Bajo</h5>
                                <p style="margin: 0; opacity: 0.9; font-size: 0.85rem;">Atención requerida</p>
                            </div>
                        </div>
                    </div>
                    <div style="padding: 1rem; display: grid; gap: 0.7rem; max-height: 600px; overflow-y: auto;">
                        @if (Model != null && Model.Any(i => i.RequiereAlerta))
                        {
                            @foreach (var insumo in Model.Where(i => i.RequiereAlerta))
                            {
                                var porcentaje = insumo.StockMinimo > 0 ? (int)((insumo.CantidadDisponible / insumo.StockMinimo) * 100) : 0;
                                var colorBarra = porcentaje <= 50 ? "#e74c3c" : "#f39c12";

                                <div style="background: var(--cream); padding: 1rem; border-radius: 10px; border-left: 3px solid #e74c3c;">
                                    <div style="margin-bottom: 0.5rem;">
                                        <strong style="color: var(--dark-green); font-size: 0.95rem;">@insumo.NombreInsumo</strong>
                                    </div>
                                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.85rem; color: var(--charcoal); margin-bottom: 0.5rem;">
                                        <span>@insumo.CantidadDisponible.ToString("N2") / @insumo.StockMinimo.ToString("N2")</span>
                                        <span style="font-weight: 600; color: #e74c3c;">@porcentaje%</span>
                                    </div>
                                    <div style="background: #f5f5f5; height: 6px; border-radius: 3px; overflow: hidden;">
                                        <div style="width: @porcentaje%; height: 100%; background: @colorBarra; transition: width 0.3s;"></div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div style="text-align: center; padding: 2rem; color: var(--charcoal);">
                                <i class="fas fa-check-circle" style="font-size: 2rem; color: #27ae60; margin-bottom: 0.5rem; display: block;"></i>
                                <p style="margin: 0;">No hay alertas</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ModalDetallesInsumo" />

@section Scripts {
    <script src="~/js/insumo.js"></script>
}